<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <com.videoai.aivpcore.editorx.board.clip.main.FuncListView
        android:id="@id/recyclerView"
        android:layout_width="0.0dip"
        android:layout_height="@dimen/px48"
        android:layout_marginBottom="@dimen/px60"
        app:layout_constraintBottom_toBottomOf="parrent"
        app:layout_constraintEnd_toEndOf="parrent"
        app:layout_constraintStart_toStartOf="parrent" />
    <LinearLayout
        android:id="@id/layoutThemeEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/px60"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parrent"
        app:layout_constraintEnd_toEndOf="parrent"
        app:layout_constraintStart_toStartOf="parrent">
        <TextView
            android:id="@id/tvThemeTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/xiaoying_clip_from_theme"
            android:textColor="@color/color_525252"
            android:textSize="@dimen/sp10" />
        <com.videoai.aivpcore.xyui.RoundedTextView
            android:id="@id/tv_edit_theme"
            android:layout_width="wrap_content"
            android:layout_height="32.0dip"
            android:layout_marginTop="10.0dip"
            android:gravity="center"
            android:paddingLeft="24.0dip"
            android:paddingTop="5.0dip"
            android:paddingRight="24.0dip"
            android:paddingBottom="5.0dip"
            android:text="@string/xiaoying_str_edit_theme"
            android:textColor="@color/color_808080"
            android:textSize="@dimen/sp14"
            android:textStyle="bold"
            app:VS_CornerRadius="16.0dip"
            app:VS_SolidColor="@color/color_212121" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>