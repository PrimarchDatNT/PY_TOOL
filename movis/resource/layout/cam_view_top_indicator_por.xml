<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ProgressBar
            android:id="@+id/cam_music_progressbar"
            style="@style/xiaoying_music_progressBar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:max="1000"
            android:visibility="invisible" />
    </RelativeLayout>
    <ImageView
        android:id="@+id/img_back"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="8.0dip"
        android:layout_marginLeft="8.0dip"
        android:scaleType="centerInside"
        android:src="@drawable/v4_xiaoying_cam_btn_cam_cancel_selector" />
    <TextView
        android:id="@+id/cam_btn_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="8.0dip"
        android:layout_marginRight="8.0dip"
        android:fontFamily="sans-serif"
        android:text="@string/xiaoying_str_com_next_step_title"
        android:textColor="@color/color_ff774e"
        android:textSize="17.0sp" />
    <RelativeLayout
        android:id="@+id/duration_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">
        <RelativeLayout
            android:id="@+id/time_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true">
            <TextView
                android:id="@+id/txt_record_mode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textSize="17.0sp"
                android:visibility="invisible" />
            <TextView
                android:id="@+id/cam_recording_total_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:singleLine="true"
                android:text="12.1"
                android:textColor="@color/white"
                android:textSize="17.0sp"
                android:visibility="visible" />
            <LinearLayout
                android:id="@+id/cam_pip_duration_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:visibility="gone">
                <TextView
                    android:id="@+id/txt_current_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:singleLine="true"
                    android:text="0.0"
                    android:textColor="@color/white"
                    android:textSize="24.0sp" />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="20.0dip"
                    android:layout_marginStart="5.0dip"
                    android:layout_marginLeft="5.0dip"
                    android:layout_marginEnd="5.0dip"
                    android:layout_marginRight="5.0dip"
                    android:src="@drawable/xiaoying_cam_time_line" />
                <TextView
                    android:id="@+id/txt_total_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="0.0"
                    android:textColor="#ff899aad"
                    android:textSize="15.0sp" />
            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/time_layout"
            android:layout_toRightOf="@id/time_layout">
            <TextView
                android:id="@+id/cam_clip_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="2.0dip"
                android:layout_marginLeft="2.0dip"
                android:background="@drawable/v5_xiaoying_cam_clipcount_text_bg_shape"
                android:gravity="center"
                android:minWidth="20.0dip"
                android:paddingStart="1.0dip"
                android:paddingLeft="1.0dip"
                android:paddingTop="2.0dip"
                android:paddingEnd="1.0dip"
                android:paddingRight="1.0dip"
                android:paddingBottom="2.0dip"
                android:text="000"
                android:textColor="@color/color_ff774e"
                android:textSize="12.0sp" />
        </RelativeLayout>
    </RelativeLayout>
    <ImageView
        android:id="@+id/img_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5.0dip"
        android:src="@drawable/v4_xiaoying_cam_time_arrow" />
</RelativeLayout>