            android:id="@+id/tt_pangle_ad_close_layout"
            android:layout_width="20.0dip"
            android:layout_height="20.0dip"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="18.0dip"
            android:layout_marginEnd="18.0dip"
            android:layout_marginRight="18.0dip"
            android:background="@drawable/tt_pangle_ad_mute_btn_bg"
            android:gravity="center">
            <ImageView
                android:id="@+id/tt_video_ad_close"
                android:layout_width="8.0dip"
                android:layout_height="8.0dip"
                android:src="@drawable/tt_pangle_ad_close_drawable" />
        </RelativeLayout>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/tt_pangle_ad_content_layout"
        android:layout_width="match_parent"
        android:layout_height="0.0dip"
        android:layout_weight="1.91"
        android:orientation="vertical">
