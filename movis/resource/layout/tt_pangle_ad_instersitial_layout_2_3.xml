            android:id="@+id/tt_pangle_ad_icon"
            android:layout_width="98.0dip"
            android:layout_height="98.0dip"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="34.0dip"
            android:scaleType="fitXY" />
        <TextView
            android:id="@+id/tt_pangle_ad_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="30.0dip"
            android:layout_marginTop="18.0dip"
            android:layout_marginRight="30.0dip"
            android:ellipsize="end"
            android:maxLines="1"
            android:textSize="20.0sp" />
        <com.bytedance.sdk.openadsdk.core.widget.TTRatingBar2
            android:id="@+id/tt_pangle_ad_score"
            android:layout_width="wrap_content"
            android:layout_height="16.0dip"
            android:layout_gravity="center"
            android:layout_marginTop="12.0dip" />
        <TextView
            android:id="@+id/tt_pangle_ad_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="20.0dip"
            android:layout_marginTop="13.0dip"
            android:layout_marginRight="20.0dip"
            android:gravity="center"
            android:textColor="#54000000"
            android:textSize="16.0sp" />
    </LinearLayout>
    <Button
        android:id="@+id/tt_pangle_ad_btn"
        android:layout_width="match_parent"
        android:layout_height="48.0dip"
        android:layout_marginLeft="25.0dip"
        android:layout_marginEnd="25.0dip"
        android:layout_marginRight="25.0dip"
        android:layout_marginBottom="28.0dip"
        android:background="@drawable/tt_pangle_btn_bg"
        android:gravity="center"
        android:text="pangle"
        android:textColor="#ffffffff"
        android:textSize="14.0sp" />
</LinearLayout>