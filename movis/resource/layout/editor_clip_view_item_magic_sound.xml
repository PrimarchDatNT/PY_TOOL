<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:clipToPadding="false"
    android:paddingTop="12.0dip"
    android:paddingRight="7.0dip">
    <FrameLayout
        android:id="@+id/fl_icon"
        android:layout_width="68.0dip"
        android:layout_height="68.0dip">
        <ImageView
            android:id="@+id/iv_icon"
            android:layout_width="62.0dip"
            android:layout_height="62.0dip"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            android:src="@drawable/editor_layer_self_magic_sound" />
        <View
            android:id="@+id/v_focus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/editor_layer_magic_sound_focus"
            android:rotation="-90.0"
