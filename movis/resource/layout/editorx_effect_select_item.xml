<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_layout"
    android:layout_width="@dimen/px80"
    android:layout_height="@dimen/px80"
    android:background="@drawable/editorx_shape_effect_item_bg_unchoose">
    <com.videoai.mobile.component.imageview.DynamicLoadingImageView
        android:id="@+id/div_roll_thumb"
        android:layout_width="@dimen/px60"
        android:layout_height="@dimen/px60"
        android:layout_centerInParent="true"
        android:background="@color/transparent"
        app:roundedCornerRadius="@dimen/px6" />
    <ImageView
        android:id="@+id/iv_selected"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible" />
    <ImageView
        android:id="@+id/iv_vip"
        android:layout_width="@dimen/px16"
        android:layout_height="@dimen/px16"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/px2"
        android:src="@drawable/ic_diamon_premium" />
    <ProgressBar
        android:id="@+id/progress_bar"
        style="?android:progressBarStyleHorizontal"
        android:layout_width="@dimen/px48"
        android:layout_height="@dimen/px2"
        android:layout_centerInParent="true"
        android:progressDrawable="@drawable/progress_horizontal_bg"
        android:visibility="invisible" />
</RelativeLayout>