<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:autofit="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@id/studio_img_project_thumb"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="34.0dip"
        android:layout_alignParentBottom="true"
        android:background="@drawable/editor_bg_studio_graic"
        android:paddingStart="10.0dip"
        android:paddingLeft="10.0dip"
        android:paddingEnd="10.0dip"
        android:paddingRight="10.0dip"
        android:paddingBottom="6.0dip">
        <com.videoai.aivpcore.common.ui.widgets.autofittextview.AutofitTextView
            android:id="@id/studio_item_time_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="0:03"
            android:textColor="@color/white"
            android:textSize="13.0sp"
            autofit:minTextSize="8.0sp" />
        <ImageView
            android:id="@id/studio_img_delete"
            android:layout_width="20.0dip"
            android:layout_height="20.0dip"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/com_md_ripple_transparent_bg_drawable"
            android:src="@drawable/editor_draft_white_delete_icon" />
    </RelativeLayout>
    <ImageView
        android:id="@id/studio_del_select"
        android:layout_width="44.0dip"
        android:layout_height="44.0dip"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:scaleType="center"
        android:src="@drawable/edit_btn_del_selector"
        android:visibility="gone" />
</RelativeLayout>