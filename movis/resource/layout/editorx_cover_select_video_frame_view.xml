<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_dcolor_background"
    android:orientation="vertical"
    android:visibility="visible"
    app:layout_constraintBottom_toBottomOf="parrent"
    app:layout_constraintEnd_toEndOf="parrent"
    app:layout_constraintHeight_percent="0.875"
    app:layout_constraintStart_toStartOf="parrent"
    app:layout_constraintVertical_bias="0.0">
    <FrameLayout
        android:id="@+id/cover_player_container"
        android:layout_width="match_parent"
        android:layout_height="0.0dip"
        android:layout_weight="1.0" />
    <TextView
        android:id="@+id/cover_hint_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/px12"
        android:layout_marginBottom="@dimen/px12"
        android:text="@string/xiaoying_str_select_cover_swipe_desc"
        android:textColor="@color/white"
        android:textSize="@dimen/sp12" />
    <FrameLayout
        android:id="@+id/cover_timeline_container"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px100" />
</LinearLayout>