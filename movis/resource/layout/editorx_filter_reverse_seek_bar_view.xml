<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/px64"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/fsb_top_img"
        android:layout_width="@dimen/px24"
        android:layout_height="@dimen/px24"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/px12"
        android:layout_marginBottom="@dimen/px12"
        android:scaleType="centerInside" />
    <LinearLayout
        android:id="@+id/fsb_top_text_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px48"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">
        <TextView
            android:id="@+id/fsb_top_name_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/app_dcolor_indicator_2"
            android:textSize="@dimen/sp10" />
        <TextView
            android:id="@+id/fsb_top_value_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/px2"
            android:textColor="@color/white"
            android:textSize="@dimen/sp10" />
    </LinearLayout>
    <com.videoai.aivpcore.editorx.widget.seekbar.ReverseSeekBar
        android:id="@+id/fsb_reverse_ver_seek_bar"
        android:layout_width="@dimen/px42"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/px48"
        android:layout_marginBottom="@dimen/px12"
        android:paddingStart="@dimen/px14"
        android:paddingEnd="@dimen/px14"
        android:visibility="gone"
        app:rsb_bg_color="@color/app_dcolor_indicator"
        app:rsb_bg_radius="@dimen/px16"
        app:rsb_max_progress="100"
        app:rsb_orientation="bl7"
        app:rsb_point_color="@color/colorPrimary"
        app:rsb_point_radius="@dimen/px8"
        app:rsb_progress="0"
        app:rsb_progress_color="@color/colorPrimary"
        app:rsb_progress_radius="@dimen/px12" />
    <com.videoai.aivpcore.editorx.widget.seekbar.VHSeekBar
        android:id="@+id/fsb_vsb_ver_seek_bar"
        android:layout_width="@dimen/px42"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/px48"
        android:layout_marginBottom="@dimen/px12"
        android:paddingStart="@dimen/px14"
        android:paddingEnd="@dimen/px14"
        app:vh_bg_color="@color/app_dcolor_indicator"
        app:vh_bg_radius="@dimen/px16"
        app:vh_max_progress="100"
        app:vh_orientation="bl7"
        app:vh_point_color="@color/colorPrimary"
        app:vh_point_radius="@dimen/px8"
        app:vh_progress="0"
        app:vh_progress_color="@color/colorPrimary"
        app:vh_progress_radius="@dimen/px12" />
</FrameLayout>