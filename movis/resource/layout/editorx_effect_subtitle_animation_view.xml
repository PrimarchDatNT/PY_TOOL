<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/layout_click"
        android:layout_width="match_parent"
        android:layout_height="192.0dip"
        android:background="@color/app_dcolor_background"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15.0dip"
            android:layout_marginTop="24.0dip"
            android:text="@string/xiaoying_str_edit_effect_suntitle_font_animation_in"
            android:textColor="@color/color_808080"
            android:textSize="14.0sp"
            android:textStyle="bold" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="28.0dip"
            android:layout_marginStart="15.0dip"
            android:layout_marginTop="16.0dip"
            android:layout_marginEnd="15.0dip"
            android:background="@drawable/editorx_shape_subtitle_font_shadow"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btn_off"
                android:layout_width="0.0dip"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:background="@drawable/editorx_shape_subtitle_shadow_unchoose"
                android:text="@string/xiaoying_str_com_state_off"
                android:textColor="@color/color_363636"
                android:textSize="12.0sp" />
            <Button
                android:id="@+id/btn_on"
                android:layout_width="0.0dip"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:background="@drawable/editorx_shape_subtitle_shadow_choose"
                android:text="@string/xiaoying_str_edit_effect_suntitle_font_shadow_on"
                android:textColor="@color/color_363636"
                android:textSize="12.0sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>