<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1affffff">
    <ImageView
        android:id="@+id/pic_item_none"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:scaleType="center"
        android:src="@drawable/editor_icon_gallery_board_none_tool"
        android:visibility="visible" />
    <TextView
        android:id="@+id/collage_pic_item_other_album"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:text="@string/xiaoying_str_edit_gallery_tab_others"
        android:textColor="@android:color/white"
        android:textSize="14.0sp"
        android:visibility="gone" />
    <ImageView
        android:id="@+id/collage_pic_item_cover"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:scaleType="centerCrop"
        android:src="@drawable/xiaoying_com_default_pic_bg" />
    <ImageView
        android:id="@+id/pic_item_focus_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:background="@drawable/editor_shape_item_focus_custom"
        android:scaleType="center"
        android:src="@drawable/editor_icon_gallery_board_item_focus"
        android:visibility="gone" />
</RelativeLayout>