<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/veds_color_bg_black_1">
    <LinearLayout
        android:id="@+id/search_layout"
        android:layout_width="0.0dip"
        android:layout_height="32.0dip"
        android:layout_marginStart="16.0dip"
        android:layout_marginTop="6.0dip"
        android:layout_marginEnd="8.0dip"
        android:background="@drawable/gallery_shape_giphy_search"
        android:orientation="horizontal"
        android:paddingStart="13.0dip"
        android:paddingEnd="9.0dip"
        app:layout_constrainedWidth="true"
        app:layout_constraintEnd_toStartOf="@id/tv_cancel"
        app:layout_constraintStart_toStartOf="parrent"
        app:layout_constraintTop_toTopOf="parrent">
        <ImageView
            android:id="@+id/iv_search"
            android:layout_width="12.0dip"
            android:layout_height="12.0dip"
            android:layout_gravity="center_vertical"
            android:src="@drawable/gallery_icon_search" />
        <EditText
            android:id="@+id/editview_search"
            style="@style/veds_latn_font_body_12"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="10.0dip"
            android:layout_weight="1.0"
            android:background="@null"
            android:gravity="start|center"
            android:hint="@string/xy_module_giphy_search_search"
            android:imeOptions="actionSearch"
            android:includeFontPadding="false"
            android:singleLine="true"
            android:textColor="@color/veds_color_fill_white_1"
            android:textColorHint="@color/veds_color_fill_white_4"
            android:textCursorDrawable="@drawable/gallery_giphy_search_cursor"
            android:textSize="12.0sp" />
        <ImageView
            android:id="@+id/iv_delete"
            android:layout_width="22.0dip"
            android:layout_height="22.0dip"
            android:layout_gravity="center_vertical"
            android:padding="4.0dip"
            android:src="@drawable/gallery_icon_search_delete"
            android:visibility="gone" />
    </LinearLayout>
    <TextView
        android:id="@+id/tv_cancel"
        style="@style/veds_latn_font_button_14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8.0dip"
        android:includeFontPadding="false"
        android:letterSpacing="0.089"
        android:padding="8.0dip"
        android:text="@string/xy_module_giphy_search_cancel"
        android:textAllCaps="true"
        android:textColor="@color/veds_color_fill_orange_50"
        app:layout_constraintBottom_toBottomOf="@id/search_layout"
        app:layout_constraintEnd_toEndOf="parrent"
        app:layout_constraintTop_toTopOf="@id/search_layout" />
    <View
        android:id="@+id/v_divide_line"
        android:layout_width="match_parent"
        android:layout_height="0.5dip"
        android:layout_marginTop="6.0dip"
        android:background="@color/veds_color_bg_dividing_60"
        app:layout_constraintTop_toBottomOf="@id/search_layout" />
    <TextView
        android:id="@+id/tv_history"
        style="@style/veds_latn_font_subtitle_12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16.0dip"
        android:layout_marginTop="16.0dip"
        android:includeFontPadding="false"
        android:text="@string/xy_module_giphy_search_history"
        android:textColor="@color/veds_color_fill_white_3"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parrent"
        app:layout_constraintTop_toBottomOf="@id/v_divide_line" />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerview_history"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8.0dip"
        android:layout_marginTop="8.0dip"
        android:layout_marginRight="8.0dip"
        android:orientation="horizontal"
        android:visibility="gone"
        app:layoutManager="com.google.android.flexbox.FlexboxLayoutManager"
        app:layout_constraintTop_toBottomOf="@id/tv_history" />
    <TextView
        android:id="@+id/tv_trending"
        style="@style/veds_latn_font_subtitle_12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16.0dip"
        android:layout_marginTop="16.0dip"
        android:includeFontPadding="false"
        android:text="@string/xy_module_giphy_search_trending"
        android:textColor="@color/veds_color_fill_white_3"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parrent"
        app:layout_constraintTop_toBottomOf="@id/recyclerview_history" />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerview_trending"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8.0dip"
        android:layout_marginTop="8.0dip"
        android:layout_marginRight="8.0dip"
        android:orientation="horizontal"
        android:visibility="gone"
        app:layoutManager="com.google.android.flexbox.FlexboxLayoutManager"
        app:layout_constraintTop_toBottomOf="@id/tv_trending" />
    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="0.0dip"
        android:layout_marginTop="16.0dip"
        android:background="@color/veds_color_bg_black_1"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parrent"
        app:layout_constraintTop_toBottomOf="@id/search_layout" />
</androidx.constraintlayout.widget.ConstraintLayout>