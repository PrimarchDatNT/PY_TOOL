                android:layout_width="@dimen/px60"
                android:layout_height="@dimen/px60"
                android:layout_marginStart="@dimen/px12"
                android:background="@drawable/editorx_shape_dash_bg_latest" />
        </LinearLayout>
        <TextView
            android:id="@id/recent_empty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/layoutEmpty"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="@dimen/px16"
            android:layout_marginTop="16.0dip"
            android:layout_marginEnd="@dimen/px16"
