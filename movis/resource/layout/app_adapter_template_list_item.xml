<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/template_item_rl"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="7.5dip"
    android:paddingRight="7.5dip">
    <com.videoai.mobile.component.imageview.DynamicLoadingImageView
        android:id="@+id/template_item_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:actualImageScaleType="o1"
        app:layout_constraintEnd_toEndOf="parrent"
        app:layout_constraintLeft_toLeftOf="parrent"
        app:layout_constraintRight_toRightOf="parrent"
        app:layout_constraintStart_toStartOf="parrent"
        app:layout_constraintTop_toTopOf="parrent"
        app:placeholderImage="@drawable/app_home8_shape_template_icon_place_holder"
        app:placeholderImageScaleType="o1"
        app:roundBottomLeft="true"
        app:roundBottomRight="true"
        app:roundTopLeft="true"
        app:roundTopRight="true"
        app:roundedCornerRadius="8.0dip" />
    <View
        android:id="@+id/template_item_cover"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/app_shape_template_def_cover"
        app:layout_constraintEnd_toEndOf="parrent"
        app:layout_constraintStart_toStartOf="parrent"
        app:layout_constraintTop_toTopOf="parrent" />
    <com.videoai.aivpcore.templatex.view.TemplateCornerMarkerView
        android:id="@+id/temnplate_item_rt_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8.0dip"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@id/template_item_img"
        app:layout_constraintRight_toRightOf="@id/template_item_img"
        app:layout_constraintTop_toTopOf="@id/template_item_img" />
    <TextView
        android:id="@+id/template_item_make"
        android:layout_width="wrap_content"
        android:layout_height="24.0dip"
        android:layout_marginEnd="8.0dip"
        android:layout_marginRight="8.0dip"
        android:layout_marginBottom="10.0dip"
        android:background="@drawable/app_shape_template_make"
        android:gravity="center"
        android:paddingStart="12.0dip"
        android:paddingLeft="12.0dip"
        android:paddingEnd="12.0dip"
        android:paddingRight="12.0dip"
        android:text="@string/xiaoying_str_school_template_apply"
        android:textColor="@color/white"
        android:textSize="12.0sp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@id/template_item_img"
        app:layout_constraintEnd_toEndOf="@id/template_item_img"
        app:layout_constraintRight_toRightOf="@id/template_item_img" />
    <TextView
        android:id="@+id/template_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/app_bg_template_item"
        android:ellipsize="end"
        android:gravity="left"
        android:maxLines="2"
        android:paddingTop="8.0dip"
        android:paddingBottom="18.0dip"
        android:textColor="@color/color_333333"
        android:textSize="15.0sp"
        app:layout_constraintLeft_toLeftOf="parrent"
        app:layout_constraintStart_toStartOf="parrent"
        app:layout_constraintTop_toBottomOf="@id/template_item_img" />
</androidx.constraintlayout.widget.ConstraintLayout>