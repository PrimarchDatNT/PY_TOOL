<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tv_editor_effect_audio_volume_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/editor_bg_effect_audio_volume_tip"
        android:gravity="center"
        android:paddingStart="8.0dip"
        android:paddingLeft="8.0dip"
        android:paddingEnd="8.0dip"
        android:paddingRight="8.0dip"
        android:paddingBottom="7.0dip"
        android:text="0%"
        android:textColor="@color/black"
        android:textSize="12.0sp"
        android:visibility="invisible" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_editor_effect_audio_volume_tip"
        android:layout_marginTop="5.0dip"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="15.0dip"
        android:paddingLeft="15.0dip"
        android:paddingEnd="15.0dip"
        android:paddingRight="15.0dip">
        <ImageView
            android:layout_width="19.0dip"
            android:layout_height="19.0dip"
            android:scaleType="centerInside"
            android:src="@drawable/editor_icon_tool_mute_on" />
        <SeekBar
            android:id="@+id/seekbar_editor_effect_audio_volume"
            android:layout_width="0.0dip"
            android:layout_height="16.0dip"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="5.0dip"
            android:layout_marginLeft="5.0dip"
            android:layout_weight="1.0"
            android:max="100"
            android:maxHeight="2.0dip"
            android:paddingStart="8.0dip"
            android:paddingLeft="8.0dip"
            android:paddingEnd="8.0dip"
            android:paddingRight="8.0dip"
            android:progress="0"
            android:progressDrawable="@drawable/editor_layer_seekbar_music_volume"
            android:splitTrack="false"
            android:thumb="@drawable/editor_layer_seekbar_thumb_white_12" />
        <TextView
            android:id="@+id/tv_editor_effect_audio_volume"
            android:layout_width="40.0dip"
            android:layout_height="19.0dip"
            android:layout_gravity="end|center"
            android:gravity="end|center"
            android:text="100%"
            android:textColor="@color/white"
            android:textSize="12.0sp" />
    </LinearLayout>
</RelativeLayout>