<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/editorx_shape_audio_volume_dialog_bg"
    android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/px12"
        android:text="@string/xiaoying_str_edit_audio_tone_title_text"
        android:textColor="@color/white"
        android:textSize="@dimen/sp14" />
    <com.videoai.aivpcore.editorx.widget.seekbar.ReverseSeekBar
        android:id="@id/audio_reverse_seek_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px24"
        android:layout_marginStart="@dimen/px16"
        android:layout_marginLeft="@dimen/px16"
        android:layout_marginTop="@dimen/px12"
        android:layout_marginEnd="@dimen/px16"
        android:layout_marginRight="@dimen/px16"
        android:layout_marginBottom="@dimen/px20"
        android:paddingLeft="0.0dip"
        android:paddingRight="0.0dip"
        app:rsb_bg_color="#ffe0e0e0"
        app:rsb_bg_radius="@dimen/px26"
        app:rsb_max_progress="50"
        app:rsb_orientation="a30"
        app:rsb_point_color="@color/white"
        app:rsb_point_radius="@dimen/px16"
        app:rsb_progress="0"
        app:rsb_progress_color="@color/default_app_color"
        app:rsb_progress_radius="@dimen/px16" />
</LinearLayout>