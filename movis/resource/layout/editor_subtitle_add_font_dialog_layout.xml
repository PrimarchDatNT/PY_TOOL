<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent">
    <RelativeLayout
        android:layout_width="250.0dip"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@color/black">
        <RelativeLayout
            android:id="@+id/edit_subtitle_font_dialog_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:background="@drawable/v5_xiaoying_edit_subtitle_font_dialog_top_layout_bg">
            <TextView
                android:id="@+id/edit_subtitle_font_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30.0dip"
                android:text="@string/xiaoying_str_edit_subtitle_add_font"
                android:textColor="@color/white"
                android:textSize="17.0sp" />
            <ImageView
                android:id="@+id/edit_subtitle_font_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/edit_subtitle_font_title"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8.0dip"
                android:src="@drawable/v5_xiaoying_edit_subtitle_font_dialog_icon" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/edit_subtitle_font_icon"
                android:orientation="vertical"
                android:paddingStart="15.0dip"
                android:paddingLeft="15.0dip"
                android:paddingEnd="15.0dip"
                android:paddingRight="15.0dip"
                android:paddingBottom="8.0dip">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="middle"
                    android:fontFamily="sans-serif-light"
                    android:gravity="center"
                    android:text="@string/xiaoying_str_ve_subtitle_font_more_help_cnt1"
                    android:textColor="@color/white"
                    android:textSize="10.0sp" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="middle"
                    android:fontFamily="sans-serif-light"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="sdcard/aivpcore/fonts/"
                    android:textColor="#ffffea00"
                    android:textSize="10.0sp" />
            </LinearLayout>
            <ImageView
                android:id="@+id/edit_subtitle_font_dialog_cancel_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="5.0dip"
                android:layout_marginEnd="5.0dip"
                android:layout_marginRight="5.0dip"
                android:src="@drawable/v5_xiaoying_edit_subtitle_font_dialog_cancel" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="74.0dip"
            android:layout_below="@id/edit_subtitle_font_dialog_top"
            android:background="@drawable/v5_xiaoying_edit_subtitle_font_dialog_bottom_layout_bg">
            <TextView
                android:id="@+id/edit_subtitle_font_dialog_ok_button"
                android:layout_width="210.0dip"
                android:layout_height="34.0dip"
                android:layout_centerInParent="true"
                android:background="@drawable/v5_xiaoying_edit_subtitle_font_dialog_ok_button_bg"
                android:gravity="center"
                android:text="@string/xiaoying_str_com_msg_got_it"
                android:textColor="@color/white"
                android:textSize="15.0sp" />
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>