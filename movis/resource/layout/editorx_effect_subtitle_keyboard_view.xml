<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <EditText
        android:id="@id/et_edit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px42"
        android:background="@drawable/editorx_shape_effect_subtitle_input2"
        android:clickable="true"
        android:focusable="true"
        android:focusableInTouchMode="false"
        android:gravity="center_vertical"
        android:maxHeight="@dimen/px42"
        android:maxLength="247"
        android:paddingStart="@dimen/px12"
        android:paddingTop="@dimen/px8"
        android:paddingEnd="@dimen/px12"
        android:paddingBottom="@dimen/px8"
        android:textColor="@color/white"
        android:textColorHint="@color/app_dcolor_text_1"
        android:textSize="@dimen/sp12" />
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/px1"
        android:layout_marginStart="@dimen/px12"
        android:layout_marginTop="@dimen/px40"
        android:layout_marginEnd="@dimen/px12"
        android:background="@color/app_dcolor_indicator" />
</FrameLayout>