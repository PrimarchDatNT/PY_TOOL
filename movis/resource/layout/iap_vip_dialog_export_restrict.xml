<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:layout_marginBottom="32.0dip"
    android:background="@drawable/iap_vip_dialog_export_restrict_bg">
    <TextView
        android:id="@id/tv_export_restrict_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40.0dip"
        android:gravity="center"
        android:maxWidth="300.0dip"
        android:textColor="@color/color_333333"
        android:textSize="18.0dip"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parrent"
        app:layout_constraintRight_toRightOf="parrent"
        app:layout_constraintTop_toTopOf="parrent" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1.0px"
        android:layout_marginTop="40.0dip"
        android:background="@color/color_eeeeee"
        app:layout_constraintLeft_toLeftOf="parrent"
        app:layout_constraintTop_toBottomOf="@id/tv_export_restrict_time" />
    <TextView
        android:id="@id/tv_cancel"
        android:layout_width="0.0dip"
        android:layout_height="52.0dip"
        android:layout_marginTop="40.0dip"
        android:gravity="center"
        android:text="@string/xiaoying_str_com_cancel"
        android:textColor="@color/color_999999"
        android:textSize="18.0dip"
        android:textStyle="bold"
        app:layout_constraintHorizontal_weight="1.0"
        app:layout_constraintLeft_toLeftOf="parrent"
        app:layout_constraintRight_toLeftOf="@id/tv_remove_restrict"
        app:layout_constraintTop_toBottomOf="@id/tv_export_restrict_time" />
    <View
        android:layout_width="1.0px"
        android:layout_height="52.0dip"
        android:background="@color/color_eeeeee"
        app:layout_constraintBottom_toBottomOf="parrent"
        app:layout_constraintLeft_toLeftOf="parrent"
        app:layout_constraintRight_toRightOf="parrent" />
    <TextView
        android:id="@id/tv_remove_restrict"
        android:layout_width="0.0dip"
        android:layout_height="52.0dip"
        android:layout_marginTop="40.0dip"
        android:gravity="center"
        android:text="@string/xiaoying_str_remove_duration_limit"
        android:textColor="@color/color_ff6333"
        android:textSize="18.0dip"
        android:textStyle="bold"
        app:layout_constraintHorizontal_weight="1.0"
        app:layout_constraintLeft_toRightOf="@id/tv_cancel"
        app:layout_constraintRight_toRightOf="parrent"
        app:layout_constraintTop_toBottomOf="@id/tv_export_restrict_time" />
</androidx.constraintlayout.widget.ConstraintLayout>