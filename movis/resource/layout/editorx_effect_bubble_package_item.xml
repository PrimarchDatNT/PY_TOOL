<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:attr="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/rl_main_layout"
        android:layout_width="75.0dip"
        android:layout_height="75.0dip"
        android:layout_centerVertical="true">
        <com.videoai.mobile.component.imageview.DynamicLoadingImageView
            android:id="@+id/div_bubble_thumb"
            android:layout_width="65.0dip"
            android:layout_height="65.0dip"
            android:layout_centerInParent="true"
            attr:actualImageScaleType="o2"
            attr:roundedCornerRadius="2.0dip" />
        <ImageView
            android:id="@+id/iv_filter_focus"
            android:layout_width="70.0dip"
            android:layout_height="70.0dip"
            android:layout_centerInParent="true"
            android:src="@drawable/editorx_shape_effect_bubble_selected" />
        <com.videoai.mobile.component.imageview.DynamicLoadingImageView
            android:id="@+id/div_download_progress"
            android:layout_width="20.0dip"
            android:layout_height="20.0dip"
            android:layout_centerInParent="true" />
        <ImageView
            android:id="@+id/iv_new_flag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="15.0dip"
            android:scaleType="fitXY"
            android:src="@drawable/editorx_icon_effect_bubble_new"
            android:visibility="gone" />
        <ImageView
            android:id="@+id/iv_download_flag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10.0dip"
            android:scaleType="fitXY"
            android:src="@drawable/editorx_icon_effect_bubble_download"
            android:visibility="visible" />
        <ImageView
            android:id="@+id/iv_lock_flag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10.0dip"
            android:scaleType="fitXY"
            android:src="@drawable/editorx_icon_effect_bubble_lock"
            android:visibility="gone" />
    </RelativeLayout>
</RelativeLayout>