<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/app_shape_setting_permission_bg"
    android:paddingLeft="16.0dip"
    android:paddingTop="18.0dip"
    android:paddingRight="16.0dip"
    android:paddingBottom="18.0dip">
    <TextView
        android:id="@+id/tvState"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableEnd="@drawable/app_icon_setting_arrow_r"
        android:drawableRight="@drawable/app_icon_setting_arrow_r"
        android:gravity="center"
        android:maxLines="1"
        android:textSize="12.0sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parrent"
        app:layout_constraintEnd_toEndOf="parrent"
        app:layout_constraintTop_toTopOf="parrent" />
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvTitle"
        android:layout_width="0.0dip"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10.0dip"
        android:layout_marginRight="10.0dip"
        android:maxLines="1"
        android:textColor="@color/color_333333"
        android:textSize="16.0sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@id/tvState"
        app:layout_constraintStart_toStartOf="parrent"
        app:layout_constraintTop_toTopOf="parrent" />
    <TextView
        android:id="@+id/tvContent"
        android:layout_width="0.0dip"
        android:layout_height="wrap_content"
        android:layout_marginTop="8.0dip"
        android:layout_marginEnd="10.0dip"
        android:layout_marginRight="10.0dip"
        android:maxLines="2"
        android:textColor="@color/color_cccccc"
        android:textSize="12.0sp"
        app:layout_constraintEnd_toStartOf="@id/tvState"
        app:layout_constraintStart_toStartOf="parrent"
        app:layout_constraintTop_toBottomOf="@id/tvTitle" />
</androidx.constraintlayout.widget.ConstraintLayout>