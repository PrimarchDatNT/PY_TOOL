<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ff121212"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/image_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15.0dip"
        android:layout_marginTop="30.0dip"
        android:layout_marginRight="15.0dip"
        android:layout_marginBottom="15.0dip"
        android:src="@drawable/common_back_iocn_white" />
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0.0dip"
        android:layout_weight="1.0">
        <VideoView
            android:id="@+id/video_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />
        <ImageView
            android:id="@+id/image_play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/editor_watermark_video_play_icon" />
    </FrameLayout>
    <Button
        android:id="@+id/btn_next"
        android:layout_width="138.0dip"
        android:layout_height="44.0dip"
        android:layout_gravity="bottom|center"
        android:layout_marginTop="36.0dip"
        android:layout_marginBottom="40.0dip"
        android:background="@drawable/bg_watermark_video_next"
        android:text="@string/xiaoying_str_com_next_step_title"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="14.0sp" />
</LinearLayout>