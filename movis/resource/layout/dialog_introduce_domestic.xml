<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">
        <com.videoai.mobile.component.imageview.DynamicLoadingImageView
            android:id="@id/dg_big_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35.0dip"
            android:layout_marginTop="35.0dip"
            android:layout_marginRight="35.0dip"
            android:layout_marginBottom="35.0dip"
            android:background="@color/transparent"
            android:cropToPadding="true"
            android:scaleType="centerCrop"
            app:actualImageScaleType="o1"
            app:aspectRatio="0.75"
            app:roundedCornerRadius="8.0dip" />
        <ImageView
            android:id="@id/dg_close"
            android:layout_width="32.0dip"
            android:layout_height="32.0dip"
            android:layout_alignTop="@id/dg_big_img"
            android:layout_alignEnd="@id/dg_big_img"
            android:layout_alignRight="@id/dg_big_img"
            android:layout_marginTop="-16.0dip"
            android:layout_marginEnd="-16.0dip"
            android:layout_marginRight="-16.0dip"
            android:src="@drawable/introduce_icon_dialog_domestic_close" />
    </RelativeLayout>
</RelativeLayout>