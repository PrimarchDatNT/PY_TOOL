<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center">
    <RelativeLayout
        android:id="@id/com_dialog_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/ew"
        android:layout_marginLeft="@dimen/ew"
        android:layout_marginEnd="@dimen/ew"
        android:layout_marginRight="@dimen/ew"
        android:background="@drawable/aud">
        <RelativeLayout
            android:id="@id/tf"
            android:layout_width="fill_parent"
            android:layout_height="52.0dip">
            <TextView
                android:id="@id/com_dialog_txt_title"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:text="dialog title"
                android:textColor="@color/c5"
                android:textSize="@dimen/ex" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@id/com_gallery_dialog_txt_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tf"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="4.0dip">
            <ImageView
                android:id="@id/com_dialog_img_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10.0dip" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@id/afx"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/com_gallery_dialog_txt_title"
            android:background="@color/xz"
            android:visibility="gone">
            <TextView
                android:id="@id/com_dialog_txt_title_second"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="大小：10.5M"
                android:textColor="@color/bn"
                android:textSize="16.0sp" />
            <ImageView
                android:id="@id/a4d"
                android:layout_width="fill_parent"
                android:layout_height="1.0dip"
                android:layout_below="@id/com_dialog_txt_title_second"
                android:layout_marginStart="17.0dip"
                android:layout_marginLeft="17.0dip"
                android:layout_marginTop="5.0dip"
                android:layout_marginEnd="17.0dip"
                android:layout_marginRight="17.0dip"
                android:background="@color/ia" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@id/ae6"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/afx"
            android:layout_marginStart="17.0dip"
            android:layout_marginLeft="17.0dip"
            android:layout_marginTop="10.0dip"
            android:layout_marginEnd="17.0dip"
            android:layout_marginRight="17.0dip"
            android:layout_marginBottom="15.0dip"
            android:background="@color/xz">
            <ImageView
                android:id="@id/a4c"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginEnd="5.0dip"
                android:layout_marginRight="5.0dip"
                android:visibility="gone" />
            <TextView
                android:id="@id/com_dialog_txt_desc"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/a4c"
                android:layout_toRightOf="@id/a4c"
                android:ellipsize="middle"
                android:textColor="@color/bn"
                android:textSize="16.0sp" />
        </RelativeLayout>
        <CheckBox
            android:id="@id/com_dialog_checkbox"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ae6"
            android:layout_marginStart="15.0dip"
            android:layout_marginLeft="15.0dip"
            android:layout_marginEnd="15.0dip"
            android:layout_marginRight="15.0dip"
            android:layout_marginBottom="15.0dip"
            android:button="@drawable/b1l"
            android:textColor="@drawable/b1g"
            android:textSize="16.0sp" />
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/a4a"
            android:layout_below="@id/com_dialog_checkbox">
            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="1.0dip"
                android:layout_marginStart="15.0dip"
                android:layout_marginLeft="15.0dip"
                android:layout_marginEnd="15.0dip"
                android:layout_marginRight="15.0dip"
                android:scaleType="fitXY"
                android:src="#ffeaf0f6" />
            <LinearLayout
                android:id="@id/com_dialog_btns_layout"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_centerHorizontal="true"
                android:baselineAligned="false"
                android:gravity="center">
                <RelativeLayout
                    android:id="@id/com_dialog_btn_layout_left"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_weight="1.0">
                    <Button
                        android:id="@id/com_dialog_btn_left"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/auf"
                        android:text="@string/wc"
                        android:textColor="@color/fi"
                        android:textSize="@dimen/a4b" />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@id/com_dialog_btn_layout_middle"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_weight="1.0">
                    <Button
                        android:id="@id/com_dialog_btn_middle"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/aui"
                        android:text="重新导出"
                        android:textColor="@color/fi"
                        android:textSize="@dimen/a4b" />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@id/com_dialog_btn_layout_right"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_weight="1.0">
                    <Button
                        android:id="@id/com_dialog_btn_right"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/auk"
                        android:text="@string/wc"
                        android:textColor="@color/fi"
                        android:textSize="@dimen/a4b" />
                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>