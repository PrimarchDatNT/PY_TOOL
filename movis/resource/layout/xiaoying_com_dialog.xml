<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center">
    <RelativeLayout
        android:id="@+id/com_dialog_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/dialog_left_right_margin"
        android:layout_marginLeft="@dimen/dialog_left_right_margin"
        android:layout_marginEnd="@dimen/dialog_left_right_margin"
        android:layout_marginRight="@dimen/dialog_left_right_margin"
        android:background="@drawable/v4_xiaoying_com_dialog_bg">
        <RelativeLayout
            android:id="@+id/dialog_title_layout"
            android:layout_width="match_parent"
            android:layout_height="52.0dip">
            <TextView
                android:id="@+id/com_dialog_txt_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="dialog title"
                android:textColor="@color/black_p87"
                android:textSize="@dimen/dialog_title_text_size" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/com_gallery_dialog_txt_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/dialog_title_layout"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="4.0dip">
            <ImageView
                android:id="@+id/com_dialog_img_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10.0dip" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/layout_second_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/com_gallery_dialog_txt_title"
            android:background="@color/transparent"
            android:visibility="gone">
            <TextView
                android:id="@+id/com_dialog_txt_title_second"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="大小：10.5M"
                android:textColor="@color/black"
                android:textSize="16.0sp" />
            <ImageView
                android:id="@+id/imageview_seperator_line"
                android:layout_width="match_parent"
                android:layout_height="1.0dip"
                android:layout_below="@id/com_dialog_txt_title_second"
                android:layout_marginStart="17.0dip"
                android:layout_marginLeft="17.0dip"
                android:layout_marginTop="5.0dip"
                android:layout_marginEnd="17.0dip"
                android:layout_marginRight="17.0dip"
                android:background="@color/color_d7d7d7" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/layout_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/layout_second_title"
            android:layout_marginStart="17.0dip"
            android:layout_marginLeft="17.0dip"
            android:layout_marginTop="10.0dip"
            android:layout_marginEnd="17.0dip"
            android:layout_marginRight="17.0dip"
            android:layout_marginBottom="15.0dip"
            android:background="@color/transparent">
            <ImageView
                android:id="@+id/imageview_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginEnd="5.0dip"
                android:layout_marginRight="5.0dip"
                android:visibility="gone" />
            <TextView
                android:id="@+id/com_dialog_txt_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/imageview_desc"
                android:layout_toRightOf="@id/imageview_desc"
                android:ellipsize="middle"
                android:textColor="@color/black"
                android:textSize="16.0sp" />
        </RelativeLayout>
        <CheckBox
            android:id="@+id/com_dialog_checkbox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/layout_desc"
            android:layout_marginStart="15.0dip"
            android:layout_marginLeft="15.0dip"
            android:layout_marginEnd="15.0dip"
            android:layout_marginRight="15.0dip"
            android:layout_marginBottom="15.0dip"
            android:button="@drawable/xiaoying_com_dialog_checkbox"
            android:textColor="@drawable/xiaoying_com_del_checkbox_txt_color_selector"
            android:textSize="16.0sp" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/v4_xiaoying_dialog_bottom_height"
            android:layout_below="@id/com_dialog_checkbox">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1.0dip"
                android:layout_marginStart="15.0dip"
                android:layout_marginLeft="15.0dip"
                android:layout_marginEnd="15.0dip"
                android:layout_marginRight="15.0dip"
                android:scaleType="fitXY"
                android:src="#ffeaf0f6" />
            <LinearLayout
                android:id="@+id/com_dialog_btns_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:baselineAligned="false"
                android:gravity="center">
                <RelativeLayout
                    android:id="@+id/com_dialog_btn_layout_left"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1.0">
                    <Button
                        android:id="@+id/com_dialog_btn_left"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/v4_xiaoying_com_dialog_btn_left_selector"
                        android:text="@string/xiaoying_str_com_ok"
                        android:textColor="@color/color_585858"
                        android:textSize="@dimen/v4_xiaoying_dialog_button_text_size" />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/com_dialog_btn_layout_middle"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1.0">
                    <Button
                        android:id="@+id/com_dialog_btn_middle"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/v4_xiaoying_com_dialog_btn_normal_selector"
                        android:text="重新导出"
                        android:textColor="@color/color_585858"
                        android:textSize="@dimen/v4_xiaoying_dialog_button_text_size" />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/com_dialog_btn_layout_right"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1.0">
                    <Button
                        android:id="@+id/com_dialog_btn_right"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/v4_xiaoying_com_dialog_btn_right_selector"
                        android:text="@string/xiaoying_str_com_ok"
                        android:textColor="@color/color_585858"
                        android:textSize="@dimen/v4_xiaoying_dialog_button_text_size" />
                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>