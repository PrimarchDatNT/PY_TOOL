<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingStart="@dimen/px16"
    android:paddingEnd="@dimen/px16"
    android:paddingBottom="@dimen/px20">
    <com.videoai.aivpcore.unit.view.PressImageView
        android:id="@id/iv_close"
        android:layout_width="@dimen/px24"
        android:layout_height="@dimen/px24"
        android:scaleType="centerInside"
        android:src="@drawable/ag_icon_close" />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@id/layoutContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/px20"
        android:background="@drawable/editorx_bg_vip_check_dialog"
        android:orientation="vertical">
        <TextView
            android:id="@id/tvTitle"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/px20"
            android:fontFamily="@font/poppins_semibold"
            android:gravity="center"
            android:text="@string/xiaoying_str_editor_vip_alert_title"
            android:textColor="@color/white"
            android:textSize="@dimen/sp14"
            app:layout_constraintLeft_toLeftOf="parrent"
            app:layout_constraintRight_toRightOf="parrent"
            app:layout_constraintTop_toTopOf="parrent" />
        <TextView
            android:id="@id/tv_pay_func"
            android:layout_width="0.0dip"
            android:layout_height="@dimen/px42"
            android:layout_marginStart="@dimen/px10"
            android:layout_marginTop="@dimen/px80"
            android:layout_marginEnd="@dimen/px20"
            android:layout_marginBottom="@dimen/px20"
            android:background="@drawable/app_default_button"
            android:fontFamily="@font/poppins_semibold"
            android:gravity="center"
            android:text="Go Premium"
            android:textColor="@color/white"
            android:textSize="@dimen/sp14"
            app:layout_constraintBottom_toBottomOf="parrent"
            app:layout_constraintHorizontal_weight="1.0"
            app:layout_constraintLeft_toRightOf="@id/tv_remove_vip_func"
            app:layout_constraintRight_toRightOf="parrent"
            app:layout_constraintTop_toTopOf="parrent" />
        <TextView
            android:id="@id/tv_remove_vip_func"
            android:layout_width="0.0dip"
            android:layout_height="@dimen/px42"
            android:layout_marginStart="@dimen/px20"
            android:layout_marginTop="@dimen/px80"
            android:layout_marginEnd="@dimen/px10"
            android:background="@drawable/app_res_sample_2"
            android:fontFamily="@font/poppins_semibold"
            android:gravity="center"
            android:text="@string/editorx_delete_vip_effect"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/sp14"
            app:layout_constraintHorizontal_weight="1.0"
            app:layout_constraintLeft_toLeftOf="parrent"
            app:layout_constraintRight_toLeftOf="@id/tv_pay_func"
            app:layout_constraintTop_toTopOf="parrent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>