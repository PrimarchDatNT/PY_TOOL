<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:rotateView="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:background="@drawable/xiaoying_cam_haft_trans_bg"
        android:gravity="center"
        android:orientation="horizontal">
        <com.videoai.aivpcore.ui.view.RotateImageView
            android:id="@id/img_setting"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:gravity="center"
            android:src="@drawable/v4_xiaoying_cam_indicator_more_selector"
            rotateView:rotation="270" />
        <com.videoai.aivpcore.ui.view.RotateImageView
            android:id="@id/img_switch"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:gravity="center"
            android:src="@drawable/v4_xiaoying_cam_indicator_switch_selector"
            rotateView:rotation="270" />
        <com.videoai.aivpcore.ui.view.RotateImageView
            android:id="@id/img_mode"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:gravity="center"
            rotateView:rotation="270" />
        <com.videoai.aivpcore.ui.view.RotateImageView
            android:id="@id/img_effect"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:gravity="center"
            android:src="@drawable/v4_xiaoying_cam_indicator_effect_selector"
            rotateView:rotation="270" />
        <ImageView
            android:id="@id/cam_btn_cancel_capture"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:gravity="center"
            android:scaleType="centerInside"
            android:src="@drawable/v4_xiaoying_cam_btn_cam_cancel_selector" />
    </LinearLayout>
</RelativeLayout>