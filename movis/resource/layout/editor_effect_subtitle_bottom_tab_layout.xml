<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_141414">
    <LinearLayout
        android:id="@+id/relativelayout_preview_btns"
        android:layout_width="match_parent"
        android:layout_height="@dimen/v4_xiaoying_ve_title_addpanel_tab_height"
        android:layout_alignParentTop="true"
        android:orientation="horizontal">
        <RelativeLayout
            android:id="@+id/rl_tab_animtitle"
            android:layout_width="0.0dip"
            android:layout_height="match_parent"
            android:layout_weight="1.0">
            <ImageView
                android:layout_width="30.0dip"
                android:layout_height="3.0dip"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:background="@color/default_app_color"
                android:visibility="gone" />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="center"
                android:src="@drawable/editor_icon_effect_subtitle_anim_focus"
                android:visibility="visible" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_tab_subtitle"
            android:layout_width="0.0dip"
            android:layout_height="match_parent"
            android:layout_weight="1.0">
            <ImageView
                android:layout_width="30.0dip"
                android:layout_height="3.0dip"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:background="@color/default_app_color"
                android:visibility="gone" />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="center"
                android:src="@drawable/editor_icon_effect_subtitle_text_n"
                android:visibility="visible" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_tab_font"
            android:layout_width="0.0dip"
            android:layout_height="match_parent"
            android:layout_weight="1.0">
            <ImageView
                android:layout_width="30.0dip"
                android:layout_height="3.0dip"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:background="@color/default_app_color"
                android:visibility="gone" />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="center"
                android:src="@drawable/editor_btn_effect_subtitle_font_normal"
                android:visibility="visible" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_tab_align"
            android:layout_width="0.0dip"
            android:layout_height="match_parent"
            android:layout_weight="1.0">
            <ImageView
                android:layout_width="30.0dip"
                android:layout_height="3.0dip"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:background="@color/default_app_color"
                android:visibility="gone" />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="center"
                android:src="@drawable/editor_btn_effect_subtitle_align_normal"
                android:visibility="visible" />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>