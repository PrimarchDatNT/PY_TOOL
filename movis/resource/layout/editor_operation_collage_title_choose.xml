<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/video_editor_title_height"
    android:background="@color/color_141414"
    android:orientation="vertical">
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tablayout_collage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="40.0dip"
        android:layout_marginLeft="40.0dip"
        android:layout_marginEnd="40.0dip"
        android:layout_marginRight="40.0dip"
        app:tabGravity="ya"
        app:tabIndicatorColor="@color/default_app_color"
        app:tabMode="z0"
        app:tabSelectedTextColor="@color/default_app_color"
        app:tabTextAppearance="@style/XYTabLayoutTextAppearance"
        app:tabTextColor="@color/color_8E8E93">
        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/xiaoying_str_ve_gallery_filter_menu_item_photo_only" />
        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/xiaoying_str_community_search_tab_video" />
        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/xiaoying_str_gif_action_item" />
    </com.google.android.material.tabs.TabLayout>
</RelativeLayout>