<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/layout_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/v4_xiaoying_com_top_panel_height"
        android:background="@color/white">
        <ImageView
            android:id="@+id/img_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:paddingStart="8.0dip"
            android:paddingLeft="8.0dip"
            android:scaleType="centerInside"
            android:src="@drawable/app_default_back_black" />
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="10.0dip"
            android:layout_marginLeft="10.0dip"
            android:layout_toEndOf="@id/img_back"
            android:layout_toRightOf="@id/img_back"
            android:gravity="center"
            android:lines="1"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="18.0sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="15.0dip"
            android:layout_marginRight="15.0dip"
            android:gravity="center"
            android:lines="1"
            android:text="tell friend"
            android:textColor="@color/color_666666"
            android:textSize="16.0sp"
            android:visibility="gone" />
    </RelativeLayout>
    <View
        android:id="@+id/funny_template_split_line"
        android:layout_width="match_parent"
        android:layout_height="0.5dip"
        android:layout_below="@id/layout_title"
        android:background="@color/color_fafafa" />
    <RelativeLayout
        android:id="@+id/xiaoying_com_progress_video_loading"
        android:layout_width="88.0dip"
        android:layout_height="88.0dip"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:background="@drawable/xiaoying_com_check_update_bg">
        <ProgressBar
            android:id="@+id/progressBar1"
            android:layout_width="60.299988dip"
            android:layout_height="60.299988dip"
            android:layout_centerInParent="true"
            android:indeterminateDrawable="@drawable/xiaoying_com_check_update_loading_progress"
            android:indeterminateDuration="2000" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/player_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/funny_template_create_tv"
        android:layout_below="@id/layout_title"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="73.0dip"
        android:layout_marginLeft="73.0dip"
        android:layout_marginTop="10.0dip"
        android:layout_marginEnd="73.0dip"
        android:layout_marginRight="73.0dip"
        android:layout_marginBottom="119.0dip">
        <com.videoai.aivpcore.xyui.video.VideoView
            android:id="@+id/videoView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true" />
        <ImageView
            android:id="@+id/video_play"
            android:layout_width="60.0dip"
            android:layout_height="60.0dip"
            android:layout_centerInParent="true"
            android:src="@drawable/editor_icon_funny_template_play" />
    </RelativeLayout>
    <TextView
        android:id="@+id/funny_template_des"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="15.0dip"
        android:layout_marginLeft="15.0dip"
        android:layout_marginEnd="24.0dip"
        android:layout_marginRight="24.0dip"
        android:layout_marginBottom="124.0dip"
        android:textColor="@color/color_666666"
        android:textSize="14.0sp" />
    <ProgressBar
        android:id="@+id/funny_template_download_progress"
        style="?android:progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="50.0dip"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="15.0dip"
        android:layout_marginLeft="15.0dip"
        android:layout_marginEnd="15.0dip"
        android:layout_marginRight="15.0dip"
        android:layout_marginBottom="15.0dip"
        android:max="100"
        android:progressDrawable="@drawable/editor_layer_funny_detail_progress_bg"
        android:visibility="gone" />
    <TextView
        android:id="@+id/funny_template_create_tv"
        android:layout_width="match_parent"
        android:layout_height="50.0dip"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="15.0dip"
        android:layout_marginLeft="15.0dip"
        android:layout_marginEnd="15.0dip"
        android:layout_marginRight="15.0dip"
        android:layout_marginBottom="15.0dip"
        android:background="@drawable/editor_shape_funny_template_detail_create"
        android:gravity="center"
        android:text="@string/xiaoying_str_funny_template_create"
        android:textColor="@color/white"
        android:textSize="18.0sp"
        android:visibility="visible" />
</RelativeLayout>