<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:rotateView="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.videoai.aivpcore.ui.view.RotateImageView
        android:id="@+id/v4_img_aelock"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="1.0"
        rotateView:rotation="270" />
    <com.videoai.aivpcore.camera.ui.TimerImageView
        android:id="@+id/v4_img_timer"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="1.0"
        android:rotation="90.0"
        android:scaleType="centerInside" />
    <com.videoai.aivpcore.ui.view.RotateImageView
        android:id="@+id/v4_img_grid"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="1.0"
        rotateView:rotation="270" />
    <com.videoai.aivpcore.ui.view.RotateImageView
        android:id="@+id/v4_img_flash"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="1.0"
        rotateView:rotation="270" />
</LinearLayout>