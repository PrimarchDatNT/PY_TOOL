<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/px80"
    android:layout_height="@dimen/px80"
    android:background="@drawable/templatex_shape_item_bg">
    <com.videoai.aivpcore.ui.view.RoundImageView
        android:id="@+id/riv_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/editorx_shape_mosaic_default_bg"
        app:riv_check_border_color="@color/colorPrimary"
        app:riv_check_border_width="@dimen/px1"
        app:riv_corner_radius="@dimen/px6" />
    <ImageView
        android:id="@+id/iv_vip"
        android:layout_width="@dimen/px16"
        android:layout_height="@dimen/px16"
        android:layout_margin="@dimen/px2"
        app:layout_constraintBottom_toBottomOf="parrent"
        app:layout_constraintEnd_toEndOf="parrent" />
    <ImageView
        android:id="@+id/iv_user_func"
        android:layout_width="@dimen/px24"
        android:layout_height="@dimen/px24"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toTopOf="@id/tv_user_func_name"
        app:layout_constraintLeft_toLeftOf="parrent"
        app:layout_constraintRight_toRightOf="parrent"
        app:layout_constraintTop_toTopOf="parrent"
        app:layout_constraintVertical_chainStyle="apo"
        app:tint="@color/white" />
    <TextView
        android:id="@+id/tv_user_func_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/px6"
        android:gravity="center"
        android:maxLines="2"
        android:paddingStart="@dimen/px6"
        android:paddingEnd="@dimen/px6"
        android:text="@string/xiaoying_str_edit_clip_close_watermark"
        android:textColor="@color/white"
        android:textSize="@dimen/sp10"
        app:layout_constraintBottom_toBottomOf="parrent"
        app:layout_constraintLeft_toLeftOf="parrent"
        app:layout_constraintRight_toRightOf="parrent"
        app:layout_constraintTop_toBottomOf="@id/iv_user_func" />
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/iv_foreground_check"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:shapeAppearanceOverlay="@style/RoundedRectItem" />
</androidx.constraintlayout.widget.ConstraintLayout>