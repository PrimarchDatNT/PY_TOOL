<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/transparent">
    <RelativeLayout
        android:id="@+id/item_layout"
        android:layout_width="75.0dip"
        android:layout_height="63.5dip">
        <RelativeLayout
            android:id="@+id/thumb_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">
            <com.videoai.mobile.component.imageview.DynamicLoadingImageView
                android:id="@+id/icon"
                android:layout_width="47.0dip"
                android:layout_height="47.0dip"
                android:background="@color/transparent"
                android:scaleType="fitXY" />
        </RelativeLayout>
        <ImageView
            android:id="@+id/img_lock_flag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/thumb_layout"
            android:layout_alignEnd="@id/thumb_layout"
            android:layout_alignRight="@id/thumb_layout"
            android:layout_marginTop="-5.0dip"
            android:layout_marginEnd="-5.0dip"
            android:layout_marginRight="-5.0dip"
            android:background="@color/transparent"
            android:scaleType="fitXY"
            android:src="@drawable/v5_xiaoying_edit_template_download"
            android:visibility="visible" />
        <TextView
            android:id="@+id/txtview_cur_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/thumb_layout"
            android:layout_alignLeft="@id/thumb_layout"
            android:layout_alignEnd="@id/thumb_layout"
            android:layout_alignRight="@id/thumb_layout"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:text="50%"
            android:textColor="@color/white"
            android:textSize="12.0dip"
            android:visibility="invisible" />
        <ProgressBar
            style="?android:progressBarStyleHorizontal"
            android:layout_width="45.0dip"
            android:layout_height="4.0dip"
            android:layout_below="@id/thumb_layout"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="2.0dip"
            android:max="100"
            android:progressDrawable="@drawable/v5_xiaoying_edit_sticker_download_progress_drawable"
            android:visibility="gone" />
        <ImageView
            android:id="@+id/img_focus"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_margin="5.0dip"
            android:scaleType="fitXY"
            android:src="@drawable/v5_xiaoying_ve_subtitle_bubble_select_bg"
            android:visibility="visible" />
        <ImageView
            android:id="@+id/imgview_item_focus_flag"
            android:layout_width="13.0dip"
            android:layout_height="13.0dip"
            android:layout_alignTop="@id/img_focus"
            android:layout_alignEnd="@id/img_focus"
            android:layout_alignRight="@id/img_focus"
            android:layout_marginTop="-6.5dip"
            android:layout_marginEnd="-6.5dip"
            android:layout_marginRight="-6.5dip"
            android:background="@drawable/xiaoying_ve_subtitle_bubble_select_icon"
            android:scaleType="fitXY"
            android:visibility="invisible" />
        <ImageView
            android:id="@+id/img_animlock_flag"
            android:layout_width="24.0dip"
            android:layout_height="24.0dip"
            android:layout_alignTop="@id/img_focus"
            android:layout_alignEnd="@id/img_focus"
            android:layout_alignRight="@id/img_focus"
            android:layout_marginTop="0.0dip"
            android:layout_marginEnd="-4.0dip"
            android:layout_marginRight="-4.0dip"
            android:background="@color/transparent"
            android:scaleType="fitXY"
            android:src="@drawable/v5_xiaoying_ve_animtitle_templates_lock"
            android:visibility="gone" />
    </RelativeLayout>
</RelativeLayout>