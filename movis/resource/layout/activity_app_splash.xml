<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/viewGroup"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:tag="layout/activity_app_splash_0">
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv2"
        android:layout_width="0.0dip"
        android:layout_height="0.0dip"
        android:adjustViewBounds="true"
        android:alpha="0.65"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parrent"
        app:layout_constraintEnd_toEndOf="parrent"
        app:layout_constraintStart_toStartOf="parrent"
        app:layout_constraintTop_toTopOf="parrent" />
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv1"
        android:layout_width="0.0dip"
        android:layout_height="0.0dip"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:src="@drawable/bg_splash_2"
        app:layout_constraintBottom_toBottomOf="parrent"
        app:layout_constraintEnd_toEndOf="parrent"
        app:layout_constraintStart_toStartOf="parrent"
        app:layout_constraintTop_toTopOf="parrent" />
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivLogo"
        android:layout_width="@dimen/px156"
        android:layout_height="@dimen/px52"
        android:adjustViewBounds="true"
        android:alpha="0.0"
        android:padding="@dimen/px8"
        android:src="@drawable/app_logo"
        app:layout_constraintBottom_toBottomOf="parrent"
        app:layout_constraintEnd_toEndOf="parrent"
        app:layout_constraintStart_toStartOf="parrent"
        app:layout_constraintTop_toTopOf="parrent"
        app:layout_constraintVertical_bias="0.39" />
    <LinearLayout
        android:id="@+id/policy_agreement_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parrent">
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_policy_agreement_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/px24"
            android:gravity="center"
            android:text="@string/agree_policy_text"
            android:textColor="@color/white"
            android:textColorLink="@color/color_primary"
            android:textSize="@dimen/sp14"
            android:textStyle="bold" />
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/get_started_button"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px60"
            android:background="@drawable/cta_splash"
            android:fontFamily="@font/poppins_semibold"
            android:gravity="center"
            android:text="@string/splash_cta"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="@dimen/sp16" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>