<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical">
    <TextView
        android:id="@+id/tt_pangle_ad_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12.0dip"
        android:layout_marginTop="9.0dip"
        android:layout_marginRight="16.0dip"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:text="pangle_ad_content"
        android:textColor="#ff3e3e3e"
        android:textSize="12.0sp" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12.0dip"
        android:layout_marginLeft="12.0dip"
        android:layout_marginTop="8.0dip"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <FrameLayout
            android:id="@+id/tt_pangle_ad_image_layout"
            android:layout_width="185.0dip"
            android:layout_height="150.0dip"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="12.0dip">
            <ImageView
                android:id="@+id/tt_pangle_ad_main_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY" />
            <TextView
                android:layout_width="32.0dip"
                android:layout_height="14.0dip"
                android:layout_gravity="start|bottom|center"
                android:layout_marginStart="5.0dip"
                android:layout_marginLeft="5.0dip"
                android:layout_marginBottom="5.0dip"
                android:background="@drawable/tt_ad_logo_new" />
        </FrameLayout>
        <RelativeLayout
            android:id="@+id/tt_pangle_ad_content_layout"
            android:layout_width="135.0dip"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="0.0dip"
            android:orientation="vertical"
            android:paddingTop="0.0dip">
            <com.bytedance.sdk.openadsdk.adapter.NiceImageView
                android:id="@+id/tt_pangle_ad_icon_adapter"
                android:layout_width="35.0dip"
                android:layout_height="35.0dip"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="12.0dip"
                android:layout_marginRight="12.0dip"
                android:scaleType="fitXY" />
            <TextView
                android:id="@+id/tt_pangle_ad_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tt_pangle_ad_icon_adapter"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="12.0dip"
                android:layout_marginTop="5.0dip"
                android:layout_marginRight="12.0dip"
                android:maxLines="1"
                android:text="センザンコウ"
                android:textColor="#ff3e3e3e"
                android:textSize="12.0sp" />
            <Button
                android:id="@+id/tt_pangle_ad_btn"
                android:layout_width="wrap_content"
                android:layout_height="25.0dip"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="12.0dip"
                android:layout_marginEnd="12.0dip"
                android:layout_marginRight="12.0dip"
                android:layout_marginBottom="12.0dip"
                android:background="@drawable/tt_pangle_banner_btn_bg"
                android:gravity="center"
                android:maxWidth="25.0dip"
                android:maxHeight="30.0dip"
                android:text="download "
                android:textColor="#ffffffff"
                android:textSize="10.0sp" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>