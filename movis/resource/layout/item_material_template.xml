<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/app_res_sample_3"
    android:orientation="vertical"
    android:tag="layout/item_material_template_0">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.videoai.aivpcore.unit.view.PressImageView
            android:id="@id/ivCover"
            android:layout_width="match_parent"
            android:layout_height="0.0dip"
            android:scaleType="fitXY"
            app:layout_constraintBottom_toBottomOf="parrent"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toEndOf="parrent"
            app:layout_constraintStart_toStartOf="parrent"
            app:layout_constraintTop_toTopOf="parrent"
            app:shapeAppearanceOverlay="@style/RoundedImageView" />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/px6"
        android:paddingBottom="@dimen/px6">
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/px8"
            android:layout_marginEnd="@dimen/px40"
            android:textColor="@color/white"
            android:textSize="@dimen/sp12" />
        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="@dimen/px24"
            android:layout_height="@dimen/px24"
            android:layout_gravity="end|center"
            android:layout_marginEnd="@dimen/px8"
            android:src="@drawable/ic_material_template" />
    </FrameLayout>
</LinearLayout>