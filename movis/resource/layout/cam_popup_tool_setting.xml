<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="190.0dip">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="15.0dip"
        android:layout_marginLeft="15.0dip"
        android:layout_marginEnd="15.0dip"
        android:layout_marginRight="15.0dip"
        android:background="@drawable/xiaoying_cam_bg_tool_setting_window">
        <LinearLayout
            android:id="@id/layout_setting_tools"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20.0dip"
            android:gravity="center_horizontal"
            android:orientation="horizontal">
            <RelativeLayout
                android:id="@id/layout_tool_flashlight"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1.0">
                <ImageView
                    android:id="@id/icon_tool_flashlight"
                    android:layout_width="44.0dip"
                    android:layout_height="44.0dip"
                    android:layout_centerInParent="true"
                    android:src="@drawable/xiaoying_cam_icon_tool_flashlight_off" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1.0">
                <ImageView
                    android:id="@id/icon_tool_grid"
                    android:layout_width="44.0dip"
                    android:layout_height="44.0dip"
                    android:layout_centerInParent="true"
                    android:src="@drawable/xiaoying_cam_icon_tool_grid_nrm" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1.0">
                <ImageView
                    android:id="@id/icon_tool_time"
                    android:layout_width="44.0dip"
                    android:layout_height="44.0dip"
                    android:layout_centerInParent="true"
                    android:src="@drawable/xiaoying_cam_icon_tool_timer_nrm" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@id/layout_tool_aelock"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1.0">
                <ImageView
                    android:id="@id/icon_tool_aelock"
                    android:layout_width="44.0dip"
                    android:layout_height="44.0dip"
                    android:layout_centerInParent="true"
                    android:src="@drawable/xiaoying_cam_icon_tool_aelock_nrm" />
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@id/line"
            android:layout_width="match_parent"
            android:layout_height="0.5dip"
            android:layout_below="@id/layout_setting_tools"
            android:layout_marginStart="20.0dip"
            android:layout_marginLeft="20.0dip"
            android:layout_marginTop="20.0dip"
            android:layout_marginEnd="20.0dip"
            android:layout_marginRight="20.0dip"
            android:background="#0dffffff"
            android:orientation="horizontal" />
        <LinearLayout
            android:id="@id/layout_speed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/line"
            android:orientation="horizontal"
            android:paddingEnd="4.0dip"
            android:paddingRight="4.0dip">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center"
                android:layout_marginStart="18.0dip"
                android:layout_marginLeft="18.0dip"
                android:text="@string/xiaoying_str_cam_speed_title"
                android:textColor="#80ffffff"
                android:textSize="14.0sp" />
            <com.videoai.aivpcore.camera.ui.view.seekbar.DraggableSeekBar
                android:id="@id/speed_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="end" />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>