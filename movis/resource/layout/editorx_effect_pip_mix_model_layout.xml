<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentBottom="true"
    android:background="@color/transparent">
    <View
        android:id="@+id/pmm_bg"
        android:layout_width="match_parent"
        android:layout_height="177.0dip"
        android:background="@color/color_212121"
        app:layout_constraintBottom_toBottomOf="parrent"
        app:layout_constraintEnd_toEndOf="parrent"
        app:layout_constraintStart_toStartOf="parrent" />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/pmm_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="90.0dip"
        android:layout_marginBottom="15.0dip"
        app:layout_constraintBottom_toBottomOf="parrent"
        app:layout_constraintEnd_toEndOf="parrent"
        app:layout_constraintStart_toStartOf="parrent" />
    <com.videoai.aivpcore.editorx.widget.seekbar.PopSeekBar
        android:id="@+id/pmm_pop_seek_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="1.0dip"
        android:layout_marginLeft="1.0dip"
        android:layout_marginEnd="53.0dip"
        android:layout_marginRight="53.0dip"
        android:layout_marginBottom="24.0dip"
        app:layout_constraintBottom_toTopOf="@id/pmm_recyclerview"
        app:layout_constraintEnd_toEndOf="parrent"
        app:layout_constraintStart_toStartOf="parrent"
        app:psb_bg_color="@color/color_363636"
        app:psb_bg_max_progress_color="@color/color_525252"
        app:psb_max_progress="100"
        app:psb_seek_bar_color="@color/default_app_color"
        app:psb_seek_bar_left_padding="14.0dip"
        app:psb_seek_bar_progress_drawable="@drawable/editorx_effect_pmm_progress_drawable"
        app:psb_seek_bar_right_padding="14.0dip"
        app:psb_seek_bar_thumb="@drawable/editorx_selector_pmm_seek_bar_thumb"
        app:psb_text_bg_space="24.0dip"
        app:psb_top_text_color="@color/color_333333"
        app:psb_top_text_diam="44.0dip"
        app:psb_top_text_size="18.0sp" />
    <ImageView
        android:id="@+id/pmm_right_btn"
        android:layout_width="24.0dip"
        android:layout_height="24.0dip"
        android:layout_marginEnd="15.0dip"
        android:layout_marginBottom="131.0dip"
        android:src="@drawable/editorx_pmm_right_icon"
        app:layout_constraintBottom_toBottomOf="@id/pmm_bg"
        app:layout_constraintEnd_toEndOf="@id/pmm_bg" />
</androidx.constraintlayout.widget.ConstraintLayout>