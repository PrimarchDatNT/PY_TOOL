<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/collage_board_content"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/board_top"
        android:layout_width="match_parent"
        android:layout_height="30.0dip">
        <ImageButton
            android:id="@+id/btn_expand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@null"
            android:clickable="false"
            android:focusable="false"
            android:paddingStart="20.0dip"
            android:paddingLeft="20.0dip"
            android:paddingEnd="20.0dip"
            android:paddingRight="20.0dip"
            android:src="@drawable/editor_selector_gallery_board_arrow" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/collage_pic_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/board_top"
        android:background="@color/black"
        android:visibility="visible">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rc_collage_pic"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/collage_video_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/board_top"
        android:background="@color/black"
        android:visibility="visible">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rc_video_pic"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/collage_gif_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/board_top"
        android:background="@color/black"
        android:visibility="gone">
        <com.videoai.aivpcore.editor.widget.picker.UKeyBackEditText
            android:id="@+id/btn_search_gif"
            android:layout_width="match_parent"
            android:layout_height="35.0dip"
            android:layout_marginStart="15.0dip"
            android:layout_marginLeft="15.0dip"
            android:layout_marginEnd="15.0dip"
            android:layout_marginRight="15.0dip"
            android:background="@drawable/editor_shape_collage_search"
            android:gravity="center"
            android:hint="@string/xiaoying_str_ve_collage_search_gif_hint"
            android:imeOptions="actionSearch"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textColorHint="@color/white_p50"
            android:textCursorDrawable="@drawable/v4_xiaoying_com_edittext_cursor"
            android:textSize="16.0sp" />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rc_collage_gif"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/btn_search_gif"
            android:layout_marginTop="12.0dip" />
        <LinearLayout
            android:id="@+id/collage_loading_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/btn_search_gif"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="gone">
            <ProgressBar
                style="@android:style/Widget.ProgressBar.Small.Inverse"
                android:layout_width="30.0dip"
                android:layout_height="30.0dip"
                android:layout_gravity="center"
                android:indeterminateDrawable="@drawable/xiaoying_com_progressbar_loading_img"
                android:indeterminateDuration="1000" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50.0dip"
                android:layout_gravity="center"
                android:layout_marginStart="10.0dip"
                android:gravity="center"
                android:text="@string/xiaoying_str_com_loading"
                android:textColor="@color/color_919191"
                android:textSize="14.0sp" />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>