<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="horizontal"
    android:visibility="visible">
    <RelativeLayout
        android:id="@id/rl_tab_blur"
        android:layout_width="80.0dip"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@id/iv_tab_blur"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:scaleType="centerInside"
            android:src="@drawable/editor_selector_clip_effect_blur" />
        <View
            android:id="@id/view_tab_blur"
            android:layout_width="30.0dip"
            android:layout_height="3.0dip"
            android:layout_above="@id/iv_tab_blur"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@color/default_app_color"
            android:visibility="gone" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@id/rl_tab_color"
        android:layout_width="80.0dip"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@id/iv_tab_color"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:scaleType="centerInside"
            android:src="@drawable/editor_selector_clip_effect_color" />
        <View
            android:id="@id/view_tab_color"
            android:layout_width="30.0dip"
            android:layout_height="3.0dip"
            android:layout_above="@id/iv_tab_color"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@color/default_app_color"
            android:visibility="gone" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@id/rl_tab_background"
        android:layout_width="80.0dip"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@id/iv_tab_background"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:scaleType="centerInside"
            android:src="@drawable/editor_selector_clip_effect_background" />
        <ImageView
            android:id="@id/iv_vip_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="-2.0dip"
            android:layout_marginLeft="-2.0dip"
            android:layout_marginTop="2.0dip"
            android:layout_toEndOf="@id/iv_tab_background"
            android:layout_toRightOf="@id/iv_tab_background" />
        <View
            android:id="@id/view_tab_background"
            android:layout_width="30.0dip"
            android:layout_height="3.0dip"
            android:layout_above="@id/iv_tab_background"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@color/default_app_color"
            android:visibility="gone" />
    </RelativeLayout>
</LinearLayout>