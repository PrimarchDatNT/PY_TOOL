<?xml version="1.0" encoding="utf-8"?>
<com.videoedit.gallery.widget.CustomSizeFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_gif"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gallery_border_item"
        android:contentDescription="@null"
        android:padding="1.0dip"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parrent"
        app:layout_constraintEnd_toEndOf="parrent"
        app:layout_constraintStart_toStartOf="parrent"
        app:layout_constraintTop_toTopOf="parrent" />
    <TextView
        android:id="@+id/tv_gif_tag"
        style="@style/veds_latn_font_caption_10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start|bottom|center"
        android:layout_marginStart="4.0dip"
        android:layout_marginBottom="4.0dip"
        android:background="@drawable/gallery_shape_item_shadow"
        android:includeFontPadding="false"
        android:paddingLeft="4.0dip"
        android:paddingTop="2.0dip"
        android:paddingRight="4.0dip"
        android:paddingBottom="2.0dip"
        android:text="@string/xy_module_tag_gif"
        android:textColor="@color/veds_color_fill_white_1" />
    <ImageView
        android:id="@+id/iv_download"
        android:layout_width="16.0dip"
        android:layout_height="16.0dip"
        android:layout_gravity="center|left|top"
        android:src="@drawable/gallery_icon_giphy_download"
        android:visibility="gone" />
    <View
        android:id="@+id/select_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gallery_shape_item_hover"
        android:visibility="gone" />
    <ImageView
        android:id="@+id/preview_icon"
        android:layout_width="20.0dip"
        android:layout_height="20.0dip"
        android:layout_gravity="end|bottom|center"
        android:layout_marginEnd="4.0dip"
        android:layout_marginBottom="4.0dip"
        android:src="@drawable/gallery_media_photo_preview_icon"
        android:visibility="gone" />
    <TextView
        android:id="@+id/tv_order"
        style="@style/veds_latn_font_headline_28"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start|center|top"
        android:layout_marginStart="6.0dip"
        android:includeFontPadding="false"
        android:text="01"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:visibility="gone" />
</com.videoedit.gallery.widget.CustomSizeFrameLayout>