<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/templatex_shape_item_bg"
    android:tag="layout/templatex_view_list_item_s_0">
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imgCover"
        android:layout_width="match_parent"
        android:layout_height="0.0dip"
        android:layout_margin="@dimen/px1"
        android:scaleType="fitXY"
        android:tag="binding_1"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parrent"
        app:layout_constraintStart_toStartOf="parrent"
        app:layout_constraintTop_toTopOf="parrent"
        app:shapeAppearanceOverlay="@style/RoundedImageItem" />
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imgNew"
        android:layout_width="30.0dip"
        android:layout_height="18.0dip"
        android:layout_marginTop="8.0dip"
        android:layout_marginEnd="8.0dip"
        android:src="@drawable/templatex_icon_new"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@id/imgCover"
        app:layout_constraintTop_toTopOf="@id/imgCover" />
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imgVip"
        android:layout_width="24.0dip"
        android:layout_height="24.0dip"
        android:layout_marginTop="8.0dip"
        android:layout_marginEnd="8.0dip"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@id/imgCover"
        app:layout_constraintTop_toTopOf="@id/imgCover" />
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imgLock"
        android:layout_width="24.0dip"
        android:layout_height="24.0dip"
        android:layout_marginTop="8.0dip"
        android:layout_marginEnd="8.0dip"
        android:src="@drawable/templatex_icon_lock"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@id/imgCover"
        app:layout_constraintTop_toTopOf="@id/imgCover" />
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvTitle"
        style="@style/TextSingleLine"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px20"
        android:fontFamily="@font/poppins_semibold"
        android:gravity="center"
        android:tag="binding_2"
        android:textColor="@color/white"
        android:textSize="@dimen/sp12"
        app:layout_constraintBottom_toBottomOf="parrent"
        app:layout_constraintTop_toBottomOf="@id/imgCover" />
</androidx.constraintlayout.widget.ConstraintLayout>