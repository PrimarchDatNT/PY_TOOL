<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/px68"
    android:layout_height="@dimen/px80"
    android:layout_marginStart="@dimen/px8"
    android:layout_marginEnd="@dimen/px8">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:background="@drawable/bg_vip_feature_item"
        android:orientation="vertical"
        android:padding="@dimen/px1">
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@id/iv_function_icon"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px60"
            android:scaleType="fitXY"
            android:src="@drawable/bg_pro_filter"
            app:shapeAppearanceOverlay="@style/RoundedImageItem" />
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@id/tv_function_name"
            style="@style/TextSingleLine"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px20"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/sp10"
            app:autoSizeMaxTextSize="@dimen/sp10"
            app:autoSizeMinTextSize="@dimen/sp8" />
    </LinearLayout>
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@id/iv_vip_icon"
        android:layout_width="@dimen/px16"
        android:layout_height="@dimen/px16"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="@dimen/px2"
        android:layout_marginBottom="@dimen/px22"
        android:src="@drawable/ic_diamon_premium" />
</RelativeLayout>