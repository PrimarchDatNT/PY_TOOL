<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View
        android:id="@id/root_layout_bg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px214"
        android:layout_marginBottom="@dimen/px56"
        android:background="@color/app_dcolor_background"
        app:layout_constraintBottom_toBottomOf="parrent"
        app:layout_constraintEnd_toEndOf="parrent"
        app:layout_constraintStart_toStartOf="parrent" />
    <View
        android:id="@id/top_layout_bg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px42"
        app:layout_constraintEnd_toEndOf="@id/root_layout_bg"
        app:layout_constraintStart_toStartOf="@id/root_layout_bg"
        app:layout_constraintTop_toTopOf="@id/root_layout_bg" />
    <TextView
        android:id="@id/top_replace_music_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/slt_item_tag"
        android:drawablePadding="@dimen/px6"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/px14"
        android:paddingTop="@dimen/px6"
        android:paddingEnd="@dimen/px14"
        android:paddingBottom="@dimen/px6"
        android:text="@string/xiaoying_str_editor_default_music_title_text_tip"
        android:textColor="@color/color_e6e6e6"
        android:textSize="@dimen/sp14"
        android:visibility="gone"
        app:drawableStartCompat="@drawable/editorx_theme_audio_replace_icon"
        app:layout_constraintBottom_toBottomOf="@id/top_layout_bg"
        app:layout_constraintEnd_toEndOf="@id/top_layout_bg"
        app:layout_constraintStart_toStartOf="@id/top_layout_bg"
        app:layout_constraintTop_toTopOf="@id/top_layout_bg" />
    <TextView
        android:id="@id/top_title_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_semibold"
        android:text="@string/xiaoying_str_ve_theme_title"
        android:textColor="@color/white"
        android:textSize="@dimen/sp14"
        app:layout_constraintBottom_toBottomOf="@id/top_layout_bg"
        app:layout_constraintEnd_toEndOf="@id/top_layout_bg"
        app:layout_constraintStart_toStartOf="@id/top_layout_bg"
        app:layout_constraintTop_toTopOf="@id/top_layout_bg" />
    <com.videoai.aivpcore.editorx.board.effect.ui.VThemeIcon
        android:layout_width="@dimen/px42"
        android:layout_height="@dimen/px42"
        android:background="@drawable/btn_dcolor_ripple"
        android:scaleType="centerInside"
        android:src="@drawable/app_default_close_gray"
        app:layout_constraintBottom_toBottomOf="@id/top_layout_bg"
        app:layout_constraintEnd_toEndOf="parrent"
        app:layout_constraintTop_toTopOf="@id/top_layout_bg" />
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/px1"
        android:background="@color/app_dcolor_indicator"
        app:layout_constraintBottom_toBottomOf="@id/top_layout_bg"
        app:layout_constraintLeft_toLeftOf="parrent"
        app:layout_constraintRight_toRightOf="parrent" />
    <com.videoai.aivpcore.editorx.widget.magic.MagicTemplateLayout
        android:id="@id/magic_layout"
        android:layout_width="match_parent"
        android:layout_height="0.0dip"
        app:layout_constraintBottom_toBottomOf="@id/root_layout_bg"
        app:layout_constraintEnd_toEndOf="parrent"
        app:layout_constraintStart_toStartOf="parrent"
        app:layout_constraintTop_toBottomOf="@id/top_layout_bg" />
</androidx.constraintlayout.widget.ConstraintLayout>