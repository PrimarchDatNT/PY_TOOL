<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:paddingStart="12.0dip"
        android:paddingTop="6.0dip"
        android:paddingEnd="12.0dip"
        android:paddingBottom="6.0dip"
        android:text="@string/xiaoying_str_param_adjust_title"
        android:textColor="@color/editorx_selector_recent_text_color"
        android:textSize="14.0sp"
        app:autoSizeMaxTextSize="@dimen/editorx_template_group_normal_textsize"
        app:autoSizeMinTextSize="@dimen/editorx_template_group_tiny_textsize"
        app:autoSizeTextType="uniform" />
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_params_vip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/tv_title"
        android:layout_alignEnd="@id/tv_title"
        android:src="@drawable/ic_diamon_premium"
        android:visibility="gone" />
</RelativeLayout>