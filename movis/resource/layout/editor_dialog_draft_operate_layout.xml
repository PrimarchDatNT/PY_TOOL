<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/draft_operate_root"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_app_setting_dialog"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/draft_operate_delete"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px48"
        android:background="@drawable/btn_dcolor_ripple"
        android:gravity="center_vertical">
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/px12"
            android:drawableStart="@drawable/ic_studio_delete_draft"
            android:drawablePadding="@dimen/px8"
            android:fontFamily="@font/poppins_semibold"
            android:text="@string/xiaoying_str_homepage_delete_prj_title"
            android:textColor="@color/white"
            android:textSize="@dimen/sp14" />
    </LinearLayout>
    <View
        android:layout_width="@dimen/px160"
        android:layout_height="@dimen/px1"
        android:layout_gravity="center" />
    <LinearLayout
        android:id="@+id/draft_operate_copy"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px48"
        android:background="@drawable/btn_dcolor_ripple"
        android:gravity="center_vertical">
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/px12"
            android:drawableStart="@drawable/editor_draft_operate_copy_icon"
            android:drawablePadding="@dimen/px8"
            android:fontFamily="@font/poppins_semibold"
            android:text="@string/xiaoying_str_homepage_copy_prj_title"
            android:textColor="@color/white"
            android:textSize="@dimen/sp14" />
    </LinearLayout>
</LinearLayout>