<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/list_item_music_local_scan_layout"
    android:layout_width="match_parent"
    android:layout_height="50.0dip"
    android:background="@color/black"
    android:gravity="center"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/scan_container"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/scan_layout_type_a"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/xiaoying_str_ve_gallery_scan_music_title"
                android:textColor="@color/white_p70"
                android:textStyle="bold" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10.0dip"
                android:layout_marginLeft="10.0dip"
                android:src="@drawable/xiaoying_music_item_local_scan" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/scan_layout_type_b"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="10.0dip"
            android:layout_marginLeft="10.0dip"
            android:layout_marginTop="11.0dip"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/xiaoying_music_item_local_scan" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3.0dip"
                android:text="@string/xiaoying_str_ve_gallery_scan_music_title"
                android:textColor="@color/color_8E8E93"
                android:textSize="10.0sp"
                android:textStyle="bold" />
        </LinearLayout>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/music_search_entry_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="13.0dip"
        android:layout_marginLeft="13.0dip"
        android:layout_marginTop="10.0dip"
        android:layout_marginEnd="15.0dip"
        android:layout_marginRight="15.0dip"
        android:layout_marginBottom="3.0dip"
        android:layout_toEndOf="@id/scan_container"
        android:layout_toRightOf="@id/scan_container"
        android:background="@drawable/editor_shape_search_music_entry"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/editor_btn_music_search" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5.0dip"
            android:layout_marginLeft="5.0dip"
            android:text="@string/xiaoying_str_search_local_music"
            android:textColor="@color/color_8E8E93"
            android:textSize="14.0sp" />
    </LinearLayout>
</RelativeLayout>