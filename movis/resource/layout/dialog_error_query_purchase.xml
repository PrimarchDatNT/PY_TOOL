<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:tag="layout/dialog_error_query_purchase_0">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_bottom_dialog"
        android:orientation="vertical">
        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/px12"
            android:adjustViewBounds="true"
            android:src="@drawable/ic_query_error" />
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/px24"
            android:layout_marginTop="@dimen/px12"
            android:layout_marginEnd="@dimen/px24"
            android:gravity="center"
            android:text="@string/iap_error_load_purchase_title"
            android:textColor="@color/white"
            android:textSize="@dimen/sp16"
            android:textStyle="bold" />
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/px12"
            android:layout_marginTop="@dimen/px8"
            android:layout_marginEnd="@dimen/px12"
            android:gravity="center"
            android:text="@string/iap_error_load_purchase_msg"
            android:textColor="@color/white"
            android:textSize="@dimen/sp16" />
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvReload"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px42"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/px16"
            android:layout_marginTop="@dimen/px24"
            android:layout_marginEnd="@dimen/px16"
            android:layout_marginBottom="@dimen/px20"
            android:background="@drawable/app_default_button"
            android:gravity="center"
            android:minWidth="@dimen/px100"
            android:text="@string/iap_reload_cta"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="@dimen/sp16"
            android:textStyle="bold" />
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_back"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px42"
            android:layout_marginStart="@dimen/px16"
            android:layout_marginEnd="@dimen/px16"
            android:layout_marginBottom="@dimen/px20"
            android:background="@drawable/app_res_sample_2"
            android:gravity="center"
            android:text="@string/xiaying_str_com_rating_dialog_bt_negative"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/sp16"
            android:textStyle="bold" />
    </LinearLayout>
</FrameLayout>