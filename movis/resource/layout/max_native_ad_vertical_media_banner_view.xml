<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="320.0dip"
    android:layout_height="50.0dip"
    android:background="@android:color/white"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/applovin_native_inner_parent_layout"
        android:layout_width="50.0dip"
        android:layout_height="320.0dip"
        android:rotation="270.0"
        android:transformPivotX="25.0dip"
        android:transformPivotY="25.0dip">
        <LinearLayout
            android:id="@+id/applovin_native_inner_linear_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:orientation="vertical">
            <FrameLayout
                android:id="@+id/applovin_native_options_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <FrameLayout
                android:id="@+id/applovin_native_icon_view"
                style="@style/SmallIconView">
                <ImageView
                    android:id="@+id/applovin_native_icon_image_view"
                    style="@style/SmallIconView" />
            </FrameLayout>
            <FrameLayout
                android:id="@+id/applovin_native_media_content_view"
                style="@style/SmallIconView" />
            <TextView
                style="@style/com.applovin.mediation.nativeAds.MaxNativeAdView.SmallAdBadgeTextView"
                android:layout_margin="2.0dip" />
            <TextView
                android:id="@+id/applovin_native_title_text_view"
                style="@style/com.applovin.mediation.nativeAds.MaxNativeAdView.SmallVerticalTitleTextSize"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingLeft="2.0dip"
                android:paddingRight="2.0dip" />
            <TextView
                android:id="@+id/applovin_native_advertiser_text_view"
                style="@style/com.applovin.mediation.nativeAds.MaxNativeAdView.SmallVerticalBodyTextSize"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingLeft="2.0dip"
                android:paddingRight="2.0dip" />
        </LinearLayout>
        <TextView
            android:id="@+id/applovin_native_body_text_view"
            style="@style/com.applovin.mediation.nativeAds.MaxNativeAdView.SmallVerticalBodyTextSize"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/applovin_native_cta_button"
            android:layout_below="@id/applovin_native_inner_linear_layout"
            android:gravity="center"
            android:paddingLeft="2.0dip"
            android:paddingTop="2.0dip"
            android:paddingRight="2.0dip"
            android:paddingBottom="2.0dip" />
        <Button
            android:id="@+id/applovin_native_cta_button"
            style="@style/com.applovin.mediation.nativeAds.MaxNativeAdView.CTAButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="1.0dip"
            android:layout_marginRight="1.0dip"
            android:layout_marginBottom="3.0dip"
            android:minWidth="0.0dip"
            android:minHeight="0.0dip"
            android:padding="1.0dip"
            android:singleLine="false"
            android:textSize="12.0sp" />
    </RelativeLayout>
</LinearLayout>