<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/black">
    <ImageView
        android:id="@+id/iv_download_more"
        android:layout_width="40.0dip"
        android:layout_height="40.0dip"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:background="@color/transparent"
        android:src="@drawable/editor_icon_effect_sticker_download" />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_category_group"
        android:layout_width="match_parent"
        android:layout_height="40.0dip"
        android:layout_toStartOf="@id/iv_download_more"
        android:layout_toLeftOf="@id/iv_download_more"
        android:background="@color/white_p08" />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_category_group_detail"
        android:layout_width="match_parent"
        android:layout_height="118.0dip"
        android:layout_below="@id/recycler_category_group" />
</RelativeLayout>