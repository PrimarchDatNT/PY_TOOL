<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_app_setting_dialog"
    android:orientation="vertical">
    <FrameLayout
        android:id="@id/ll_delete_video"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px48"
        android:background="@drawable/btn_dcolor_ripple">
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/px12"
            android:drawableStart="@drawable/ic_studio_delete_draft"
            android:drawablePadding="@dimen/px8"
            android:fontFamily="@font/poppins_semibold"
            android:gravity="center"
            android:text="@string/xiaoying_str_person_video_delete"
            android:textColor="@color/white"
            android:textSize="@dimen/sp14" />
    </FrameLayout>
    <View
        android:layout_width="@dimen/px160"
        android:layout_height="@dimen/px1"
        android:layout_gravity="center" />
    <FrameLayout
        android:id="@id/ll_share_video"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px48"
        android:background="@drawable/btn_dcolor_ripple">
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/px12"
            android:drawableStart="@drawable/ic_share_video"
            android:drawablePadding="@dimen/px8"
            android:fontFamily="@font/poppins_semibold"
            android:gravity="center"
            android:text="@string/xiaoying_str_studio_qq_prj_share_title"
            android:textColor="@color/white"
            android:textSize="@dimen/sp14"
            app:drawableTint="@color/white" />
    </FrameLayout>
</LinearLayout>