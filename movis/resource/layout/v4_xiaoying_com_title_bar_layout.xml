<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="48.0dip">
    <ImageView
        android:id="@id/xiaoying_com_btn_left"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:paddingStart="8.0dip"
        android:paddingLeft="8.0dip"
        android:scaleType="centerInside"
        android:src="@drawable/v4_xiaoying_cam_btn_cam_cancel_selector" />
    <ImageView
        android:id="@id/xiaoying_com_btn_right"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="8.0dip"
        android:layout_marginRight="8.0dip"
        android:scaleType="centerInside"
        android:src="@drawable/v4_xiaoying_com_btn_next_selector" />
    <LinearLayout
        android:id="@id/xiaoying_com_layout_title"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_marginStart="32.0dip"
        android:layout_marginLeft="32.0dip"
        android:layout_toEndOf="@id/xiaoying_com_btn_left"
        android:layout_toRightOf="@id/xiaoying_com_btn_left"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <TextView
            android:id="@id/xiaoying_com_textview_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center"
            android:fontFamily="sans-serif-light"
            android:text="edit"
            android:textColor="@color/white"
            android:textSize="18.0sp"
            android:textStyle="bold" />
        <ImageView
            android:id="@id/xiaoying_com_img_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5.0dip"
            android:layout_marginLeft="5.0dip" />
        <TextView
            android:id="@id/xiaoying_com_textview_sub_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center"
            android:visibility="gone" />
    </LinearLayout>
</RelativeLayout>