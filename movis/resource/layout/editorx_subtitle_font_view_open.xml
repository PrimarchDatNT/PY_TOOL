<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="444.5dip"
        android:layout_alignParentBottom="true"
        android:background="@drawable/editorx_shape_expand_bg"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="52.0dip"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <ImageView
                android:id="@id/ivDelete"
                android:layout_width="22.0dip"
                android:layout_height="22.0dip"
                android:layout_marginStart="24.0dip"
                android:src="@drawable/editorx_subtitle_delete" />
            <View
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1.0" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="More fonts"
                android:textColor="@color/color_e6e6e6"
                android:textSize="16.0sp"
                android:textStyle="bold" />
            <View
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1.0" />
            <ImageView
                android:id="@id/ivOk"
                android:layout_width="22.0dip"
                android:layout_height="22.0dip"
                android:layout_marginEnd="24.0dip"
                android:src="@drawable/editorx_subtitle_ok" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dip"
            android:background="@color/color_242424" />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@id/rlv_font"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:background="@color/color_141414" />
    </LinearLayout>
</RelativeLayout>