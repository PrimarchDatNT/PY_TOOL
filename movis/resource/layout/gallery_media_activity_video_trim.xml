<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_dcolor_background">
    <View
        android:id="@+id/vt_title_bg"
        android:layout_width="match_parent"
        android:layout_height="?a4"
        android:background="@color/app_dcolor_bg_1"
        app:layout_constraintEnd_toEndOf="parrent"
        app:layout_constraintStart_toStartOf="parrent"
        app:layout_constraintTop_toTopOf="parrent" />
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/video_trim_btn_back"
        android:layout_width="?a4"
        android:layout_height="?a4"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:adjustViewBounds="true"
        android:background="@drawable/btn_dcolor_ripple"
        android:scaleType="centerInside"
        android:src="@drawable/ic_back" />
    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="?a4"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@id/video_trim_btn_back"
        android:gravity="center"
        android:text="@string/xiaoying_str_pip_priview"
        android:textColor="@color/white"
        android:textSize="@dimen/sp16"
        android:textStyle="bold" />
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/video_trim_btn_done"
        android:layout_width="?a4"
        android:layout_height="?a4"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:adjustViewBounds="true"
        android:background="@drawable/btn_dcolor_ripple"
        android:scaleType="centerInside"
        android:src="@drawable/gallery_board_next_btn_selector" />
    <RelativeLayout
        android:id="@+id/layout_preview_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/video_trim_layout_operation"
        android:layout_below="@id/vt_title_bg"
        android:background="@color/veds_color_bg_black_1">
        <com.videoedit.gallery.widget.PlayerView
            android:id="@+id/video_trim_playerview"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/video_trim_water_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/gallery_eeyeful_water_icon"
            android:visibility="gone" />
        <com.videoedit.gallery.widget.crop.CropImageView
            android:id="@+id/crop_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:adjustViewBounds="true"
            android:scaleType="centerInside"
            android:visibility="gone" />
    </RelativeLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/video_trim_layout_operation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="15.0dip">
        <FrameLayout
            android:id="@+id/video_trim_layout_times"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px20"
            android:background="@color/transparent"
            app:layout_constraintLeft_toLeftOf="parrent"
            app:layout_constraintRight_toRightOf="parrent"
            app:layout_constraintTop_toTopOf="parrent">
            <TextView
                android:id="@+id/video_trim_left_time"
                style="@style/TextSingleLine"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/px28"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="@dimen/sp12" />
            <TextView
                android:id="@+id/video_trim_right_time"
                style="@style/TextSingleLine"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="@dimen/sp12" />
        </FrameLayout>
        <com.videoedit.gallery.widget.trim.VeAdvanceTrimGallery
            android:id="@+id/video_trim_tool"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px100"
            android:background="@color/transparent"
            android:gravity="center_vertical"
            android:spacing="0.0dip"
            android:unselectedAlpha="1.0"
            app:layout_constraintLeft_toLeftOf="parrent"
            app:layout_constraintRight_toRightOf="parrent"
            app:layout_constraintTop_toBottomOf="@id/video_trim_layout_times" />
        <RelativeLayout
            android:id="@+id/ops_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px72"
            android:background="@color/app_dcolor_bg_1"
            android:baselineAligned="false"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parrent"
            app:layout_constraintEnd_toEndOf="parrent"
            app:layout_constraintStart_toStartOf="parrent"
            app:layout_constraintTop_toBottomOf="@id/video_trim_tool">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_toStartOf="@id/layout_rotate"
                android:gravity="center"
                android:orientation="vertical">
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/video_trim_play_icon"
                    android:layout_width="@dimen/px24"
                    android:layout_height="@dimen/px24"
                    android:scaleType="centerInside"
                    android:src="@drawable/gallery_selector_cropper_play" />
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/px4"
                    android:text="@string/play_button_content_description"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp12" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/layout_rotate"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingStart="@dimen/px32"
                android:paddingEnd="@dimen/px32">
                <ImageButton
                    android:id="@+id/btn_rotate"
                    android:layout_width="@dimen/px24"
                    android:layout_height="@dimen/px24"
                    android:background="@drawable/btn_dcolor_ripple"
                    android:clickable="false"
                    android:src="@drawable/gallery_pic_rotate_icon" />
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/px4"
                    android:text="@string/xiaoying_str_ve_basic_rotate_title"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp12" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/layout_crop"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_toEndOf="@id/layout_rotate"
                android:gravity="center"
                android:orientation="vertical">
                <ImageButton
                    android:id="@+id/btn_crop"
                    android:layout_width="@dimen/px24"
                    android:layout_height="@dimen/px24"
                    android:background="@drawable/btn_dcolor_ripple"
                    android:clickable="false"
                    android:src="@drawable/gallery_selector_video_trim_crop" />
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/px4"
                    android:text="@string/crop"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp12" />
            </LinearLayout>
        </RelativeLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</RelativeLayout>