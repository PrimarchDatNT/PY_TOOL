<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relativelayout_seekbar"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageButton
        android:id="@+id/seekbar_play"
        android:layout_width="38.0dip"
        android:layout_height="38.0dip"
        android:layout_centerVertical="true"
        android:layout_marginStart="6.0dip"
        android:layout_marginLeft="6.0dip"
        android:background="@null"
        android:contentDescription="@null"
        android:padding="6.0dip"
        android:scaleType="centerCrop"
        android:src="@drawable/editor_selector_video_play_icon" />
    <TextView
        android:id="@+id/txtview_cur_time"
        android:layout_width="wrap_content"
        android:layout_height="30.0dip"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="40.0dip"
        android:layout_marginLeft="40.0dip"
        android:layout_marginEnd="8.0dip"
        android:layout_marginRight="8.0dip"
        android:gravity="center"
        android:shadowColor="#40000000"
        android:shadowDy="2.0"
        android:shadowRadius="1.0"
        android:singleLine="true"
        android:text=""
        android:textColor="@color/white_p50"
        android:textSize="12.0sp" />
    <SeekBar
        android:id="@+id/seekbar_simple_edit"
        android:layout_width="match_parent"
        android:layout_height="30.0dip"
        android:layout_centerVertical="true"
        android:layout_marginStart="-4.0dip"
        android:layout_marginLeft="-4.0dip"
        android:layout_marginEnd="-4.0dip"
        android:layout_marginRight="-4.0dip"
        android:layout_toStartOf="@id/txtview_duration"
        android:layout_toLeftOf="@id/txtview_duration"
        android:layout_toEndOf="@id/txtview_cur_time"
        android:layout_toRightOf="@id/txtview_cur_time"
        android:focusable="true"
        android:max="100"
        android:maxHeight="2.0dip"
        android:paddingStart="4.0dip"
        android:paddingLeft="4.0dip"
        android:paddingEnd="4.0dip"
        android:paddingRight="4.0dip"
        android:progress="0"
        android:progressDrawable="@drawable/xiaoying_music_extarct_direct_layer_preview_seekbar_progress"
        android:splitTrack="false"
        android:thumb="@drawable/xiaoying_music_extract_selector_video_seekbar"
        android:thumbOffset="4.0dip"
        android:visibility="visible" />
    <TextView
        android:id="@+id/txtview_duration"
        android:layout_width="wrap_content"
        android:layout_height="30.0dip"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="8.0dip"
        android:layout_marginLeft="8.0dip"
        android:layout_marginEnd="10.0dip"
        android:layout_marginRight="10.0dip"
        android:gravity="center"
        android:shadowColor="#40000000"
        android:shadowDy="2.0"
        android:shadowRadius="1.0"
        android:singleLine="true"
        android:text=""
        android:textColor="@color/white_p50"
        android:textSize="12.0sp" />
</RelativeLayout>