<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px270"
        android:layout_gravity="bottom">
        <RelativeLayout
            android:id="@id/rl_bar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px56"
            android:layout_alignParentBottom="true"
            android:background="@color/app_dcolor_bg_1"
            android:clickable="true"
            android:focusable="true"
            android:visibility="gone">
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@id/tv_bar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/px16"
                android:text="@string/xiaoying_str_edit_use_text"
                android:textColor="@color/white"
                android:textSize="@dimen/sp12"
                android:textStyle="bold" />
            <RelativeLayout
                android:id="@id/rl_bar_current"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/px16"
                android:layout_toEndOf="@id/tv_bar_title">
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@id/tv_current_clip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@drawable/slt_item_tag"
                    android:gravity="center"
                    android:paddingStart="@dimen/px12"
                    android:paddingTop="@dimen/px4"
                    android:paddingEnd="@dimen/px12"
                    android:paddingBottom="@dimen/px4"
                    android:text="@string/xiaoying_str_creator_now_clip"
                    android:textColor="@color/text_selector_tab"
                    android:textSize="@dimen/sp12" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@id/rl_bar_all"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/px12"
                android:layout_toEndOf="@id/rl_bar_current">
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@id/tv_all_clip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@drawable/slt_item_tag"
                    android:gravity="center"
                    android:paddingStart="@dimen/px12"
                    android:paddingTop="@dimen/px4"
                    android:paddingEnd="@dimen/px12"
                    android:paddingBottom="@dimen/px4"
                    android:text="@string/xiaoying_str_creator_all_clip"
                    android:textColor="@color/text_selector_tab"
                    android:textSize="@dimen/sp12" />
            </RelativeLayout>
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@id/iv_bar_done"
                android:layout_width="@dimen/px56"
                android:layout_height="@dimen/px56"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:background="@drawable/btn_dcolor_ripple"
                android:scaleType="centerInside"
                android:src="@drawable/editor_selector_btn_ok" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@id/rl_children"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/px40"
            android:layout_marginBottom="@dimen/px56"
            android:background="@color/app_dcolor_background" />
        <RelativeLayout
            android:id="@id/rl_tittle_text"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px40"
            android:background="@color/app_dcolor_background">
            <LinearLayout
                android:id="@id/ll_tittle_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:orientation="horizontal">
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@id/tv_normal_filter"
                    android:layout_width="0.0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="1.0"
                    android:fontFamily="@font/poppins_semibold"
                    android:gravity="center"
                    android:text="@string/xiaoying_str_normal_filter_title"
                    android:textColor="@drawable/editorx_selector_filter_tab_title"
                    android:textSize="@dimen/sp14" />
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@id/tv_specific_filter"
                    android:layout_width="0.0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="1.0"
                    android:fontFamily="@font/poppins_semibold"
                    android:gravity="center"
                    android:text="@string/xiaoying_str_specific_filter_title"
                    android:textColor="@drawable/editorx_selector_filter_tab_title"
                    android:textSize="@dimen/sp14" />
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@id/tv_param_adjust"
                    android:layout_width="0.0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="1.0"
                    android:fontFamily="@font/poppins_semibold"
                    android:gravity="center"
                    android:text="@string/xiaoying_str_param_adjust_title"
                    android:textColor="@drawable/editorx_selector_filter_tab_title"
                    android:textSize="@dimen/sp14" />
                <RelativeLayout
                    android:layout_width="0.0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="1.0"
                    android:visibility="gone">
                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@id/iv_vip_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="12.0dip"
                        android:layout_marginTop="-6.0dip"
                        android:layout_marginEnd="-10.0dip" />
                </RelativeLayout>
            </LinearLayout>
            <View
                android:id="@id/v_three_tab_indicator"
                android:layout_width="0.0dip"
                android:layout_height="0.0dip"
                android:layout_alignParentBottom="true"
                android:background="@drawable/editorx_filter_shape_tab_indicator"
                android:visibility="gone" />
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/px1"
                android:layout_alignParentBottom="true"
                android:background="@color/app_dcolor_indicator" />
        </RelativeLayout>
    </RelativeLayout>
</FrameLayout>