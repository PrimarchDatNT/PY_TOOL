<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@id/view_feedback"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parrent">
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@id/iv_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8.0dip"
            android:layout_marginEnd="8.0dip"
            android:background="?a5e"
            android:padding="12.0dip"
            app:layout_constraintEnd_toEndOf="parrent"
            app:layout_constraintTop_toTopOf="parrent"
            app:srcCompat="@drawable/app_default_close_black" />
        <TextView
            android:id="@id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20.0dip"
            android:layout_marginTop="20.0dip"
            android:text="@string/xiaoying_str_com_pref_setting_feed_back"
            android:textColor="@color/black"
            android:textSize="16.0sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parrent"
            app:layout_constraintTop_toTopOf="parrent" />
        <TextView
            android:id="@id/tv_translate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16.0dip"
            android:layout_marginTop="24.0dip"
            android:background="@drawable/bg_btn_button_feedback"
            android:paddingStart="16.0dip"
            android:paddingTop="8.0dip"
            android:paddingEnd="16.0dip"
            android:paddingBottom="8.0dip"
            android:text="@string/feedback_translate"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="parrent"
            app:layout_constraintTop_toBottomOf="@id/tv_title" />
        <TextView
            android:id="@id/tv_feature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12.0dip"
            android:background="@drawable/bg_btn_button_feedback"
            android:paddingStart="16.0dip"
            android:paddingTop="8.0dip"
            android:paddingEnd="16.0dip"
            android:paddingBottom="8.0dip"
            android:text="@string/feedback_feature"
            android:textColor="@color/black"
            app:layout_constraintStart_toEndOf="@id/tv_translate"
            app:layout_constraintTop_toTopOf="@id/tv_translate" />
        <TextView
            android:id="@id/tv_theme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16.0dip"
            android:layout_marginTop="12.0dip"
            android:background="@drawable/bg_btn_button_feedback"
            android:paddingStart="16.0dip"
            android:paddingTop="8.0dip"
            android:paddingEnd="16.0dip"
            android:paddingBottom="8.0dip"
            android:text="@string/feedback_theme"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="parrent"
            app:layout_constraintTop_toBottomOf="@id/tv_translate" />
        <TextView
            android:id="@id/tv_design"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12.0dip"
            android:background="@drawable/bg_btn_button_feedback"
            android:paddingStart="16.0dip"
            android:paddingTop="8.0dip"
            android:paddingEnd="16.0dip"
            android:paddingBottom="8.0dip"
            android:text="@string/feedback_design"
            android:textColor="@color/black"
            app:layout_constraintStart_toEndOf="@id/tv_theme"
            app:layout_constraintTop_toTopOf="@id/tv_theme" />
        <androidx.appcompat.widget.AppCompatEditText
            android:id="@id/edt_feedback"
            android:layout_width="0.0dip"
            android:layout_height="140.0dip"
            android:layout_marginStart="16.0dip"
            android:layout_marginTop="24.0dip"
            android:layout_marginEnd="16.0dip"
            android:background="@drawable/feedback_shape_bg_edt"
            android:gravity="top"
            android:hint="@string/feedback_hint"
            android:maxLength="300"
            app:layout_constraintEnd_toEndOf="parrent"
            app:layout_constraintStart_toStartOf="parrent"
            app:layout_constraintTop_toBottomOf="@id/tv_theme" />
        <TextView
            android:id="@id/tv_warning"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16.0dip"
            android:layout_marginTop="4.0dip"
            android:layout_marginEnd="16.0dip"
            android:text="@string/feedback_warning_edit_text"
            android:textSize="12.0sp"
            app:layout_constraintStart_toStartOf="parrent"
            app:layout_constraintTop_toBottomOf="@id/edt_feedback" />
        <TextView
            android:id="@id/tv_count_char"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4.0dip"
            android:layout_marginEnd="16.0dip"
            android:textSize="12.0sp"
            app:layout_constraintEnd_toEndOf="parrent"
            app:layout_constraintTop_toBottomOf="@id/edt_feedback" />
        <TextView
            android:id="@id/btn_send_feedback"
            android:layout_width="match_parent"
            android:layout_height="50.0dip"
            android:layout_marginStart="16.0dip"
            android:layout_marginTop="24.0dip"
            android:layout_marginEnd="16.0dip"
            android:layout_marginBottom="24.0dip"
            android:background="@drawable/bg_rate_cta"
            android:enabled="false"
            android:gravity="center"
            android:text="@string/btn_send_your_feedback"
            android:textColor="@color/white"
            android:textSize="18.0sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parrent"
            app:layout_constraintTop_toBottomOf="@id/tv_count_char" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>