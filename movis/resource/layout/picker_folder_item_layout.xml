<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/layout_album_cover"
        android:layout_width="105.0dip"
        android:layout_height="105.0dip">
        <ImageView
            android:id="@+id/iv_album_cover"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop" />
        <ImageView
            android:id="@+id/iv_new_flag"
            android:layout_width="18.0dip"
            android:layout_height="18.0dip"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/xiaoying_com_new_file_mark"
            android:visibility="invisible" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout_album_cover"
        android:layout_marginTop="5.0dip">
        <TextView
            android:id="@+id/picker_album_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxWidth="80.0dip"
            android:maxLines="1"
            android:textColor="@color/white"
            android:textSize="14.0sp" />
        <TextView
            android:id="@+id/picker_album_item_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:ellipsize="end"
            android:maxWidth="80.0dip"
            android:maxLines="1"
            android:textColor="#ff8e8e93"
            android:textSize="14.0sp" />
    </RelativeLayout>
</RelativeLayout>