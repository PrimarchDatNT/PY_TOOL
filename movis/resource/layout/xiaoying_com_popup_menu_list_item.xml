<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingTop="7.0dip"
    android:paddingBottom="7.0dip">
    <com.videoai.mobile.component.imageview.DynamicLoadingImageView
        android:id="@+id/popup_item_icon"
        android:layout_width="21.0dip"
        android:layout_height="21.0dip"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="20.0dip"
        android:layout_marginLeft="20.0dip"
        android:visibility="gone"
        fresco:actualImageScaleType="yv" />
    <TextView
        android:id="@+id/popup_item_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="start|center"
        android:lines="1"
        android:paddingStart="25.0dip"
        android:paddingLeft="25.0dip"
        android:singleLine="true"
        android:textColor="@color/color_333333"
        android:textDirection="locale"
        android:textSize="@dimen/v2_pop_menu_item_txtsize" />
</LinearLayout>