<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/tt_hand_container"
        android:layout_width="110.0dip"
        android:layout_height="110.0dip"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/tt_splash_rock_img"
            android:layout_width="60.0dip"
            android:layout_height="60.0dip"
            android:src="@drawable/tt_splash_rock" />
        <TextView
            android:id="@+id/tt_splash_rock_top_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="Shake it"
            android:textColor="@android:color/white"
            android:textSize="14.0sp" />
    </LinearLayout>
    <TextView
        android:id="@+id/tt_splash_rock_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="12.0dip"
        android:shadowColor="#99000000"
        android:shadowDx="3.0"
        android:shadowDy="3.0"
        android:shadowRadius="4.0"
        android:text="Go to details page or third-party application"
        android:textColor="@android:color/white" />
</LinearLayout>