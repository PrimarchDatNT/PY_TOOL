<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@id/rl_font_item_layout"
    android:layout_width="match_parent"
    android:layout_height="@dimen/px48"
    android:background="@drawable/editorx_shape_effect_font_item_bg_unchoose"
    android:gravity="center">
    <LinearLayout
        android:id="@id/layout_local"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone">
        <ImageView
            android:id="@id/iv_add"
            android:layout_width="@dimen/px24"
            android:layout_height="@dimen/px24"
            android:scaleType="centerInside"
            android:src="@drawable/editorx_icon_subtitle_font_add" />
        <TextView
            android:id="@id/tv_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4.0dip"
            android:text="@string/editorx_effect_add_font"
            android:textColor="@color/color_e6e6e6"
            android:textSize="@dimen/sp12"
            android:textStyle="bold" />
    </LinearLayout>
    <RelativeLayout
        android:id="@id/rl_subtitle_font_item_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:minWidth="120.0dip">
        <TextView
            android:id="@id/tv_font_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:maxWidth="120.0dip"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textSize="17.0sp" />
        <ImageView
            android:id="@id/iv_font_item"
            android:layout_width="99.0dip"
            android:layout_height="20.0dip"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="5.0dip"
            android:alpha="20.0" />
        <ImageView
            android:id="@id/iv_font_download_flag"
            android:layout_width="@dimen/px16"
            android:layout_height="@dimen/px16"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_margin="@dimen/px2"
            android:layout_toEndOf="@id/iv_font_item"
            android:src="@drawable/editorx_text_typeface_download_icon"
            android:visibility="gone" />
        <ImageView
            android:id="@id/iv_vip"
            android:layout_width="@dimen/px16"
            android:layout_height="@dimen/px16"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/px2"
            android:src="@drawable/ic_diamon_premium"
            android:visibility="gone" />
    </RelativeLayout>
    <com.videoai.aivpcore.editorx.widget.magic.RoundProgressView
        android:id="@id/progress_download"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        app:backgroundColor="#99020202"
        app:circleCorner="0.0dip"
        app:circleProgress="0"
        app:circleRadius="90.0dip"
        app:startAngle="270" />
    <RelativeLayout
        android:id="@id/layoutRefresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white_p20"
        android:visibility="gone">
        <ImageView
            android:layout_width="@dimen/px24"
            android:layout_height="@dimen/px24"
            android:layout_centerInParent="true"
            android:scaleType="centerInside"
            android:src="@drawable/editorx_effect_subtitle_more" />
    </RelativeLayout>
</RelativeLayout>