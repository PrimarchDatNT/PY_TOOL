<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/music_item_play_layout"
    android:layout_width="match_parent"
    android:layout_height="@dimen/px96"
    android:background="@color/app_dcolor_bg_1"
    android:clickable="false"
    android:focusable="false"
    android:focusableInTouchMode="false"
    android:visibility="gone">
    <ImageView
        android:id="@+id/music_item_play_state"
        android:layout_width="@dimen/px36"
        android:layout_height="@dimen/px36"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/px16"
        android:layout_marginEnd="@dimen/px8"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:scaleType="center"
        android:src="@drawable/xiaoying_music_effect_item_play"
        android:visibility="invisible" />
    <com.videoai.aivpcore.explorer.ui.RangeLogicSeekBar
        android:id="@+id/music_item_play_seek_bar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginEnd="@dimen/px16"
        android:layout_toEndOf="@id/music_item_play_state"
        android:background="@color/transparent" />
</RelativeLayout>