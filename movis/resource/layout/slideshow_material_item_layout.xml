<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@id/content_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10.0dip"
        android:layout_marginEnd="10.0dip"
        android:layout_marginRight="10.0dip"
        android:background="@color/color_eeeeee">
        <ImageView
            android:id="@id/material_cover"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <ImageButton
            android:id="@id/btn_add"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_marginLeft="20.0dip"
            android:layout_marginTop="20.0dip"
            android:layout_marginRight="20.0dip"
            android:layout_marginBottom="20.0dip"
            android:background="@null"
            android:src="@drawable/editor_btn_slideshow_material_add" />
        <RelativeLayout
            android:id="@id/layout_video_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:visibility="gone">
            <TextView
                android:id="@id/video_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="5.0dip"
                android:layout_marginLeft="5.0dip"
                android:shadowDy="1.0"
                android:shadowRadius="1.0"
                android:text="00:00"
                android:textColor="@android:color/white"
                android:textSize="12.0sp" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="5.0dip"
                android:layout_marginRight="5.0dip"
                android:src="@drawable/editor_btn_slideshow_material_video_mask" />
        </RelativeLayout>
    </RelativeLayout>
    <ImageButton
        android:id="@id/btn_delete"
        android:layout_width="20.0dip"
        android:layout_height="20.0dip"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:background="@null"
        android:src="@drawable/editor_btn_slideshow_material_item_delete"
        android:visibility="gone" />
</RelativeLayout>