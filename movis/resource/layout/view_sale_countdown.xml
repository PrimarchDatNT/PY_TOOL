<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="?a4"
    android:tag="layout/view_sale_countdown_0">
    <LinearLayout
        android:layout_width="@dimen/px36"
        android:layout_height="@dimen/px36"
        android:layout_gravity="center"
        android:background="@drawable/app_res_sample_1"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingTop="@dimen/px2"
        android:paddingBottom="@dimen/px2">
        <androidx.appcompat.widget.AppCompatTextView
            style="@style/TextSingleLine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/unit_hour"
            android:textColor="@color/white"
            android:textSize="@dimen/sp10" />
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvHour"
            style="@style/TextSingleLine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:maxLines="1"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/sp12"
            android:textStyle="bold" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="@dimen/px36"
        android:layout_height="@dimen/px36"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/px6"
        android:background="@drawable/app_res_sample_1"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingTop="@dimen/px2"
        android:paddingBottom="@dimen/px2">
        <androidx.appcompat.widget.AppCompatTextView
            style="@style/TextSingleLine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/unit_min"
            android:textColor="@color/white"
            android:textSize="@dimen/sp10" />
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvMin"
            style="@style/TextSingleLine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:maxLines="1"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/sp12"
            android:textStyle="bold" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="@dimen/px36"
        android:layout_height="@dimen/px36"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/px6"
        android:background="@drawable/app_res_sample_1"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingTop="@dimen/px2"
        android:paddingBottom="@dimen/px2">
        <androidx.appcompat.widget.AppCompatTextView
            style="@style/TextSingleLine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/unit_sec"
            android:textColor="@color/white"
            android:textSize="@dimen/sp10" />
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvSec"
            style="@style/TextSingleLine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:maxLines="1"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/sp12"
            android:textStyle="bold" />
    </LinearLayout>
    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="@dimen/px26"
        android:layout_height="@dimen/px12"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="@dimen/px6"
        android:layout_marginBottom="@dimen/px10"
        android:adjustViewBounds="true"
        android:src="@drawable/ic_sale_countdown" />
</LinearLayout>