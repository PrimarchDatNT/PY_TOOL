<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:tag="layout/layout_popup_sale_0">
    <View
        android:id="@+id/anchor1"
        android:layout_width="match_parent"
        android:layout_height="0.100000024dip"
        app:layout_constraintBottom_toBottomOf="parrent"
        app:layout_constraintTop_toTopOf="parrent"
        app:layout_constraintVertical_bias="0.16" />
    <View
        android:id="@+id/anchor2"
        android:layout_width="match_parent"
        android:layout_height="0.100000024dip"
        app:layout_constraintBottom_toBottomOf="parrent"
        app:layout_constraintTop_toTopOf="parrent"
        app:layout_constraintVertical_bias="0.85" />
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvSkip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/px8"
        android:background="@drawable/app_res_sample_9"
        android:paddingStart="@dimen/px16"
        android:paddingTop="@dimen/px4"
        android:paddingEnd="@dimen/px16"
        android:paddingBottom="@dimen/px4"
        android:text="@string/skip"
        android:textColor="@color/black"
        android:textSize="@dimen/sp12"
        app:layout_constraintBottom_toTopOf="@id/anchor1"
        app:layout_constraintStart_toStartOf="@id/ivBackground" />
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/ivBackground"
        android:layout_width="match_parent"
        android:layout_height="0.0dip"
        android:layout_marginStart="@dimen/px28"
        android:layout_marginEnd="@dimen/px28"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="@id/anchor2"
        app:layout_constraintTop_toTopOf="@id/anchor1"
        app:shapeAppearanceOverlay="@style/RoundedRect" />
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/ivClick"
        android:layout_width="match_parent"
        android:layout_height="0.0dip"
        android:layout_marginStart="@dimen/px28"
        android:layout_marginEnd="@dimen/px28"
        android:background="@drawable/btn_dcolor_ripple"
        app:layout_constraintBottom_toBottomOf="@id/anchor2"
        app:layout_constraintTop_toTopOf="@id/anchor1"
        app:shapeAppearanceOverlay="@style/RoundedRect" />
    <com.videoai.aivpcore.unit.view.CountDownPopup
        android:id="@+id/countdownEvent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/px24"
        app:layout_constraintEnd_toEndOf="parrent"
        app:layout_constraintStart_toStartOf="parrent"
        app:layout_constraintTop_toTopOf="@id/anchor1" />
</androidx.constraintlayout.widget.ConstraintLayout>