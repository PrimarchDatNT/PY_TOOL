<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:tag="layout/view_sale_countdown_popup_0">
    <LinearLayout
        android:layout_width="@dimen/px42"
        android:layout_height="@dimen/px42"
        android:layout_gravity="center"
        android:background="@drawable/app_res_sample_10"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingTop="@dimen/px2"
        android:paddingBottom="@dimen/px2">
        <androidx.appcompat.widget.AppCompatTextView
            style="@style/TextSingleLine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_semibold"
            android:gravity="center"
            android:text="@string/unit_hour"
            android:textColor="@color/black"
            android:textSize="@dimen/sp10" />
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvHour"
            style="@style/TextSingleLine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_semibold"
            android:gravity="center"
            android:maxLines="1"
            android:textColor="@color/black"
            android:textSize="@dimen/sp16"
            android:textStyle="bold" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="@dimen/px42"
        android:layout_height="@dimen/px42"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/px6"
        android:background="@drawable/app_res_sample_10"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingTop="@dimen/px2"
        android:paddingBottom="@dimen/px2">
        <androidx.appcompat.widget.AppCompatTextView
            style="@style/TextSingleLine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_semibold"
            android:gravity="center"
            android:text="@string/unit_min"
            android:textColor="@color/black"
            android:textSize="@dimen/sp10" />
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvMin"
            style="@style/TextSingleLine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_semibold"
            android:gravity="center"
            android:maxLines="1"
            android:textColor="@color/black"
            android:textSize="@dimen/sp16"
            android:textStyle="bold" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="@dimen/px42"
        android:layout_height="@dimen/px42"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/px6"
        android:background="@drawable/app_res_sample_10"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingTop="@dimen/px2"
        android:paddingBottom="@dimen/px2">
        <androidx.appcompat.widget.AppCompatTextView
            style="@style/TextSingleLine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_semibold"
            android:gravity="center"
            android:text="@string/unit_sec"
            android:textColor="@color/black"
            android:textSize="@dimen/sp10" />
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvSec"
            style="@style/TextSingleLine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_semibold"
            android:gravity="center"
            android:maxLines="1"
            android:textColor="@color/black"
            android:textSize="@dimen/sp16"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>