<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:clickable="true">
    <RelativeLayout
        android:id="@+id/item_layout"
        android:layout_width="wrap_content"
        android:layout_height="100.0dip">
        <com.videoai.aivpcore.common.bitmapfun.util.RecyclingImageView
            android:id="@+id/img_icon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:scaleType="fitXY" />
        <View
            android:layout_width="match_parent"
            android:layout_height="39.0dip"
            android:layout_alignBottom="@id/img_icon"
            android:background="@drawable/vivavideo_tool_gallery_shadow" />
        <ImageView
            android:id="@+id/img_click_mask"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:scaleType="fitXY"
            android:src="@drawable/xiaoying_com_video_list_item_selector" />
        <RelativeLayout
            android:id="@+id/layout_video_mark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="5.0dip"
            android:layout_marginLeft="5.0dip"
            android:layout_marginBottom="3.0dip"
            android:background="@color/transparent"
            android:visibility="gone">
            <TextView
                android:id="@+id/txt_video_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginBottom="2.0dip"
                android:gravity="center"
                android:text="00:00"
                android:textColor="@color/white"
                android:textSize="13.0sp" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/xiaoying_gallery_preview_layout"
            android:layout_width="32.0dip"
            android:layout_height="32.0dip"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:clickable="true">
            <ImageView
                android:id="@+id/gallery_preview_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="3.0dip"
                android:layout_marginRight="3.0dip"
                android:layout_marginBottom="3.0dip"
                android:clickable="false"
                android:scaleType="centerCrop"
                android:src="@drawable/gallery_img_preview_icon" />
        </RelativeLayout>
        <ImageView
            android:id="@+id/xiaoying_item_gif_mark"
            android:layout_width="32.0dip"
            android:layout_height="32.0dip"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:scaleType="centerCrop"
            android:src="@drawable/gallery_icon_audio_type_gif"
            android:visibility="gone" />
    </RelativeLayout>
</RelativeLayout>