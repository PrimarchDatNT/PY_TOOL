<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:layout_gravity="center"
    android:background="@color/transparent">
    <RelativeLayout
        android:id="@id/simple_dialog_layout"
        android:layout_width="88.0dip"
        android:layout_height="88.0dip"
        android:layout_centerInParent="true"
        android:layout_gravity="center">
        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:adjustViewBounds="true"
            android:src="@drawable/editorx_loading" />
        <ProgressBar
            android:id="@id/progressBar1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:indeterminateDuration="2000"
            android:visibility="gone" />
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@id/progress_percent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/poppins_semibold"
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="12.0sp"
            android:visibility="gone" />
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@id/check_update_dialog_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/progressBar1"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/poppins_semibold"
            android:maxLines="1"
            android:paddingStart="4.0dip"
            android:paddingLeft="4.0dip"
            android:paddingTop="10.0dip"
            android:paddingEnd="4.0dip"
            android:paddingRight="4.0dip"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="18.0sp"
            android:visibility="gone" />
    </RelativeLayout>
</RelativeLayout>