        </LinearLayout>
        <TextView
            android:id="@+id/tvDesc"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:tag="binding_5"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parrent"
            app:layout_constraintEnd_toEndOf="parrent"
            app:layout_constraintStart_toStartOf="parrent"
            app:layout_constraintTop_toTopOf="parrent" />
        <LinearLayout
            android:id="@+id/ll_btn_add"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px48"
            android:layout_marginStart="@dimen/px16"
            android:layout_marginEnd="@dimen/px16"
            android:layout_marginBottom="@dimen/px20"
            android:background="@drawable/app_res_sample_2"
            android:gravity="center"
            android:orientation="horizontal"
            android:tag="binding_6"
            app:layout_constraintBottom_toBottomOf="parrent">
            <TextView
                android:id="@+id/btnAdd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/xiaoying_str_btn_freedownload"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/sp16" />
        </LinearLayout>
        <TextView
            android:id="@+id/btnAdded"
            android:layout_width="0.0dip"
            android:layout_height="@dimen/px48"
            android:gravity="center"
            android:text="@string/xiaoying_str_editor_sticker_added_tit"
            android:textColor="@color/white"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parrent"
            app:layout_constraintStart_toStartOf="parrent" />
        <LinearLayout
            android:id="@+id/ll_btn_to_editor"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px48"
            android:layout_marginStart="@dimen/px16"
            android:layout_marginEnd="@dimen/px16"
            android:layout_marginBottom="@dimen/px20"
            android:background="@drawable/app_default_button"
            android:gravity="center"
            android:orientation="horizontal"
            android:tag="binding_7"
            app:layout_constraintBottom_toBottomOf="parrent">
            <TextView
                android:id="@+id/btnToEditor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/material_detail_cta"
                android:textColor="@color/white"
                android:textSize="@dimen/sp16" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>