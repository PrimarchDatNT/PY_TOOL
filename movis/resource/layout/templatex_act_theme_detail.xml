                android:layout_margin="@dimen/px1"
                android:scaleType="fitXY"
                android:tag="binding_3"
                app:shapeAppearanceOverlay="@style/RoundedImageItem" />
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/px6"
                android:paddingBottom="@dimen/px6">
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/px8"
                    android:layout_marginEnd="@dimen/px40"
                    android:tag="binding_4"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp12" />
                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="@dimen/px24"
                    android:layout_height="@dimen/px24"
                    android:layout_gravity="end|center"
                    android:layout_marginEnd="@dimen/px8"
                    android:src="@drawable/ic_material_template" />
