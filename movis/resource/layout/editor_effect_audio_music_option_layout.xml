<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/ll_editor_audio_record_touch"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:descendantFocusability="afterDescendants">
        <ImageView
            android:id="@+id/iv_editor_music_fade_in"
            android:layout_width="32.0dip"
            android:layout_height="32.0dip"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="15.0dip"
            android:layout_marginLeft="15.0dip"
            android:src="@drawable/editor_icon_effect_music_fade_in_off"
            android:visibility="gone" />
        <TextView
            android:id="@+id/tv_editor_audio_operation"
            android:layout_width="113.0dip"
            android:layout_height="35.0dip"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@drawable/editor_selector_effect_sub_op_btn"
            android:gravity="center"
            android:text="@string/xiaoying_str_editor_sticker_add_new"
            android:textColor="@drawable/editor_selector_text_color_70ffffff_50ffffff"
            android:textSize="16.0sp"
            android:visibility="gone" />
        <ImageView
            android:id="@+id/iv_editor_audio_operation_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="30.0dip"
            android:layout_marginRight="30.0dip"
            android:layout_toStartOf="@id/tv_editor_audio_operation"
            android:layout_toLeftOf="@id/tv_editor_audio_operation"
            android:gravity="center"
            android:src="@drawable/editor_selector_effect_sub_op_left_btn"
            android:visibility="gone" />
        <ImageView
            android:id="@+id/iv_editor_music_fade_out"
            android:layout_width="32.0dip"
            android:layout_height="32.0dip"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="15.0dip"
            android:layout_marginRight="15.0dip"
            android:src="@drawable/editor_icon_effect_music_fade_out_off"
            android:visibility="gone" />
    </RelativeLayout>
</RelativeLayout>