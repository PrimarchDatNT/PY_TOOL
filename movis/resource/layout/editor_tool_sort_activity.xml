<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/layout_confirm"
        android:background="@android:color/black"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50.0dip"
            android:gravity="center_vertical"
            android:paddingStart="25.0dip"
            android:paddingLeft="25.0dip"
            android:paddingEnd="15.0dip"
            android:paddingRight="15.0dip"
            android:text="@string/xiaoying_str_cam_duration_portrait_no_limit"
            android:textColor="@color/color_8E8E93"
            android:textSize="12.0sp" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1.0px"
            android:background="#1affffff" />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@id/sort_rc_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
    <RelativeLayout
        android:id="@id/layout_confirm"
        android:layout_width="match_parent"
        android:layout_height="44.0dip"
        android:layout_alignParentBottom="true"
        android:background="@color/color_141414">
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/editor_icon_btn_ok_n"
            android:clickable="false" />
    </RelativeLayout>
</RelativeLayout>