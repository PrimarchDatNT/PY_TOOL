<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/px16"
    android:layout_marginTop="@dimen/px16"
    android:layout_marginEnd="@dimen/px16"
    android:background="@drawable/app_res_sample_3"
    android:paddingStart="@dimen/px16"
    android:paddingTop="@dimen/px20"
    android:paddingEnd="@dimen/px16"
    android:paddingBottom="@dimen/px20"
    android:tag="layout/layout_home_feature_0">
    <FrameLayout
        android:id="@+id/flCta"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px52"
        android:background="@drawable/app_res_sample_2">
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvCreate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:drawableStart="@drawable/ic_create_video"
            android:drawablePadding="@dimen/px8"
            android:gravity="center"
            android:text="@string/home_feature_cta"
            android:textAllCaps="true"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/sp14"
            android:textStyle="bold" />
    </FrameLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/px12"
        android:layout_marginTop="@dimen/px64"
        android:layout_marginEnd="@dimen/px12">
        <FrameLayout
            android:id="@+id/llFeauture1"
            android:layout_width="@dimen/px86"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:orientation="vertical">
            <com.videoai.aivpcore.unit.view.PressImageView
                android:layout_width="@dimen/px36"
                android:layout_height="@dimen/px36"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/ic_home_feature_1" />
            <androidx.appcompat.widget.AppCompatTextView
                style="@style/TextSingleLine"
                android:layout_width="match_parent"
                android:layout_height="@dimen/px20"
                android:layout_marginTop="@dimen/px42"
                android:gravity="center"
                android:text="@string/xiaoying_str_template_audio_extract"
                android:textColor="@color/white"
                android:textSize="@dimen/sp12" />
        </FrameLayout>
        <FrameLayout
            android:id="@+id/llFeauture2"
            android:layout_width="@dimen/px86"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center">
            <com.videoai.aivpcore.unit.view.PressImageView
                android:layout_width="@dimen/px36"
                android:layout_height="@dimen/px36"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/ic_home_feature_2" />
            <androidx.appcompat.widget.AppCompatTextView
                style="@style/TextSingleLine"
                android:layout_width="match_parent"
                android:layout_height="@dimen/px20"
                android:layout_marginTop="@dimen/px42"
                android:gravity="center"
                android:text="@string/app_studio_tittle"
                android:textColor="@color/white"
                android:textSize="@dimen/sp12" />
        </FrameLayout>
        <FrameLayout
            android:id="@+id/llCampaign"
            android:layout_width="@dimen/px86"
            android:layout_height="wrap_content"
            android:layout_gravity="end|bottom|center">
            <FrameLayout
                android:layout_width="@dimen/px48"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">
                <com.videoai.aivpcore.unit.view.PressImageView
                    android:id="@+id/ivCampaign"
                    android:layout_width="@dimen/px36"
                    android:layout_height="@dimen/px36"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/px4"
                    android:src="@drawable/ag_place_holder" />
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/ivAdCampaign"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:src="@drawable/ic_home_campaign_ad" />
            </FrameLayout>
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvCampaign"
                style="@style/TextSingleLine"
                android:layout_width="match_parent"
                android:layout_height="@dimen/px20"
                android:layout_marginTop="@dimen/px48"
                android:gravity="center"
                android:text="@string/app_studio_tittle"
                android:textColor="@color/white"
                android:textSize="@dimen/sp12" />
        </FrameLayout>
    </FrameLayout>
</FrameLayout>