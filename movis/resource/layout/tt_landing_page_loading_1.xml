        android:layout_height="wrap_content"
        android:layout_marginTop="8.0dip"
        android:ellipsize="end"
        android:gravity="center"
        android:maxWidth="150.0dip"
        android:maxLines="2"
        android:textColor="#ff222222"
        android:textSize="18.0sp" />
