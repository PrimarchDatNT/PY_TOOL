        android:layout_width="244.0dip"
        android:layout_height="24.0dip"
        android:layout_marginTop="16.0dip"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tt_loading_text_1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@drawable/tt_landingpage_loading_text_rect"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:paddingLeft="12.0dip"
            android:paddingTop="4.0dip"
            android:paddingRight="12.0dip"
            android:paddingBottom="4.0dip"
            android:textColor="#ff1a73e8"
            android:textSize="12.0sp"
            android:visibility="invisible" />
        <TextView
            android:id="@+id/tt_loading_text_2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@drawable/tt_landingpage_loading_text_rect"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:paddingLeft="12.0dip"
            android:paddingTop="4.0dip"
            android:paddingRight="12.0dip"
            android:paddingBottom="4.0dip"
            android:textColor="#ff1a73e8"
            android:textSize="12.0sp" />
    </FrameLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="21.0dip"
        android:orientation="horizontal"
        android:paddingStart="43.0dip"
        android:paddingLeft="33.0dip">
