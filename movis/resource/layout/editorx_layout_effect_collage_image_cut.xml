<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px56"
        android:layout_alignParentBottom="true"
        android:background="@color/app_dcolor_bg_1"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:visibility="visible">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <RelativeLayout
                android:id="@id/layout_double_back"
                android:layout_width="@dimen/px56"
                android:layout_height="@dimen/px56"
                android:background="@drawable/btn_dcolor_ripple">
                <ImageView
                    android:layout_width="@dimen/px24"
                    android:layout_height="@dimen/px24"
                    android:layout_centerInParent="true"
                    android:scaleType="centerInside"
                    android:src="@drawable/editorx_ico_second_double_back" />
            </RelativeLayout>
            <com.videoai.aivpcore.editorx.board.effect.ui.SimpleIconTextView
                android:id="@id/sitv_color"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:visibility="visible"
                app:sitv_bottom_text="@string/xiaoying_str_effect_filter_color"
                app:sitv_top_drawable="@drawable/editorx_image_cut_color_unchoose" />
            <com.videoai.aivpcore.editorx.board.effect.ui.SimpleIconTextView
                android:id="@id/sitv_precision"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:sitv_bottom_text="@string/xiaoying_str_effect_filter_color_precision"
                app:sitv_top_text="20"
                app:sitv_top_text_color="@drawable/editorx_selector_sitv_text_color2"
                app:sitv_top_type="bac" />
            <com.videoai.aivpcore.editorx.board.effect.ui.SimpleIconTextView
                android:id="@id/sitv_reset_image"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:sitv_bottom_text="@string/xiaoying_str_edit_reset_text"
                app:sitv_top_drawable="@drawable/editorx_ico_effect_reset" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>