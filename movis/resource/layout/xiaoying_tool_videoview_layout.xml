<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@id/xiaoying_com_videoview_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:background="@color/black"
        android:focusable="false"
        android:layoutDirection="ltr">
        <TextureView
            android:id="@id/xiaoying_com_activity_videoview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true" />
        <ImageView
            android:id="@id/xiaoying_com_btn_video_view_play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:focusable="false"
            android:src="@drawable/xiaoying_com_preview_play_btn"
            android:visibility="invisible" />
        <ImageView
            android:id="@id/xiaoying_com_btn_video_view_pause"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:focusable="false"
            android:src="@drawable/xiaoying_com_preview_pause_btn"
            android:visibility="invisible" />
        <ImageView
            android:id="@id/video_control_info_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@drawable/video_control_info_bg"
            android:visibility="gone" />
        <ImageView
            android:id="@id/btn_silent_mode2"
            android:layout_width="30.0dip"
            android:layout_height="30.0dip"
            android:layout_alignParentBottom="true"
            android:background="@drawable/btn_silent_mode_bg"
            android:padding="5.0dip"
            android:src="@drawable/btn_silent_mode"
            android:visibility="invisible" />
        <RelativeLayout
            android:id="@id/xiaoying_com_video_info_layout"
            android:layout_width="match_parent"
            android:layout_height="30.0dip"
            android:layout_alignParentBottom="true"
            android:background="@color/black_p50"
            android:visibility="invisible">
            <ImageView
                android:id="@id/xiaoying_com_btn_fullscreen"
                android:layout_width="16.0dip"
                android:layout_height="16.0dip"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="15.0dip"
                android:layout_marginRight="15.0dip"
                android:src="@drawable/vivavideo_icon_full_screen_n"
                android:visibility="gone" />
            <ImageView
                android:id="@id/btn_silent_mode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="5.0dip"
                android:layout_marginLeft="5.0dip"
                android:src="@drawable/btn_silent_mode" />
            <TextView
                android:id="@id/xiaoying_com_current_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="10.0dip"
                android:layout_marginLeft="10.0dip"
                android:layout_toEndOf="@id/btn_silent_mode"
                android:layout_toRightOf="@id/btn_silent_mode"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:minWidth="30.0dip"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/white"
                android:textSize="12.0sp" />
            <TextView
                android:id="@id/xiaoying_com_total_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginEnd="5.0dip"
                android:layout_marginRight="5.0dip"
                android:layout_toStartOf="@id/xiaoying_com_btn_fullscreen"
                android:layout_toLeftOf="@id/xiaoying_com_btn_fullscreen"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:minWidth="30.0dip"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/white"
                android:textSize="12.0sp" />
            <SeekBar
                android:id="@id/xiaoying_com_video_seekbar"
                android:layout_width="match_parent"
                android:layout_height="30.0dip"
                android:layout_centerVertical="true"
                android:layout_marginStart="-4.0dip"
                android:layout_marginLeft="-4.0dip"
                android:layout_marginEnd="-4.0dip"
                android:layout_marginRight="-4.0dip"
                android:layout_toStartOf="@id/xiaoying_com_total_time"
                android:layout_toLeftOf="@id/xiaoying_com_total_time"
                android:layout_toEndOf="@id/xiaoying_com_current_time"
                android:layout_toRightOf="@id/xiaoying_com_current_time"
                android:focusable="true"
                android:max="100"
                android:maxHeight="2.0dip"
                android:paddingStart="4.0dip"
                android:paddingLeft="4.0dip"
                android:paddingEnd="4.0dip"
                android:paddingRight="4.0dip"
                android:progress="50"
                android:progressDrawable="@drawable/v4_xiaoying_ve_preview_seekbar_progress_bg_drawable"
                android:thumb="@drawable/v5_xiaoying_video_seekbar_thumb"
                android:thumbOffset="4.0dip"
                android:visibility="visible" />
        </RelativeLayout>
        <include
            android:id="@id/xiaoying_com_fine_seek_layout"
            layout="@layout/xiaoying_ve_import_fine_tunning_time_layout"
            android:layout_width="@dimen/xiaoying_fine_tunning_time_layout_width"
            android:layout_height="@dimen/xiaoying_fine_tunning_time_layout_height"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10.0dip"
            android:visibility="invisible" />
    </RelativeLayout>
    <ImageView
        android:id="@id/xiaoying_com_img_black_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/drawable_color_transparent"
        android:visibility="gone" />
</RelativeLayout>