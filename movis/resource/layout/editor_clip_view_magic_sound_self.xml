<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">
    <TextView
        android:id="@id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50.0dip"
        android:text="@string/xiaoying_str_magic_sound_adjust_tone"
        android:textColor="@color/color_8E8E93"
        android:textSize="14.0dip"
        android:textStyle="bold" />
    <ImageView
        android:id="@id/iv_vip"
        android:layout_width="20.0dip"
        android:layout_height="20.0dip"
        android:layout_alignTop="@id/tv_title"
        android:layout_marginStart="10.0dip"
        android:layout_marginLeft="10.0dip"
        android:layout_marginTop="-10.0dip"
        android:layout_toEndOf="@id/tv_title"
        android:layout_toRightOf="@id/tv_title" />
    <ImageView
        android:id="@id/iv_vip_free_of_time_limit"
        android:layout_width="36.0dip"
        android:layout_height="16.0dip"
        android:layout_alignTop="@id/tv_title"
        android:layout_marginStart="5.0dip"
        android:layout_marginLeft="5.0dip"
        android:layout_marginTop="-7.0dip"
        android:layout_toEndOf="@id/tv_title"
        android:layout_toRightOf="@id/tv_title" />
    <TextView
        android:id="@id/tv_low"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_title"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="15.0dip"
        android:layout_marginLeft="15.0dip"
        android:layout_marginTop="12.0dip"
        android:text="@string/xiaoying_str_magic_sound_low_tone"
        android:textColor="@color/white"
        android:textSize="14.0dip" />
    <TextView
        android:id="@id/tv_high"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_title"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="12.0dip"
        android:layout_marginEnd="15.0dip"
        android:layout_marginRight="15.0dip"
        android:text="@string/xiaoying_str_magic_sound_high_tone"
        android:textColor="@color/white"
        android:textSize="14.0dip" />
    <SeekBar
        android:id="@id/sb_volume"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_title"
        android:layout_marginTop="10.0dip"
        android:layout_toStartOf="@id/tv_high"
        android:layout_toLeftOf="@id/tv_high"
        android:layout_toEndOf="@id/tv_low"
        android:layout_toRightOf="@id/tv_low"
        android:max="32"
        android:maxHeight="2.0dip"
        android:paddingLeft="10.0dip"
        android:paddingRight="10.0dip"
        android:progress="16"
        android:progressDrawable="@color/color_d8d8d8_p30"
        android:splitTrack="false"
        android:thumb="@drawable/editor_seekbar_vague_control_thumb"
        android:thumbOffset="5.0dip" />
</RelativeLayout>