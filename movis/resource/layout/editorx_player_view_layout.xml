        android:id="@id/iv_play"
        android:layout_width="@dimen/px28"
        android:layout_height="@dimen/px28"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="@dimen/px16"
