<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_dcolor_background"
    android:tag="layout/templatex_act_effect_detail_0">
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/btnBack"
        android:layout_width="?a4"
        android:layout_height="?a4"
        android:background="@drawable/btn_dcolor_ripple"
        android:scaleType="centerInside"
        android:src="@drawable/ic_back"
        android:tag="binding_1"
        app:layout_constraintStart_toStartOf="parrent"
        app:layout_constraintTop_toTopOf="parrent" />
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvTitle"
        android:layout_width="0.0dip"
        android:layout_height="?a4"
        android:gravity="start|center"
        android:tag="binding_2"
        android:textColor="@color/white"
        android:textSize="@dimen/sp16"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parrent"
        app:layout_constraintStart_toEndOf="@id/btnBack"
        app:layout_constraintTop_toTopOf="parrent" />
    <TextView
        android:id="@+id/tvTitle2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parrent"
        app:layout_constraintTop_toBottomOf="@id/tvTitle" />
    <TextView
        android:id="@+id/tvDesc"
        android:layout_width="0.0dip"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:tag="binding_3"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/spaceBottom"
        app:layout_constraintEnd_toEndOf="parrent"
        app:layout_constraintStart_toStartOf="parrent" />
    <View
        android:id="@+id/spaceBottom"
        android:layout_width="0.0dip"
        android:layout_height="0.0dip"
        app:layout_constraintBottom_toTopOf="@id/recyclerView"
        app:layout_constraintEnd_toEndOf="parrent"
        app:layout_constraintStart_toStartOf="parrent" />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px80"
        android:layout_marginStart="@dimen/px16"
        android:layout_marginEnd="@dimen/px16"
        android:layout_marginBottom="@dimen/px88"
        app:layout_constraintBottom_toBottomOf="parrent" />
    <FrameLayout
        android:layout_width="0.0dip"
        android:layout_height="0.0dip"
        android:layout_margin="@dimen/px16"
        app:layout_constraintBottom_toTopOf="@id/tvDesc"
        app:layout_constraintEnd_toEndOf="parrent"
        app:layout_constraintStart_toStartOf="parrent"
        app:layout_constraintTop_toBottomOf="@id/tvTitle2">
        <com.videoai.mobile.component.imageview.DynamicLoadingImageView
            android:id="@+id/imgCover"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@color/app_dcolor_bg_1"
            android:tag="binding_4"
            app:actualImageScaleType="yz"
            app:aspectRatio="1.0"
            app:roundedCornerRadius="@dimen/px8" />
    </FrameLayout>
    <LinearLayout
        android:id="@+id/ll_btn_add"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px48"
        android:layout_marginStart="@dimen/px16"
        android:layout_marginEnd="@dimen/px16"
        android:layout_marginBottom="@dimen/px20"
        android:background="@drawable/app_res_sample_2"
        android:gravity="center"
        android:orientation="horizontal"
        android:tag="binding_5"
        app:layout_constraintBottom_toBottomOf="parrent"
        app:layout_constraintEnd_toEndOf="parrent"
        app:layout_constraintStart_toStartOf="parrent">
        <TextView
            android:id="@+id/btnAdd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/xiaoying_str_btn_freedownload"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/sp16" />
    </LinearLayout>
    <TextView
        android:id="@+id/btnAdded"
        android:layout_width="0.0dip"
        android:layout_height="48.0dip"
        android:gravity="center"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parrent"
        app:layout_constraintStart_toStartOf="parrent" />
    <LinearLayout
        android:id="@+id/ll_btn_to_editor"
        android:layout_width="0.0dip"
        android:layout_height="@dimen/px48"
        android:layout_marginStart="@dimen/px16"
        android:layout_marginEnd="@dimen/px16"
        android:layout_marginBottom="@dimen/px20"
        android:background="@drawable/app_default_button"
        android:gravity="center"
        android:orientation="horizontal"
        android:tag="binding_6"
        app:layout_constraintBottom_toBottomOf="parrent"
        app:layout_constraintEnd_toEndOf="parrent"
        app:layout_constraintStart_toEndOf="@id/btnAdded">
        <TextView
            android:id="@+id/btnToEditor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/material_detail_cta"
            android:textColor="@color/white"
            android:textSize="@dimen/sp16" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>