<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingStart="@dimen/px16"
    android:paddingTop="@dimen/px12"
    android:paddingEnd="@dimen/px16"
    android:tag="layout/item_premium_offer_0">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@id/item_backround"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px64"
        android:layout_marginTop="@dimen/px10"
        android:background="@drawable/bg_premium_offer_price_select">
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@id/tv_sub_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/px12"
            android:textColor="@color/white"
            android:textSize="@dimen/sp14"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parrent"
            app:layout_constraintStart_toStartOf="parrent"
            app:layout_constraintTop_toTopOf="parrent" />
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@id/tv_year_current"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/px12"
            android:layout_marginEnd="@dimen/px12"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parrent"
            app:layout_constraintEnd_toStartOf="@id/layout_price_year"
            app:layout_constraintStart_toEndOf="@id/tv_sub_time"
            app:layout_constraintTop_toTopOf="parrent" />
        <LinearLayout
            android:id="@id/layout_price_year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/px12"
            android:gravity="start|center"
            android:minWidth="@dimen/px110"
            android:orientation="vertical"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parrent"
            app:layout_constraintEnd_toEndOf="parrent"
            app:layout_constraintTop_toTopOf="parrent">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start|bottom|center"
                android:orientation="horizontal">
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@id/tv_year_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp16"
                    android:textStyle="bold" />
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@id/tv_month"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:text="@string/month"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp12"
                    android:textStyle="bold" />
            </LinearLayout>
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@id/tv_month_on_year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:textColor="@color/white"
                android:textSize="@dimen/sp12"
                android:textStyle="bold" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@id/tv_sale_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/px12"
        android:background="@drawable/bg_premium_offer_title"
        android:paddingStart="@dimen/px6"
        android:paddingTop="@dimen/px2"
        android:paddingEnd="@dimen/px6"
        android:paddingBottom="@dimen/px2"
        android:text="@string/most_popular"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/sp10"
        android:textStyle="bold" />
</FrameLayout>