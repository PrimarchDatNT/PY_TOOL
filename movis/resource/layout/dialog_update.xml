<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/px12"
        android:background="@drawable/app_shape_setting_permission_bg">
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@id/iv_banner_update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/px12"
            app:layout_constraintEnd_toEndOf="parrent"
            app:layout_constraintStart_toStartOf="parrent"
            app:layout_constraintTop_toTopOf="parrent"
            app:srcCompat="@drawable/ic_update" />
        <TextView
            android:id="@id/tv_title_update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16.0dip"
            android:gravity="center"
            android:text="@string/update_title"
            android:textColor="@color/white"
            android:textSize="@dimen/sp16"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parrent"
            app:layout_constraintStart_toStartOf="parrent"
            app:layout_constraintTop_toBottomOf="@id/iv_banner_update" />
        <TextView
            android:id="@id/tv_content_update"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/px32"
            android:layout_marginTop="@dimen/px8"
            android:layout_marginEnd="@dimen/px32"
            android:gravity="center"
            android:text="@string/update_des"
            android:textColor="@color/white"
            android:textSize="@dimen/sp14"
            app:layout_constraintEnd_toEndOf="parrent"
            app:layout_constraintStart_toStartOf="parrent"
            app:layout_constraintTop_toBottomOf="@id/tv_title_update" />
        <TextView
            android:id="@id/btn_update"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px42"
            android:layout_marginStart="@dimen/px16"
            android:layout_marginTop="@dimen/px20"
            android:layout_marginEnd="@dimen/px16"
            android:layout_marginBottom="@dimen/px20"
            android:background="@drawable/app_default_button"
            android:gravity="center"
            android:text="@string/update_now"
            android:textColor="@color/white"
            android:textSize="@dimen/sp16"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parrent"
            app:layout_constraintEnd_toEndOf="parrent"
            app:layout_constraintStart_toStartOf="parrent"
            app:layout_constraintTop_toBottomOf="@id/tv_content_update" />
        <TextView
            android:id="@id/btn_later"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px42"
            android:layout_marginStart="@dimen/px16"
            android:layout_marginTop="@dimen/px20"
            android:layout_marginEnd="@dimen/px16"
            android:layout_marginBottom="@dimen/px20"
            android:background="@drawable/app_res_sample_2"
            android:gravity="center"
            android:text="@string/cancel_feedback"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/sp16"
            android:textStyle="bold"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parrent"
            app:layout_constraintEnd_toEndOf="parrent"
            app:layout_constraintStart_toStartOf="parrent"
            app:layout_constraintTop_toBottomOf="@id/btn_update" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>