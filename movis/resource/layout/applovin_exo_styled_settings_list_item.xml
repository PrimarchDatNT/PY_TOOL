<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:selectableItemBackground"
    android:layoutDirection="locale"
    android:minWidth="@dimen/al_exo_setting_width"
    android:minHeight="@dimen/al_exo_settings_height"
    android:orientation="horizontal">
    <ImageView
        android:id="@+id/exo_icon"
        android:layout_width="@dimen/al_exo_settings_icon_size"
        android:layout_height="@dimen/al_exo_settings_icon_size"
        android:layout_marginLeft="8.0dip"
        android:layout_marginTop="12.0dip"
        android:layout_marginRight="8.0dip" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2.0dip"
        android:layout_marginRight="2.0dip"
        android:gravity="start|center"
        android:layoutDirection="locale"
        android:minHeight="@dimen/al_exo_settings_height"
        android:orientation="vertical"
        android:paddingEnd="4.0dip"
        android:paddingRight="4.0dip">
        <TextView
            android:id="@+id/exo_main_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/al_exo_white"
            android:textDirection="locale"
            android:textSize="@dimen/al_exo_settings_main_text_size" />
        <TextView
            android:id="@+id/exo_sub_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/al_exo_white_opacity_70"
            android:textDirection="locale"
            android:textSize="@dimen/al_exo_settings_sub_text_size" />
    </LinearLayout>
</LinearLayout>