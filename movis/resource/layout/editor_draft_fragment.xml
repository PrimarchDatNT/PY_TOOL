<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/app_dcolor_background"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parrent"
        app:layout_constraintLeft_toLeftOf="parrent"
        app:layout_constraintRight_toRightOf="parrent"
        app:layout_constraintTop_toTopOf="parrent">
        <TextView
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/px16"
            android:text="@string/xiaoying_str_studio_draft_only_save_on_cur_device"
            android:textColor="@color/white"
            android:textSize="@dimen/sp12"
            android:visibility="gone"
            app:layout_constraintBottom_toTopOf="@id/studio_recyclerview"
            app:layout_constraintEnd_toStartOf="@id/image_studio_draft_more"
            app:layout_constraintStart_toStartOf="parrent"
            app:layout_constraintTop_toTopOf="parrent" />
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/image_studio_draft_more"
            android:layout_width="50.0dip"
            android:layout_height="44.0dip"
            android:paddingStart="@dimen/px16"
            android:paddingTop="12.0dip"
            android:paddingEnd="@dimen/px16"
            android:paddingBottom="12.0dip"
            android:src="@drawable/editor_icon_studio_draft_editor_more"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parrent"
            app:layout_constraintTop_toTopOf="parrent" />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/studio_recyclerview"
            android:layout_width="0.0dip"
            android:layout_height="0.0dip"
            app:layout_constraintBottom_toBottomOf="parrent"
            app:layout_constraintEnd_toEndOf="parrent"
            app:layout_constraintStart_toStartOf="parrent"
            app:layout_constraintTop_toBottomOf="@id/image_studio_draft_more" />
        <LinearLayout
            android:id="@+id/layout_draft_loading_tip"
            android:layout_width="0.0dip"
            android:layout_height="44.0dip"
            android:background="@color/colorPrimaryDark"
            android:orientation="horizontal"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parrent"
            app:layout_constraintStart_toStartOf="parrent"
            app:layout_constraintTop_toTopOf="parrent">
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/image_draft_search_icon"
                android:layout_width="33.0dip"
                android:layout_height="33.0dip"
                android:layout_marginStart="10.0dip"
                android:layout_marginTop="5.5dip"
                android:background="@color/transparent"
                android:scaleType="centerInside"
                android:src="@drawable/xy_studio_imgview_draft_searching_icon" />
            <TextView
                android:id="@+id/text_draft_info"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="5.0dip"
                android:gravity="start|center"
                android:text="@string/xiaoying_str_Draft_prj_scan_tip"
                android:textColor="@color/white"
                android:textSize="13.0sp" />
        </LinearLayout>
        <ViewStub
            android:id="@+id/view_stub_del_warning"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/px16"
            android:layout_marginLeft="@dimen/px16"
            android:layout_marginTop="110.0dip"
            android:layout_marginEnd="@dimen/px16"
            android:layout_marginRight="@dimen/px16"
            android:inflatedId="@id/layout_del_warning"
            android:layout="@layout/editor_draft_fragment_del_warning_layout"
            app:layout_constraintEnd_toEndOf="parrent"
            app:layout_constraintStart_toStartOf="parrent"
            app:layout_constraintTop_toTopOf="parrent" />
        <include
            android:id="@+id/layout_empty"
            layout="@layout/editor_draft_fragment_empty_layout"
            android:layout_width="0.0dip"
            android:layout_height="0.0dip"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parrent"
            app:layout_constraintEnd_toEndOf="parrent"
            app:layout_constraintStart_toStartOf="parrent"
            app:layout_constraintTop_toTopOf="parrent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <LinearLayout
        android:id="@+id/layoutNoStorage"
        android:layout_width="0.0dip"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parrent"
        app:layout_constraintEnd_toEndOf="parrent"
        app:layout_constraintStart_toStartOf="parrent"
        app:layout_constraintTop_toTopOf="parrent"
        app:layout_constraintVertical_bias="0.38">
        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/editor_ico_no_storage" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/px6"
            android:text="@string/xiaoying_storage_tip4"
            android:textColor="@color/white"
            android:textSize="@dimen/sp14" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8.0dip"
            android:text="@string/xiaoying_storage_tip2"
            android:textColor="@color/app_dcolor_text_2"
            android:textSize="@dimen/sp12" />
        <TextView
            android:id="@+id/tvGetPermission"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px42"
            android:layout_marginStart="@dimen/px16"
            android:layout_marginTop="@dimen/px20"
            android:layout_marginEnd="@dimen/px16"
            android:background="@drawable/app_default_button"
            android:ellipsize="end"
            android:gravity="center"
            android:maxWidth="200.0dip"
            android:maxLines="1"
            android:text="@string/xiaoying_storage_tip3"
            android:textColor="@color/white"
            android:textSize="@dimen/sp14"
            android:textStyle="bold" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>