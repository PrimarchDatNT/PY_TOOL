<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/mark_top_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/mark_top_text"
            android:layout_width="@dimen/px46"
            android:layout_height="@dimen/px46"
            android:background="@drawable/msb_shape_mark_top_text_bg"
            android:gravity="center"
            android:textColor="@color/app_dcolor_text_2"
            android:textSize="@dimen/sp12"
            android:visibility="invisible" />
    </LinearLayout>
    <FrameLayout
        android:id="@+id/mark_view_continer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <SeekBar
            android:id="@+id/normal_seek_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_marginTop="2.0dip"
            android:background="@null"
            android:maxHeight="24.0dip"
            android:minHeight="24.0dip"
            android:paddingStart="14.0dip"
            android:paddingLeft="14.0dip"
            android:paddingEnd="14.0dip"
            android:paddingRight="14.0dip"
            android:splitTrack="false" />
    </FrameLayout>
</LinearLayout>