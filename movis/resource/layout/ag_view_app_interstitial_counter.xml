<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/ag_campaign_banner"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY" />
    <LinearLayout
        android:id="@+id/ag_iv_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="16.0dip"
        android:background="@drawable/ag_skip_background"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingStart="10.0dip"
        android:paddingEnd="10.0dip">
        <TextView
            android:id="@+id/ag_text_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5.0dip"
            android:text="5"
            android:textColor="@android:color/white"
            android:textSize="12.0sp" />
    </LinearLayout>
    <Button
        android:id="@+id/ag_btn_cta"
        android:layout_width="match_parent"
        android:layout_height="50.0dip"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="40.0dip"
        android:layout_marginEnd="40.0dip"
        android:layout_marginBottom="30.0dip"
        android:background="@drawable/ag_selector_bg_cta"
        android:maxLines="2"
        android:paddingStart="10.0dip"
        android:paddingEnd="10.0dip"
        android:text="INSTALL"
        android:textColor="#ffffffff"
        android:textSize="18.0sp"
        android:textStyle="bold" />
</RelativeLayout>