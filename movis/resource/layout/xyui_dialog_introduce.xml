<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_p80">
    <androidx.viewpager.widget.ViewPager
        android:id="@id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <com.videoai.aivpcore.xyui.RoundedTextView
        android:id="@id/btnNext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="80.0dip"
        android:gravity="center"
        android:minWidth="113.0dip"
        android:paddingLeft="30.0dip"
        android:paddingTop="10.0dip"
        android:paddingRight="30.0dip"
        android:paddingBottom="10.0dip"
        android:text="@string/xiaoying_str_introduce_apply_title"
        android:textColor="@color/color_333333"
        android:textSize="16.0sp"
        app:VS_CornerRadius="50.0dip"
        app:VS_SolidColor="@color/white" />
    <LinearLayout
        android:id="@id/dot_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/btnNext"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40.0dip"
        android:orientation="horizontal" />
    <TextView
        android:id="@id/btn_skip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30.0dip"
        android:gravity="center"
        android:paddingLeft="15.0dip"
        android:paddingTop="5.0dip"
        android:paddingRight="15.0dip"
        android:paddingBottom="5.0dip"
        android:text="@string/xiaoying_str_slide_skip"
        android:textColor="@color/white_p70"
        android:textSize="14.0sp" />
</RelativeLayout>