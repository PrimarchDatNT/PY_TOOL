<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/rl_theme_duration_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5.0dip">
        <TextView
            android:id="@+id/tvThemeDurationTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3"
            android:textColor="@color/white"
            android:textSize="18.0sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/tvThemeDurationTime"
            android:layout_alignBottom="@id/tvThemeDurationTime"
            android:layout_toEndOf="@id/tvThemeDurationTime"
            android:layout_toRightOf="@id/tvThemeDurationTime"
            android:text="@string/xiaoying_str_com_second_unit"
            android:textColor="@color/white"
            android:textSize="12.0sp" />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_theme_duration_time"
        android:layout_marginTop="20.0dip"
        android:gravity="center"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="15.0dip"
            android:layout_marginLeft="15.0dip"
            android:layout_marginEnd="8.0dip"
            android:layout_marginRight="8.0dip"
            android:gravity="center"
            android:text="0.1s"
            android:textColor="@color/color_8E8E93"
            android:textSize="11.0sp" />
        <SeekBar
            android:id="@+id/seekbar_theme_duration"
            android:layout_width="0.0dip"
            android:layout_height="20.0dip"
            android:layout_gravity="center"
            android:layout_weight="1.0"
            android:max="100"
            android:maxHeight="2.0dip"
            android:paddingStart="9.0dip"
            android:paddingLeft="9.0dip"
            android:paddingEnd="9.0dip"
            android:paddingRight="9.0dip"
            android:progress="0"
            android:progressDrawable="@drawable/editor_layer_audiomix_seekbar_bg"
            android:thumb="@drawable/editor_layer_seekbar_thumb_white_18"
            android:thumbOffset="9.0dip" />
        <TextView
            android:id="@+id/maxTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="8.0dip"
            android:layout_marginLeft="8.0dip"
            android:layout_marginEnd="15.0dip"
            android:layout_marginRight="15.0dip"
            android:gravity="center"
            android:text="10s"
            android:textColor="@color/color_8E8E93"
            android:textSize="11.0sp" />
    </LinearLayout>
</RelativeLayout>