<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_layout"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:paddingStart="@dimen/px6"
    android:paddingEnd="@dimen/px6">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_tab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@drawable/slt_item_tag"
            android:paddingStart="@dimen/px12"
            android:paddingTop="@dimen/px4"
            android:paddingEnd="@dimen/px12"
            android:paddingBottom="@dimen/px4"
            android:textColor="@color/text_selector_tab"
            android:textSize="@dimen/sp12" />
    </LinearLayout>
    <ImageView
        android:id="@+id/ivVip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:paddingBottom="@dimen/px16"
        android:scaleType="fitCenter"
        android:visibility="gone" />
    <View
        android:id="@+id/view_tab"
        android:layout_width="0.0dip"
        android:layout_height="0.0dip"
        android:layout_gravity="bottom|center"
        android:visibility="gone" />
</FrameLayout>