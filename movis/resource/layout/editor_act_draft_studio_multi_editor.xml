<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56.0dip"
        android:background="@color/white"
        android:elevation="2.0dip"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="48.0dip"
            android:layout_height="56.0dip"
            android:background="@drawable/com_md_ripple_transparent_bg_drawable"
            android:paddingStart="16.0dip"
            android:paddingLeft="16.0dip"
            android:paddingEnd="8.0dip"
            android:paddingRight="8.0dip"
            android:scaleType="center"
            android:src="@drawable/app_default_back_black" />
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="@color/color_333333"
            android:textSize="18.0sp" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dip"
        android:background="@color/color_fafafa" />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/studio_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="0.0dip"
        android:layout_weight="1.0"
        android:paddingStart="15.0dip"
        android:paddingLeft="15.0dip"
        android:paddingEnd="15.0dip"
        android:paddingRight="15.0dip" />
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dip"
        android:background="@color/color_eeeeee" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56.0dip"
        android:paddingStart="15.0dip"
        android:paddingLeft="15.0dip"
        android:paddingEnd="15.0dip"
        android:paddingRight="15.0dip">
        <LinearLayout
            android:id="@+id/ll_editor_check_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true">
            <ImageView
                android:id="@+id/iv_editor_check_all"
                android:layout_width="20.0dip"
                android:layout_height="20.0dip"
                android:src="@drawable/editor_icon_studio_draft_multi_unselect" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingStart="6.0sp"
                android:paddingLeft="6.0sp"
                android:text="@string/xiaoying_str_ve_storyboard_title_btn_text_allselect"
                android:textColor="@color/color_999999"
                android:textSize="14.0sp" />
        </LinearLayout>
        <TextView
            android:id="@+id/tv_editor_multi_del"
            android:layout_width="wrap_content"
            android:layout_height="36.0dip"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/editor_selector_studio_multi_del"
            android:gravity="center"
            android:paddingStart="16.0sp"
            android:paddingLeft="16.0sp"
            android:paddingEnd="16.0sp"
            android:paddingRight="16.0sp"
            android:text="@string/xiaoying_str_com_delete_title"
            android:textColor="@color/white"
            android:textSize="14.0sp" />
    </RelativeLayout>
</LinearLayout>