<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layoutStatus"
    android:layout_width="match_parent"
    android:layout_height="66.0dip"
    android:background="#ff1c1c1c"
    android:gravity="center_vertical"
    android:paddingStart="15.0dip"
    android:paddingEnd="15.0dip">
    <LinearLayout
        android:id="@+id/layoutSpeechIng"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_width="16.0dip"
            android:layout_height="16.0dip">
            <ImageView
                android:id="@+id/ivAnimOut"
                android:layout_width="16.0dip"
                android:layout_height="16.0dip"
                android:src="@drawable/editorx_ico_speeching_anim_out" />
            <ImageView
                android:layout_width="16.0dip"
                android:layout_height="16.0dip"
                android:src="@drawable/editorx_ico_speeching_anim_content" />
        </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8.0dip"
            android:textColor="@color/color_e6e6e6"
            android:textSize="14.0sp"
            android:textStyle="bold" />
        <View
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.0" />
        <TextView
            android:id="@+id/tvCancel"
            android:layout_width="56.0dip"
            android:layout_height="28.0dip"
            android:background="@drawable/editorx_shape_speech_cancel"
            android:gravity="center"
            android:text="@string/xiaoying_str_com_cancel"
            android:textColor="@color/color_e6e6e6"
            android:textSize="12.0sp"
            android:textStyle="bold" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/layoutSpeechFailure"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="gone">
        <ImageView
            android:layout_width="16.0dip"
            android:layout_height="16.0dip"
            android:src="@drawable/editorx_ico_speech_failed" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#fff05353"
            android:textSize="14.0sp"
            android:textStyle="bold" />
        <View
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.0" />
        <TextView
            android:id="@+id/tvRetry"
            android:layout_width="56.0dip"
            android:layout_height="28.0dip"
            android:layout_marginRight="12.0dip"
            android:background="@drawable/editorx_shape_speech_retry"
            android:gravity="center"
            android:text="@string/xiaoying_str_studio_share_retry_title"
            android:textColor="@color/color_e6e6e6"
            android:textSize="12.0sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/tvCancel2"
            android:layout_width="56.0dip"
            android:layout_height="28.0dip"
            android:background="@drawable/editorx_shape_speech_cancel"
            android:gravity="center"
            android:text="@string/xiaoying_str_com_cancel"
            android:textColor="@color/color_e6e6e6"
            android:textSize="12.0sp"
            android:textStyle="bold" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/layoutSpeechSuccess"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone">
        <ImageView
            android:layout_width="16.0dip"
            android:layout_height="16.0dip"
            android:src="@drawable/editorx_ico_speech_success" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8.0dip"
            android:textColor="#ff59bc5d"
            android:textSize="14.0sp"
            android:textStyle="bold" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/layoutSpeechNoSound"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8.0dip"
            android:textColor="#fff05353"
            android:textSize="14.0sp"
            android:textStyle="bold" />
    </LinearLayout>
</FrameLayout>