<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_p30"
    android:gravity="center_horizontal"
    android:orientation="vertical">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="115.0dip"
        android:src="@drawable/editor_icon_import_scene" />
    <TextView
        android:id="@+id/tv_import_scene_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10.0dip"
        android:textColor="@color/white"
        android:textSize="16.0sp" />
    <TextView
        android:id="@+id/txtview_progressview"
        android:layout_width="100.0dip"
        android:layout_height="wrap_content"
        android:layout_marginTop="10.0dip"
        android:gravity="center"
        android:lines="1"
        android:textColor="@color/white"
        android:textSize="35.0dip" />
    <ProgressBar
        android:id="@+id/progress_bar_import"
        style="?android:progressBarStyleHorizontal"
        android:layout_width="268.0dip"
        android:layout_height="2.0dip"
        android:layout_marginTop="5.0dip"
        android:progress="0"
        android:progressDrawable="@drawable/editor_layer_clip_seekbar_progress_bg" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10.0dip"
        android:text="@string/editor_gallery_transcode_tip"
        android:textColor="@color/white_p50"
        android:textSize="12.0sp" />
    <ImageButton
        android:id="@+id/iv_cancel"
        android:layout_width="28.0dip"
        android:layout_height="28.0dip"
        android:layout_marginTop="36.0dip"
        android:background="@null"
        android:contentDescription="@null"
        android:padding="6.0dip"
        android:src="@drawable/editor_icon_gallery_close_n" />
</LinearLayout>