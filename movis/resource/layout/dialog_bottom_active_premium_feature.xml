<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/app_shape_setting_permission_bg"
    android:orientation="vertical"
    android:padding="16.0dip">
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@id/iv_dialog_present"
        android:layout_width="72.0dip"
        android:layout_height="72.0dip"
        android:layout_gravity="center"
        android:layout_marginTop="20.0dip"
        android:adjustViewBounds="true"
        android:src="@drawable/rw_icon_dialog"
        app:layout_constraintEnd_toEndOf="parrent"
        app:layout_constraintStart_toStartOf="parrent"
        app:layout_constraintTop_toTopOf="parrent" />
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@id/rw_close"
        android:layout_width="@dimen/px40"
        android:layout_height="@dimen/px40"
        android:background="?a5e"
        android:padding="@dimen/px8"
        android:src="@drawable/ic_close"
        app:layout_constraintEnd_toEndOf="parrent"
        app:layout_constraintTop_toTopOf="parrent" />
    <TextView
        android:id="@id/rw_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16.0dip"
        android:gravity="center"
        android:text="@string/unlock_vip_feature"
        android:textColor="@color/white"
        android:textSize="20.0sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parrent"
        app:layout_constraintStart_toStartOf="parrent"
        app:layout_constraintTop_toBottomOf="@id/iv_dialog_present" />
    <TextView
        android:id="@id/rw_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/unlock_vip_feature_msg"
        android:textColor="@color/white"
        android:textSize="18.0sp"
        app:layout_constraintEnd_toEndOf="parrent"
        app:layout_constraintStart_toStartOf="parrent"
        app:layout_constraintTop_toBottomOf="@id/rw_title" />
    <LinearLayout
        android:id="@id/ll_action_go_pro"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px48"
        android:layout_marginStart="@dimen/px12"
        android:layout_marginTop="@dimen/px16"
        android:layout_marginEnd="@dimen/px12"
        android:background="@drawable/bg_dialog_unlock_vip_cta"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingTop="14.0dip"
        android:paddingBottom="14.0dip"
        app:layout_constraintEnd_toEndOf="parrent"
        app:layout_constraintStart_toStartOf="parrent"
        app:layout_constraintTop_toBottomOf="@id/rw_content">
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/xiaoying_str_get_vip_now"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:textSize="@dimen/sp16"
            android:textStyle="bold" />
    </LinearLayout>
    <FrameLayout
        android:id="@id/ll_action_rw"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/px12"
        android:layout_marginTop="@dimen/px16"
        android:layout_marginEnd="@dimen/px12"
        android:background="@drawable/bg_dialog_unlock_vip_cancel"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingTop="14.0dip"
        android:paddingBottom="14.0dip"
        app:layout_constraintEnd_toEndOf="parrent"
        app:layout_constraintStart_toStartOf="parrent"
        app:layout_constraintTop_toBottomOf="@id/ll_action_go_pro">
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:drawableEnd="@drawable/ic_play_ads"
            android:drawablePadding="@dimen/px8"
            android:gravity="center"
            android:text="@string/cta_unlock_for_free"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="@dimen/sp16"
            android:textStyle="bold" />
    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>