<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@id/pangle_banner_root_view"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#ffffffff"
    android:gravity="center"
    android:orientation="horizontal">
    <RelativeLayout
        android:id="@id/tt_pangle_ad_image_layout"
        android:layout_width="135.0dip"
        android:layout_height="75.0dip"
        android:orientation="vertical">
        <ImageView
            android:id="@id/tt_pangle_ad_main_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:background="@android:color/white"
            android:scaleType="fitXY" />
        <TextView
            android:id="@id/tt_pangle_ad_logo"
            android:layout_width="32.0dip"
            android:layout_height="14.0dip"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="3.0dip"
            android:layout_marginLeft="3.0dip"
            android:layout_marginBottom="3.0dip"
            android:background="@drawable/tt_ad_logo_new" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@id/tt_pangle_ad_content_layout"
        android:layout_width="165.0dip"
        android:layout_height="75.0dip">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">
            <TextView
                android:id="@id/tt_pangle_ad_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12.0dip"
                android:layout_marginRight="12.0dip"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="Pangle Ad"
                android:textColor="#ff3e3e3e"
                android:textSize="12.0sp" />
            <TextView
                android:id="@id/tt_pangle_ad_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12.0dip"
                android:layout_marginTop="5.0dip"
                android:layout_marginRight="12.0dip"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="2"
                android:text="Pangle Ad"
                android:textColor="#ffaeaeae"
                android:textSize="11.0sp" />
        </LinearLayout>
        <RelativeLayout
            android:id="@id/tt_pangle_ad_close_layout"
            android:layout_width="12.0dip"
            android:layout_height="12.0dip"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="7.0dip"
            android:layout_marginEnd="7.0dip"
            android:layout_marginRight="7.0dip"
            android:gravity="center"
            android:visibility="gone">
            <ImageView
                android:id="@id/tt_video_ad_close"
                android:layout_width="8.0dip"
                android:layout_height="8.0dip"
                android:src="@drawable/tt_pangle_close_icon" />
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>