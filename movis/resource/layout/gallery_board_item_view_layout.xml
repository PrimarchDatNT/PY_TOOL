<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/px72"
    android:layout_height="@dimen/px72">
    <ImageView
        android:id="@+id/iv_cover"
        android:layout_width="@dimen/px60"
        android:layout_height="@dimen/px60"
        android:background="@color/app_dcolor_indicator_2"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parrent"
        app:layout_constraintEnd_toEndOf="parrent"
        app:layout_constraintStart_toStartOf="parrent"
        app:layout_constraintTop_toTopOf="parrent" />
    <TextView
        android:id="@+id/tv_duration"
        style="@style/veds_latn_font_caption_8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/px6"
        android:background="@drawable/gallery_shape_borad_normal_item_duration_bg"
        android:gravity="center"
        android:paddingStart="@dimen/px8"
        android:paddingTop="@dimen/px2"
        android:paddingEnd="@dimen/px8"
        android:paddingBottom="@dimen/px2"
        android:text="0:00"
        android:textColor="@color/veds_color_fill_white_1"
        app:layout_constraintBottom_toBottomOf="@id/iv_cover"
        app:layout_constraintEnd_toEndOf="@id/iv_cover"
        app:layout_constraintStart_toStartOf="@id/iv_cover" />
    <View
        android:id="@+id/item_hover_stroke"
        android:layout_width="56.0dip"
        android:layout_height="56.0dip"
        android:background="@drawable/gallery_shape_item_hover"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/iv_cover"
        app:layout_constraintEnd_toEndOf="@id/iv_cover"
        app:layout_constraintStart_toStartOf="@id/iv_cover"
        app:layout_constraintTop_toTopOf="@id/iv_cover" />
    <TextView
        android:id="@+id/tv_order"
        style="@style/veds_latn_font_caption_10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4.0dip"
        android:layout_marginTop="2.0dip"
        android:text="01"
        android:textColor="@color/veds_color_fill_white_1"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="@id/iv_cover"
        app:layout_constraintTop_toTopOf="@id/iv_cover"
        app:layout_goneMarginStart="4.0dip" />
    <ImageButton
        android:id="@+id/btn_delete"
        android:layout_width="@dimen/px20"
        android:layout_height="@dimen/px20"
        android:background="@drawable/btn_dcolor_ripple"
        android:scaleType="fitXY"
        android:src="@drawable/gallery_board_clip_delete_icon"
        app:layout_constraintEnd_toEndOf="parrent"
        app:layout_constraintTop_toTopOf="parrent" />
</androidx.constraintlayout.widget.ConstraintLayout>