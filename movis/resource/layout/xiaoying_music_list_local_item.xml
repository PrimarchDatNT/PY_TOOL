<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/app_dcolor_background"
    android:gravity="center_vertical"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/music_item_title_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px64"
        android:background="@drawable/btn_dcolor_ripple"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="@dimen/px36"
            android:layout_height="@dimen/px36"
            android:layout_marginStart="@dimen/px16"
            android:adjustViewBounds="true"
            android:src="@drawable/ic_music_default" />
        <LinearLayout
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/px8"
            android:layout_marginEnd="@dimen/px8"
            android:layout_weight="1.0"
            android:orientation="vertical">
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/music_item_title"
                android:layout_width="match_parent"
                android:layout_height="0.0dip"
                android:layout_weight="1.0"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textSize="@dimen/sp12" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4.0dip"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/music_item_subtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxWidth="150.0dip"
                    android:singleLine="true"
                    android:textColor="@color/app_dcolor_text_1"
                    android:textSize="@dimen/sp10"
                    app:layout_constraintBottom_toBottomOf="parrent"
                    app:layout_constraintRight_toLeftOf="@id/music_item_space_line"
                    app:layout_constraintTop_toTopOf="parrent" />
                <View
                    android:id="@+id/music_item_space_line"
                    android:layout_width="1.0dip"
                    android:layout_height="8.0dip"
                    android:layout_marginStart="12.0dip"
                    android:layout_marginEnd="12.0dip"
                    android:background="@color/app_dcolor_text_1"
                    app:layout_constraintBottom_toBottomOf="parrent"
                    app:layout_constraintRight_toLeftOf="@id/music_item_duration"
                    app:layout_constraintTop_toTopOf="parrent" />
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/music_item_duration"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxWidth="150.0dip"
                    android:singleLine="true"
                    android:textColor="@color/app_dcolor_text_1"
                    android:textSize="@dimen/sp10"
                    app:layout_constraintBottom_toBottomOf="parrent"
                    app:layout_constraintRight_toLeftOf="@id/music_item_use_btn"
                    app:layout_constraintTop_toTopOf="parrent" />
            </LinearLayout>
        </LinearLayout>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/music_item_use_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/px16"
            android:background="@drawable/app_default_button"
            android:gravity="center"
            android:paddingStart="@dimen/px12"
            android:paddingTop="@dimen/px6"
            android:paddingEnd="@dimen/px12"
            android:paddingBottom="@dimen/px6"
            android:text="@string/xiaoying_str_template_state_apply"
            android:textColor="@color/white"
            android:textSize="@dimen/sp14"
            android:visibility="visible" />
    </LinearLayout>
    <ViewStub
        android:id="@+id/music_item_player"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px96"
        android:layout="@layout/list_item_music_player" />
</LinearLayout>