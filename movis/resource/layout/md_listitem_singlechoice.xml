        android:layout_height="fill_parent"
        android:background="@null"
        android:clickable="false"
        android:focusable="false"
        android:gravity="center_vertical" />
    <TextView
        android:id="@id/akh"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:gravity="center_vertical"
        android:minHeight="@dimen/mq"
