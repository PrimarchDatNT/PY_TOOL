<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@id/tt_full_reward_video_landing_loading"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff8f8f8"
    android:orientation="vertical">
    <com.bytedance.sdk.openadsdk.common.LandingPageLoadingLayout
        android:id="@id/tt_loading_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <LinearLayout
        android:id="@id/tt_back_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:visibility="gone">
        <com.bytedance.sdk.openadsdk.core.widget.TTRoundRectImageView
            android:id="@id/tt_back_container_icon"
            android:layout_width="80.0dip"
            android:layout_height="80.0dip"
            android:layout_gravity="center" />
        <TextView
            android:id="@id/tt_back_container_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="12.0dip"
            android:text="pangle"
            android:textColor="#ff161823"
            android:textSize="24.0dip" />
        <TextView
            android:id="@id/tt_back_container_des"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="60.0dip"
            android:layout_marginTop="8.0dip"
            android:layout_marginRight="60.0dip"
            android:gravity="center"
            android:text="pangle"
            android:textAlignment="center"
            android:textColor="#80161823"
            android:textSize="16.0dip" />
        <TextView
            android:id="@id/tt_back_container_download"
            android:layout_width="255.0dip"
            android:layout_height="44.0dip"
            android:layout_gravity="center"
            android:layout_marginTop="32.0dip"
            android:background="@drawable/tt_reward_video_download_btn_bg"
            android:gravity="center"
            android:text="@string/tt_video_mobile_go_detail"
            android:textColor="@color/tt_white" />
    </LinearLayout>
    <TextView
        android:id="@id/tt_ad_loading_logo"
        android:layout_width="32.0dip"
        android:layout_height="14.0dip"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="16.0dip"
        android:layout_marginLeft="16.0dip"
        android:layout_marginBottom="20.0dip"
        android:background="@drawable/tt_ad_logo_new" />
</RelativeLayout>