<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="70.0dip"
    android:layout_height="wrap_content"
    android:layoutDirection="rtl">
    <ImageView
        android:id="@+id/iv_cover"
        android:layout_width="56.0dip"
        android:layout_height="56.0dip"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="6.0dip"
        android:layout_marginTop="6.0dip"
        android:background="@drawable/gallery_border_item"
        android:contentDescription="@null"
        android:padding="1.0dip"
        android:scaleType="centerCrop" />
    <View
        android:id="@+id/item_hover"
        android:layout_width="56.0dip"
        android:layout_height="56.0dip"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="6.0dip"
        android:layout_marginTop="6.0dip"
        android:background="@drawable/gallery_shape_position_hover" />
    <ImageButton
        android:id="@+id/btn_delete"
        android:layout_width="18.0dip"
        android:layout_height="18.0dip"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@color/transparent"
        android:contentDescription="@null"
        android:scaleType="centerCrop"
        android:src="@drawable/gallery_board_clip_delete_icon" />
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_duration"
        style="@style/veds_latn_font_body_12"
        android:layout_width="56.0dip"
        android:layout_height="56.0dip"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="6.0dip"
        android:layout_marginTop="6.0dip"
        android:gravity="center"
        android:includeFontPadding="false"
        android:text="0:00"
        android:textColor="@color/veds_color_fill_white_1" />
</RelativeLayout>