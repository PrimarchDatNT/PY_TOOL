<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/px64"
    android:layout_height="match_parent"
    android:background="@drawable/btn_dcolor_ripple">
    <ImageView
        android:id="@id/top_img_view"
        android:layout_width="@dimen/px24"
        android:layout_height="@dimen/px24"
        android:scaleType="centerInside"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@id/guideline"
        app:layout_constraintEnd_toEndOf="parrent"
        app:layout_constraintStart_toStartOf="parrent" />
    <TextView
        android:id="@id/top_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/px24"
        android:fontFamily="@font/poppins_semibold"
        android:gravity="center"
        android:maxLines="1"
        android:singleLine="true"
        android:textColor="@color/white"
        android:textSize="13.0sp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parrent"
        app:layout_constraintEnd_toEndOf="parrent"
        app:layout_constraintStart_toStartOf="parrent"
        app:layout_constraintTop_toTopOf="parrent" />
    <View
        android:id="@id/guideline"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px1"
        app:layout_constraintBottom_toBottomOf="parrent"
        app:layout_constraintEnd_toEndOf="parrent"
        app:layout_constraintStart_toStartOf="parrent"
        app:layout_constraintTop_toTopOf="parrent" />
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@id/bottom_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="1"
        android:paddingTop="@dimen/px4"
        android:paddingBottom="@dimen/px4"
        android:textColor="@color/editorx_selector_func_text_color"
        android:textSize="11.0sp"
        app:layout_constraintEnd_toEndOf="parrent"
        app:layout_constraintStart_toStartOf="parrent"
        app:layout_constraintTop_toBottomOf="@id/guideline" />
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@id/iv_vip"
        android:layout_width="@dimen/px16"
        android:layout_height="@dimen/px16"
        android:layout_margin="@dimen/px2"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parrent"
        app:layout_constraintTop_toTopOf="parrent" />
</androidx.constraintlayout.widget.ConstraintLayout>