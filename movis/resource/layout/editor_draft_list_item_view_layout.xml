<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@id/draft_item_layout"
        android:layout_width="match_parent"
        android:layout_height="120.0dip"
        android:background="@drawable/v4_xiaoying_studio_list_item_bg_selector"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@id/draft_delete_select_layout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="16.0dip"
            android:layout_marginLeft="16.0dip"
            android:gravity="center_vertical"
            android:visibility="gone">
            <ImageButton
                android:id="@id/delete_flag_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:clickable="false"
                android:src="@drawable/edit_btn_del_selector" />
        </LinearLayout>
        <RelativeLayout
            android:id="@id/studio_layout_left"
            android:layout_width="90.0dip"
            android:layout_height="90.0dip"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="16.0dip"
            android:layout_marginLeft="16.0dip"
            android:layout_marginTop="15.0dip"
            android:layout_marginBottom="15.0dip">
            <com.videoai.aivpcore.ui.view.RoundImageView
                android:id="@id/draft_thumb"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:scaleType="centerCrop" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="33.0dip"
                android:layout_alignParentBottom="true"
                android:background="@drawable/editor_shape_draft_cover_gradient" />
            <TextView
                android:id="@id/tv_time_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="5.0dip"
                android:layout_marginLeft="5.0dip"
                android:layout_marginBottom="3.0dip"
                android:textColor="@color/white"
                android:textSize="12.0sp" />
            <TextView
                android:id="@id/tv_slide_flag"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="5.0dip"
                android:layout_marginRight="5.0dip"
                android:layout_marginBottom="4.0dip"
                android:layout_toEndOf="@id/tv_time_duration"
                android:layout_toRightOf="@id/tv_time_duration"
                android:ellipsize="end"
                android:gravity="end|center"
                android:maxLines="1"
                android:textColor="@android:color/white"
                android:textSize="10.0sp"
                android:visibility="gone" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@id/studio_layout_right"
            android:layout_width="match_parent"
            android:layout_height="90.0dip"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="12.0dip"
            android:layout_marginLeft="12.0dip"
            android:layout_marginTop="15.0dip"
            android:layout_marginEnd="16.0dip"
            android:layout_marginRight="16.0dip"
            android:layout_marginBottom="15.0dip">
            <TextView
                android:id="@id/tv_create_time"
                android:layout_width="wrap_content"
                android:layout_height="24.0dip"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:gravity="center"
                android:text="04/25/2016"
                android:textColor="@color/black"
                android:textSize="16.0sp" />
            <TextView
                android:id="@id/tv_exported"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="1.0dip"
                android:background="@drawable/editor_shape_draft_exported"
                android:gravity="center"
                android:paddingStart="10.0dip"
                android:paddingLeft="10.0dip"
                android:paddingTop="2.0dip"
                android:paddingEnd="10.0dip"
                android:paddingRight="10.0dip"
                android:paddingBottom="2.0dip"
                android:text="@string/xiaoying_str_studio_draft_exported"
                android:textColor="@color/color_006bdf"
                android:textSize="12.0sp" />
            <TextView
                android:id="@id/textview_clip_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/tv_exported"
                android:layout_marginStart="5.0dip"
                android:layout_marginLeft="5.0dip"
                android:layout_toEndOf="@id/tv_exported"
                android:layout_toRightOf="@id/tv_exported"
                android:background="@drawable/xiaoying_studio_clip_count"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="11.0sp"
                android:visibility="gone" />
            <com.videoai.aivpcore.common.ui.emoji.EmojiconTextView
                android:id="@id/textview_video_des"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_above="@id/tv_exported"
                android:layout_below="@id/tv_create_time"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="10.0dip"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/color_8E8E93"
                android:textSize="14.0sp" />
            <ImageView
                android:id="@id/draft_img_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:paddingStart="16.0dip"
                android:paddingLeft="16.0dip"
                android:paddingTop="16.0dip"
                android:paddingEnd="2.0dip"
                android:paddingRight="2.0dip"
                android:paddingBottom="2.0dip"
                android:src="@drawable/editor_btn_draft_delete" />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>