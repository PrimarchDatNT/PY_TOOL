<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <include
            android:id="@id/apply_all_layout"
            layout="@layout/editor_clip_apply_all_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <com.videoai.aivpcore.editor.preview.fragment.theme.widget.SeekBarDuration
            android:id="@id/pic_trim_seekbar_duration"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
    <com.videoai.aivpcore.editor.widget.terminator.Terminator
        android:id="@id/terminator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" />
</RelativeLayout>