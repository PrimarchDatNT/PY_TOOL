<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    android:paddingStart="10.0dip"
    android:paddingLeft="10.0dip"
    android:paddingEnd="10.0dip"
    android:paddingRight="10.0dip">
    <RelativeLayout
        android:id="@id/edit_subtitle_font_add_local_layout"
        android:layout_width="120.0dip"
        android:layout_height="50.0dip"
        android:visibility="gone">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:drawableEnd="@drawable/v5_xiaoying_edit_subtitle_font_add_local_selector"
            android:drawableRight="@drawable/v5_xiaoying_edit_subtitle_font_add_local_selector"
            android:drawablePadding="10.0dip"
            android:gravity="center"
            android:paddingStart="5.0dip"
            android:paddingLeft="5.0dip"
            android:paddingEnd="5.0dip"
            android:paddingRight="5.0dip"
            android:text="@string/xiaoying_str_ve_subtitle_add_local_fonts"
            android:textColor="@color/white"
            android:textSize="12.0sp" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@id/edit_subtitle_font_item_layout"
        android:layout_width="120.0dip"
        android:layout_height="50.0dip"
        android:minWidth="120.0dip">
        <TextView
            android:id="@id/txtview_theme_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="5.0dip"
            android:layout_marginLeft="5.0dip"
            android:gravity="center_vertical"
            android:maxWidth="120.0dip"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textSize="17.0sp" />
        <ImageView
            android:id="@id/img_theme_name"
            android:layout_width="95.0dip"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="5.0dip"
            android:layout_marginLeft="5.0dip"
            android:scaleType="centerInside" />
        <ImageView
            android:id="@id/img_download_flag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="5.0dip"
            android:layout_marginLeft="5.0dip"
            android:layout_toEndOf="@id/img_theme_name"
            android:layout_toRightOf="@id/img_theme_name"
            android:scaleType="fitXY"
            android:src="@drawable/xiaoying_camera_icon_downloadsticker"
            android:visibility="visible" />
        <RelativeLayout
            android:id="@id/edit_subtitle_font_item_download_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.videoai.mobile.component.imageview.DynamicLoadingImageView
                android:id="@id/download_progress"
                android:layout_width="20.0dip"
                android:layout_height="20.0dip"
                android:layout_centerInParent="true" />
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>