<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/item_layout"
        android:layout_width="70.0dip"
        android:layout_height="70.0dip"
        android:layout_centerInParent="true"
        android:paddingTop="10.0dip"
        android:paddingEnd="10.0dip"
        android:paddingRight="10.0dip">
        <RelativeLayout
            android:id="@+id/thumb_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:background="@color/transparent">
            <com.videoai.aivpcore.common.bitmapfun.util.RecyclingImageView
                android:id="@+id/icon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="1.0dip"
                android:scaleType="fitXY" />
            <View
                android:layout_width="match_parent"
                android:layout_height="39.0dip"
                android:layout_alignBottom="@id/icon"
                android:background="@drawable/vivavideo_tool_gallery_shadow" />
            <ImageView
                android:id="@+id/img_video_mark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="3.0dip"
                android:layout_marginRight="3.0dip"
                android:layout_marginBottom="1.0dip"
                android:src="@drawable/gallery_icon_audio_type_video"
                android:visibility="gone" />
            <TextView
                android:id="@+id/text_clip_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="3.0dip"
                android:layout_marginLeft="3.0dip"
                android:layout_marginBottom="5.0dip"
                android:gravity="center"
                android:text="222"
                android:textColor="@color/white"
                android:textSize="10.0sp"
                android:visibility="invisible" />
        </RelativeLayout>
        <ImageView
            android:id="@+id/img_focus"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingStart="5.0dip"
            android:paddingLeft="5.0dip"
            android:paddingBottom="5.0dip"
            android:scaleType="fitXY"
            android:src="@drawable/gallery_shape_rect_212121_storyboard"
            android:visibility="gone" />
        <TextView
            android:id="@+id/text_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="5.0dip"
            android:layout_marginLeft="5.0dip"
            android:background="@drawable/gallery_bg_clip_num"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="10.0sp"
            android:visibility="invisible" />
    </RelativeLayout>
    <ImageView
        android:id="@+id/img_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/item_layout"
        android:layout_alignEnd="@id/item_layout"
        android:layout_alignRight="@id/item_layout"
        android:src="@drawable/gallery_selector_edit_clip_delete"
        android:visibility="visible" />
</RelativeLayout>