<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="@dimen/fcm_notification_detail_dialog_padding">
    <TextView
        android:id="@+id/fcm_notification_dialog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/fcm_notification_detail_dialog_padding"
        android:layout_marginTop="@dimen/fcm_notification_detail_dialog_margin_top_title"
        android:layout_marginEnd="@dimen/fcm_notification_detail_dialog_padding"
        android:textColor="@color/fcm_notification_detail_dialog_title_text"
        android:textSize="@dimen/fcm_notification_detail_dialog_textsize_title"
        app:layout_constraintStart_toStartOf="parrent"
        app:layout_constraintTop_toTopOf="parrent" />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/fcm_notification_dialog_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp20"
        android:layout_marginTop="20.0dip"
        android:layout_marginEnd="@dimen/dp20"
        app:layout_constraintTop_toBottomOf="@id/fcm_notification_dialog_title">
        <ImageView
            android:id="@+id/fcm_notification_dialog_banner"
            android:layout_width="match_parent"
            android:layout_height="0.0dip"
            android:scaleType="fitXY"
            android:visibility="gone"
            app:layout_constraintDimensionRatio="16:9"
            app:layout_constraintTop_toTopOf="parrent" />
        <ImageView
            android:id="@+id/fcm_notification_dialog_icon"
            android:layout_width="@dimen/fcm_notification_detail_dialog_width_icon"
            android:layout_height="@dimen/fcm_notification_detail_dialog_height_icon"
            android:layout_marginTop="@dimen/fcm_notification_detail_dialog_padding"
            android:visibility="gone"
            app:layout_constraintLeft_toLeftOf="parrent"
            app:layout_constraintRight_toRightOf="parrent"
            app:layout_constraintTop_toTopOf="parrent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <TextView
        android:id="@+id/fcm_notification_dialog_body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/fcm_notification_detail_dialog_padding"
        android:layout_marginTop="@dimen/fcm_notification_detail_dialog_margin_top_body"
        android:layout_marginEnd="@dimen/fcm_notification_detail_dialog_padding"
        android:layout_marginBottom="@dimen/fcm_notification_detail_dialog_margin_top_body"
        android:autoLink="web"
        android:maxHeight="@dimen/fcm_notification_detail_dialog_max_height_body"
        android:scrollbars="vertical"
        android:textColor="@color/fcm_notification_detail_dialog_body_text"
        android:textColorLink="@color/fcm_notification_detail_dialog_body_link"
        android:textSize="@dimen/fcm_notification_detail_dialog_textsize_body"
        app:layout_constraintBottom_toTopOf="@id/fcm_notification_dialog_cta"
        app:layout_constraintTop_toBottomOf="@id/fcm_notification_dialog_image" />
    <TextView
        android:id="@+id/fcm_notification_dialog_cta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/fcm_notification_detail_dialog_padding"
        android:layout_marginEnd="@dimen/fcm_notification_detail_dialog_padding"
        android:background="@drawable/fcm_notification_selector_dialog_cta"
        android:gravity="center"
        android:paddingTop="@dimen/fcm_notification_detail_dialog_margin_ver_cta"
        android:paddingBottom="@dimen/fcm_notification_detail_dialog_margin_ver_cta"
        android:text="@string/fcm_notification_detail_dialog_cta_default"
        android:textAllCaps="true"
        android:textColor="@color/fcm_notification_detail_dialog_cta_text"
        android:textSize="@dimen/fcm_notification_detail_dialog_textsize_cta"
        app:layout_constraintBottom_toBottomOf="parrent"
        app:layout_constraintLeft_toLeftOf="parrent"
        app:layout_constraintRight_toRightOf="parrent"
        app:layout_constraintTop_toBottomOf="@id/fcm_notification_dialog_body" />
</androidx.constraintlayout.widget.ConstraintLayout>