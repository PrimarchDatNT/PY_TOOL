<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_p54">
    <Button
        android:id="@id/btn_roll_bubble_download_state"
        android:layout_width="wrap_content"
        android:layout_height="35.0dip"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15.0dip"
        android:background="@drawable/editor_shape_rect_white_r16"
        android:gravity="center"
        android:lines="1"
        android:minWidth="113.0dip"
        android:paddingStart="14.0dip"
        android:paddingLeft="14.0dip"
        android:paddingEnd="14.0dip"
        android:paddingRight="14.0dip"
        android:singleLine="true"
        android:text="@string/xiaoying_str_template_state_download"
        android:textColor="@color/white"
        android:textSize="16.0sp" />
    <ProgressBar
        android:id="@id/progressbar_bubble_loading"
        style="?android:progressBarStyleHorizontal"
        android:layout_width="wrap_content"
        android:layout_height="35.0dip"
        android:layout_alignStart="@id/btn_roll_bubble_download_state"
        android:layout_alignLeft="@id/btn_roll_bubble_download_state"
        android:layout_alignTop="@id/btn_roll_bubble_download_state"
        android:layout_alignEnd="@id/btn_roll_bubble_download_state"
        android:layout_alignRight="@id/btn_roll_bubble_download_state"
        android:layout_alignBottom="@id/btn_roll_bubble_download_state"
        android:max="100"
        android:progress="10"
        android:progressDrawable="@drawable/editor_layer_bubble_roll_progressbar_horizontal" />
    <TextView
        android:id="@id/tv_roll_bubble_download_progress"
        android:layout_width="wrap_content"
        android:layout_height="35.0dip"
        android:layout_alignStart="@id/btn_roll_bubble_download_state"
        android:layout_alignLeft="@id/btn_roll_bubble_download_state"
        android:layout_alignTop="@id/btn_roll_bubble_download_state"
        android:layout_alignEnd="@id/btn_roll_bubble_download_state"
        android:layout_alignRight="@id/btn_roll_bubble_download_state"
        android:layout_alignBottom="@id/btn_roll_bubble_download_state"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="13.0sp" />
</RelativeLayout>