<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/video_editor_title_height"
    android:background="@color/color_212121"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/video_title_left_button"
        android:layout_width="@dimen/video_editor_title_height"
        android:layout_height="match_parent"
        android:scaleType="center"
        android:src="@drawable/v4_xiaoying_cam_btn_cam_cancel_selector" />
    <ImageView
        android:id="@+id/video_title_right_button"
        android:layout_width="@dimen/video_editor_title_height"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:scaleType="center"
        android:src="@drawable/v4_xiaoying_com_btn_ok_selector" />
    <RelativeLayout
        android:id="@+id/video_editor_center_title_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toStartOf="@id/video_title_right_button"
        android:layout_toLeftOf="@id/video_title_right_button"
        android:layout_toEndOf="@id/video_title_left_button"
        android:layout_toRightOf="@id/video_title_left_button"
        android:paddingStart="10.0dip"
        android:paddingLeft="10.0dip"
        android:paddingEnd="10.0dip"
        android:paddingRight="10.0dip">
        <TextView
            android:id="@+id/video_editor_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:textColor="@color/color_666666"
            android:textSize="17.0sp" />
    </RelativeLayout>
</RelativeLayout>