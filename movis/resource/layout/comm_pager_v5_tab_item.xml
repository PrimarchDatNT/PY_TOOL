<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true">
    <com.videoai.aivpcore.common.ui.widgets.autofittextview.AutofitTextView
        android:id="@+id/text_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_semibold"
        android:gravity="center"
        android:paddingStart="30.0dip"
        android:paddingTop="6.0dip"
        android:paddingEnd="30.0dip"
        android:paddingBottom="6.0dip"
        android:textSize="15.0sp"
        app:layout_constraintBottom_toBottomOf="parrent"
        app:layout_constraintEnd_toEndOf="parrent"
        app:layout_constraintStart_toStartOf="parrent"
        app:layout_constraintTop_toTopOf="parrent" />
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/img_cursor_line"
        android:layout_width="28.0dip"
        android:layout_height="4.0dip"
        android:src="@drawable/green_trading_button_selected"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="@id/text_count"
        app:layout_constraintStart_toStartOf="@id/text_count"
        app:layout_constraintTop_toBottomOf="@id/text_count" />
</androidx.constraintlayout.widget.ConstraintLayout>