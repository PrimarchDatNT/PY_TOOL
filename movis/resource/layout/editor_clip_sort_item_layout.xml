<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="77.0dip"
    android:layout_height="77.0dip">
    <RelativeLayout
        android:id="@+id/item_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.videoai.aivpcore.xyui.RoundCornerImageView
            android:id="@+id/item_cover"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/xiaoying_com_no_clip_default_square"
            app:cornerRadius="1.5dip" />
        <RelativeLayout
            android:id="@+id/rl_item_info"
            android:layout_width="match_parent"
            android:layout_height="20.0dip"
            android:layout_alignParentBottom="true">
            <TextView
                android:id="@+id/item_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="3.0dip"
                android:layout_marginLeft="3.0dip"
                android:layout_marginBottom="1.0dip"
                android:shadowColor="#40000000"
                android:shadowDy="2.0"
                android:shadowRadius="1.0"
                android:text="00:00"
                android:textColor="@android:color/white"
                android:textSize="11.0sp" />
            <ImageView
                android:id="@+id/iv_item_mask"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="3.0dip"
                android:layout_marginRight="3.0dip"
                android:layout_marginBottom="3.5dip"
                android:src="@drawable/editor_icon_clip_img_flag" />
        </RelativeLayout>
        <TextView
            android:id="@+id/item_order"
            android:layout_width="15.0dip"
            android:layout_height="15.0dip"
            android:layout_marginStart="5.0dip"
            android:layout_marginLeft="5.0dip"
            android:layout_marginTop="5.0dip"
            android:background="@drawable/editor_shape_clip_order"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:textSize="11.0sp"
            android:visibility="gone" />
    </RelativeLayout>
</RelativeLayout>