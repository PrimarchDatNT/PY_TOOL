<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/app_shape_setting_permission_bg"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/px20"
        android:text="@string/xiaoying_studio_video_draft_delete_warning"
        android:textColor="@color/white"
        android:textSize="@dimen/sp14" />
    <TextView
        android:id="@+id/xiaoying_btn_hide"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px42"
        android:layout_marginStart="@dimen/px16"
        android:layout_marginEnd="@dimen/px16"
        android:layout_marginBottom="@dimen/px20"
        android:background="@drawable/app_default_button"
        android:fontFamily="@font/poppins_semibold"
        android:gravity="center"
        android:text="@string/xiaoying_str_com_msg_got_it"
        android:textColor="@color/white"
        android:textSize="@dimen/sp14" />
</LinearLayout>