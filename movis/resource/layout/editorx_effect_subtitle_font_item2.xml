<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cl_font_item_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_subtitle_font_item_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/editorx_shape_effect_font_item_bg_unchoose">
        <ImageView
            android:id="@+id/iv_font_item"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/px6"
            android:scaleType="centerInside" />
        <TextView
            android:id="@+id/tv_font_item_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingStart="6.0dip"
            android:paddingEnd="6.0dip"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textSize="@dimen/sp12" />
        <LinearLayout
            android:id="@+id/layout_local"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="gone">
            <ImageView
                android:id="@+id/iv_add"
                android:layout_width="@dimen/px24"
                android:layout_height="@dimen/px24"
                android:scaleType="centerInside"
                android:src="@drawable/editorx_icon_subtitle_font_add" />
            <TextView
                android:id="@+id/tv_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/editorx_effect_add_font"
                android:textColor="@color/white"
                android:textSize="@dimen/sp12"
                android:textStyle="bold" />
        </LinearLayout>
        <ProgressBar
            android:id="@+id/progress_download"
            style="?android:progressBarStyleHorizontal"
            android:layout_width="@dimen/px48"
            android:layout_height="@dimen/px2"
            android:layout_marginTop="@dimen/px24"
            android:progressDrawable="@drawable/progress_horizontal_bg"
            app:layout_constraintEnd_toEndOf="parrent"
            app:layout_constraintStart_toStartOf="parrent"
            app:layout_constraintTop_toTopOf="parrent" />
        <RelativeLayout
            android:id="@+id/layoutRefresh"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white_p20"
            android:visibility="gone">
            <ImageView
                android:layout_width="@dimen/px24"
                android:layout_height="@dimen/px24"
                android:layout_centerInParent="true"
                android:src="@drawable/editorx_effect_subtitle_more" />
        </RelativeLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <ImageView
        android:id="@+id/iv_font_download_flag"
        android:layout_width="@dimen/px16"
        android:layout_height="@dimen/px16"
        android:layout_margin="@dimen/px2"
        android:src="@drawable/editorx_text_typeface_download_icon"
        app:layout_constraintEnd_toEndOf="parrent"
        app:layout_constraintTop_toTopOf="parrent" />
    <ImageView
        android:id="@+id/iv_font_select_flag"
        android:layout_width="@dimen/px16"
        android:layout_height="@dimen/px16"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parrent"
        app:layout_constraintTop_toTopOf="parrent" />
    <ImageView
        android:id="@+id/iv_vip"
        android:layout_width="@dimen/px16"
        android:layout_height="@dimen/px16"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_margin="@dimen/px2"
        android:src="@drawable/ic_diamon_premium"
        app:layout_constraintBottom_toBottomOf="parrent"
        app:layout_constraintEnd_toEndOf="parrent" />
</androidx.constraintlayout.widget.ConstraintLayout>